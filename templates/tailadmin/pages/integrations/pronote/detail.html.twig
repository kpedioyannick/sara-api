{% extends 'tailadmin/layouts/base.html.twig' %}

{% block content %}
<div class="p-4 mx-auto max-w-6xl md:p-6">
    {% include 'tailadmin/components/breadcrumb.html.twig' %}

    <div class="mb-6 flex items-center justify-between">
        <div>
            <h2 class="text-xl font-semibold text-gray-800 dark:text-white/90">
                D√©tail Int√©gration PRONOTE
            </h2>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                {{ integration.name }}
            </p>
        </div>
        <button
            onclick="syncIntegration({{ integration.id }})"
            class="bg-brand-500 hover:bg-brand-600 inline-flex items-center justify-center gap-2 rounded-lg px-4 py-3 text-sm font-medium text-white transition"
        >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M10 2.5V7.5M10 12.5V17.5M17.5 10H12.5M7.5 10H2.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Synchroniser
        </button>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
        <!-- Informations de connexion -->
        <div class="rounded-2xl border border-gray-200 bg-white p-6 dark:border-gray-800 dark:bg-white/3">
            <h3 class="mb-4 text-lg font-semibold text-gray-800 dark:text-white/90">
                Informations de connexion
            </h3>
            <dl class="space-y-3">
                <div>
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">√âl√®ve</dt>
                    <dd class="mt-1 text-sm text-gray-900 dark:text-white/90">
                        {% if integration.student %}
                            {{ integration.student.firstName }} {{ integration.student.lastName }}
                        {% else %}
                            <span class="text-gray-400">Non associ√©</span>
                        {% endif %}
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Statut</dt>
                    <dd class="mt-1">
                        <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium {% if integration.isActive %}bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400{% else %}bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-400{% endif %}">
                            {% if integration.isActive %}Actif{% else %}Inactif{% endif %}
                        </span>
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Derni√®re synchronisation</dt>
                    <dd class="mt-1 text-sm text-gray-900 dark:text-white/90">
                        {% if integration.lastSyncAt %}
                            {{ integration.lastSyncAt|date('d/m/Y H:i') }}
                        {% else %}
                            <span class="text-gray-400">Jamais</span>
                        {% endif %}
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Cr√©√© le</dt>
                    <dd class="mt-1 text-sm text-gray-900 dark:text-white/90">
                        {{ integration.createdAt|date('d/m/Y H:i') }}
                    </dd>
                </div>
            </dl>
        </div>

        <!-- Credentials (masqu√©s) -->
        <div class="rounded-2xl border border-gray-200 bg-white p-6 dark:border-gray-800 dark:bg-white/3">
            <h3 class="mb-4 text-lg font-semibold text-gray-800 dark:text-white/90">
                Credentials (masqu√©s)
            </h3>
            {% if integration.credentials %}
                <div class="space-y-2">
                    <div>
                        <span class="text-sm font-medium text-gray-500 dark:text-gray-400">URL:</span>
                        <span class="ml-2 text-sm text-gray-900 dark:text-white/90 font-mono">
                            {{ integration.credentials.pronote_url|slice(0, 50) }}...
                        </span>
                    </div>
                    <div>
                        <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Username:</span>
                        <span class="ml-2 text-sm text-gray-900 dark:text-white/90 font-mono">
                            {{ integration.credentials.username|slice(0, 20) }}...
                        </span>
                    </div>
                </div>
            {% else %}
                <p class="text-sm text-gray-400">Aucun credential stock√©</p>
            {% endif %}
        </div>
    </div>

    <!-- Metadata -->
    <div class="mt-6 rounded-2xl border border-gray-200 bg-white p-6 dark:border-gray-800 dark:bg-white/3">
        <h3 class="mb-4 text-lg font-semibold text-gray-800 dark:text-white/90">
            M√©tadonn√©es
        </h3>
        {% if integration.metadata %}
            <div class="space-y-4">
                <!-- Informations de synchronisation -->
                <div>
                    <h4 class="mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">R√©sum√© de la synchronisation</h4>
                    <div class="rounded-lg bg-gray-50 p-4 dark:bg-gray-800">
                        <dl class="grid grid-cols-2 gap-3">
                            <div>
                                <dt class="text-xs text-gray-500 dark:text-gray-400">üìö Devoirs</dt>
                                <dd class="mt-1 text-sm font-semibold text-gray-900 dark:text-white/90">{{ integration.metadata.sync_data.homework ?? 0 }}</dd>
                            </div>
                            <div>
                                <dt class="text-xs text-gray-500 dark:text-gray-400">üìÖ Cours</dt>
                                <dd class="mt-1 text-sm font-semibold text-gray-900 dark:text-white/90">{{ integration.metadata.sync_data.lessons ?? 0 }}</dd>
                            </div>
                            <div>
                                <dt class="text-xs text-gray-500 dark:text-gray-400">‚ùå Absences</dt>
                                <dd class="mt-1 text-sm font-semibold text-gray-900 dark:text-white/90">{{ integration.metadata.sync_data.absences ?? 0 }}</dd>
                            </div>
                            <div>
                                <dt class="text-xs text-gray-500 dark:text-gray-400">üìä √âvaluations</dt>
                                <dd class="mt-1 text-sm font-semibold text-gray-900 dark:text-white/90">
                                    {% if integration.metadata.evaluations is defined %}
                                        {{ integration.metadata.evaluations|length }}
                                    {% elseif integration.metadata.notes is defined %}
                                        {{ integration.metadata.notes|length }}
                                    {% else %}
                                        0
                                    {% endif %}
                                </dd>
                            </div>
                            <div>
                                <dt class="text-xs text-gray-500 dark:text-gray-400">üìî Carnet de correspondance</dt>
                                <dd class="mt-1 text-sm font-semibold text-gray-900 dark:text-white/90">
                                    {% if integration.metadata.notebook is defined %}
                                        {{ integration.metadata.notebook|length }} messages
                                    {% elseif integration.metadata.carnet_correspondance is defined %}
                                        {{ integration.metadata.carnet_correspondance|length }} messages
                                    {% else %}
                                        0 messages
                                    {% endif %}
                                </dd>
                            </div>
                            {% if integration.metadata.connected_at %}
                            <div>
                                <dt class="text-xs text-gray-500 dark:text-gray-400">Connect√© le</dt>
                                <dd class="mt-1 text-sm text-gray-900 dark:text-white/90">{{ integration.metadata.connected_at }}</dd>
                            </div>
                            {% endif %}
                        </dl>
                    </div>
                </div>

                {% if integration.metadata.user_info %}
                    <div>
                        <h4 class="mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Informations utilisateur</h4>
                        <div class="rounded-lg bg-gray-50 p-4 dark:bg-gray-800">
                            <dl class="grid grid-cols-2 gap-3">
                                <div>
                                    <dt class="text-xs text-gray-500 dark:text-gray-400">Nom</dt>
                                    <dd class="mt-1 text-sm text-gray-900 dark:text-white/90">{{ integration.metadata.user_info.name ?? 'N/A' }}</dd>
                                </div>
                                <div>
                                    <dt class="text-xs text-gray-500 dark:text-gray-400">Classe</dt>
                                    <dd class="mt-1 text-sm text-gray-900 dark:text-white/90">{{ integration.metadata.user_info.class_name ?? 'N/A' }}</dd>
                                </div>
                                <div>
                                    <dt class="text-xs text-gray-500 dark:text-gray-400">√âtablissement</dt>
                                    <dd class="mt-1 text-sm text-gray-900 dark:text-white/90">{{ integration.metadata.user_info.school ?? 'N/A' }}</dd>
                                </div>
                            </dl>
                        </div>
                    </div>
                {% endif %}

                <!-- √âvaluations / Notes -->
                <div>
                    <h4 class="mb-3 text-sm font-medium text-gray-700 dark:text-gray-300">üìä √âvaluations / Notes</h4>
                    {% set evaluations = integration.metadata.evaluations ?? integration.metadata.notes ?? [] %}
                    {% if evaluations|length > 0 %}
                        <div class="space-y-3">
                            {% for evaluation in evaluations %}
                            <div class="rounded-lg border border-gray-200 bg-white p-4 dark:border-gray-700 dark:bg-gray-800/50">
                                <div class="flex items-start justify-between">
                                    <div class="flex-1">
                                        <h5 class="text-sm font-semibold text-gray-900 dark:text-white/90">
                                            {{ evaluation.name ?? evaluation.subject ?? '√âvaluation' }}
                                        </h5>
                                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                                            {{ evaluation.subject ?? 'N/A' }}
                                        </p>
                                        {% if evaluation.date %}
                                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                                            üìÖ {{ evaluation.date|date('d/m/Y') }}
                                        </p>
                                        {% endif %}
                                    </div>
                                    <div class="text-right">
                                        {% if evaluation.average is not null %}
                                        <div class="text-sm font-bold text-brand-600 dark:text-brand-400">
                                            {{ evaluation.average }}/20
                                        </div>
                                        {% endif %}
                                        {% if evaluation.coefficient %}
                                        <div class="text-xs text-gray-500 dark:text-gray-400">
                                            Coef. {{ evaluation.coefficient }}
                                        </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="rounded-lg border border-gray-200 bg-gray-50 p-4 text-sm text-gray-500 dark:border-gray-700 dark:bg-gray-800/50 dark:text-gray-400">
                            Aucune √©valuation disponible pour le moment
                        </div>
                    {% endif %}
                </div>

                <!-- Bulletin de notes -->
                <div>
                    <h4 class="mb-3 text-sm font-medium text-gray-700 dark:text-gray-300">üìö Bulletin de notes</h4>
                    {% if integration.metadata.gradebook is defined and integration.metadata.gradebook %}
                        {% set gradebook = integration.metadata.gradebook %}
                        {% if gradebook.periods is defined and gradebook.periods|length > 0 %}
                            <div class="space-y-4">
                                {% for period in gradebook.periods %}
                                <div class="rounded-lg border border-gray-200 bg-white p-4 dark:border-gray-700 dark:bg-gray-800/50">
                                    <h5 class="mb-2 text-sm font-semibold text-gray-900 dark:text-white/90">
                                        {{ period.name ?? 'P√©riode' }}
                                    </h5>
                                    {% if period.average is not null %}
                                    <p class="text-sm text-gray-700 dark:text-gray-300">
                                        Moyenne g√©n√©rale : <span class="font-semibold">{{ period.average }}/20</span>
                                    </p>
                                    {% endif %}
                                </div>
                                {% endfor %}
                            </div>
                        {% elseif gradebook.subjects is defined and gradebook.subjects|length > 0 %}
                            <div class="space-y-3">
                                {% for subject in gradebook.subjects %}
                                <div class="rounded-lg border border-gray-200 bg-white p-4 dark:border-gray-700 dark:bg-gray-800/50">
                                    <h5 class="text-sm font-semibold text-gray-900 dark:text-white/90">
                                        {{ subject.name ?? 'Mati√®re' }}
                                    </h5>
                                    {% if subject.average is not null %}
                                    <p class="mt-1 text-sm text-gray-700 dark:text-gray-300">
                                        Moyenne : <span class="font-semibold">{{ subject.average }}/20</span>
                                    </p>
                                    {% endif %}
                                </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="rounded-lg border border-gray-200 bg-gray-50 p-4 text-sm text-gray-500 dark:border-gray-700 dark:bg-gray-800/50 dark:text-gray-400">
                                Donn√©es du bulletin disponibles mais format non reconnu
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="rounded-lg border border-gray-200 bg-gray-50 p-4 text-sm text-gray-500 dark:border-gray-700 dark:bg-gray-800/50 dark:text-gray-400">
                            Aucun bulletin de notes disponible pour le moment
                        </div>
                    {% endif %}
                </div>

                <!-- Carnet de correspondance -->
                <div>
                    <h4 class="mb-3 text-sm font-medium text-gray-700 dark:text-gray-300">üìî Carnet de correspondance</h4>
                    {% set notebook = integration.metadata.notebook ?? integration.metadata.carnet_correspondance ?? [] %}
                    {% if notebook|length > 0 %}
                        <div class="space-y-3">
                            {% for message in notebook %}
                            <div class="rounded-lg border border-gray-200 bg-white p-4 dark:border-gray-700 dark:bg-gray-800/50">
                                <div class="mb-2 flex items-start justify-between">
                                    <div class="flex-1">
                                        {% if message.kind %}
                                        <span class="inline-flex items-center rounded-full bg-brand-100 px-2.5 py-0.5 text-xs font-medium text-brand-800 dark:bg-brand-900/30 dark:text-brand-300">
                                            {{ message.kind }}
                                        </span>
                                        {% endif %}
                                        {% if message.date %}
                                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                                            üìÖ {{ message.date|date('d/m/Y') }}
                                        </p>
                                        {% endif %}
                                        {% if message.author and message.author != 'N/A' %}
                                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                                            üë§ {{ message.author }}
                                        </p>
                                        {% endif %}
                                    </div>
                                </div>
                                {% if message.content %}
                                <div class="mt-2 text-sm text-gray-700 dark:text-gray-300">
                                    {{ message.content|raw }}
                                </div>
                                {% elseif message.raw.reason %}
                                <div class="mt-2 text-sm text-gray-700 dark:text-gray-300">
                                    {{ message.raw.reason }}
                                </div>
                                {% elseif message.raw.name %}
                                <div class="mt-2 text-sm text-gray-700 dark:text-gray-300">
                                    {{ message.raw.name }}
                                </div>
                                {% endif %}
                            </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="rounded-lg border border-gray-200 bg-gray-50 p-4 text-sm text-gray-500 dark:border-gray-700 dark:bg-gray-800/50 dark:text-gray-400">
                            Aucun message dans le carnet de correspondance pour le moment
                        </div>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <p class="text-sm text-gray-400">Aucune m√©tadonn√©e disponible</p>
        {% endif %}
    </div>
</div>

<script>
async function syncIntegration(id) {
    if (!confirm('Voulez-vous synchroniser cette int√©gration PRONOTE ?')) {
        return;
    }

    try {
        const response = await fetch(`/admin/integrations/pronote/${id}/sync`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest',
            },
        });

        const result = await response.json();

        if (result.success) {
            alert('Synchronisation d√©marr√©e avec succ√®s');
            setTimeout(() => location.reload(), 2000);
        } else {
            alert('Erreur: ' + (result.message || 'Erreur inconnue'));
        }
    } catch (error) {
        console.error('Erreur:', error);
        alert('Une erreur est survenue lors de la synchronisation');
    }
}
</script>
{% endblock %}

