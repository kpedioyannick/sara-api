{% extends 'tailadmin/layouts/base.html.twig' %}

{% block content %}
<div 
    x-data="integrationManager({{ integrations|json_encode|e('html_attr') }})"
    class="p-4 mx-auto max-w-(--breakpoint-2xl) md:p-6"
>
    {% include 'tailadmin/components/breadcrumb.html.twig' %}

    <!-- Header with Add Button -->
    <div class="mb-6 flex flex-col justify-between gap-3 sm:flex-row sm:items-center">
        <h2 class="text-xl font-semibold text-gray-800 dark:text-white/90">
            Intégrations
        </h2>
        <div x-data="{isModalOpen: false}">
            <button
                @click="isModalOpen = !isModalOpen"
                class="bg-brand-500 hover:bg-brand-600 inline-flex items-center justify-center gap-2 rounded-lg px-4 py-3 text-sm font-medium text-white transition"
            >
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                    <path d="M5 10.0002H15.0006M10.0002 5V15.0006" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                Ajouter une intégration
            </button>

            <!-- Modal Add Integration -->
            <div
                x-show="isModalOpen"
                class="modal fixed inset-0 z-99999 flex items-center justify-center overflow-y-auto p-5"
                style="display: none;"
            >
                <div class="modal-close-btn fixed inset-0 h-full w-full bg-gray-400/50 backdrop-blur-[32px]" @click="isModalOpen = false"></div>
                <div
                    @click.outside="isModalOpen = false"
                    class="relative w-full max-w-[558px] rounded-3xl bg-white p-6 lg:p-10 dark:bg-gray-900"
                >
                    <button
                        @click="isModalOpen = false"
                        class="absolute top-3 right-3 z-999 flex h-9.5 w-9.5 items-center justify-center rounded-full bg-gray-100 text-gray-400 transition-colors hover:bg-gray-200 hover:text-gray-700 sm:top-6 sm:right-6 sm:h-11 sm:w-11 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
                    >
                        <svg class="fill-current" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path fill-rule="evenodd" clip-rule="evenodd" d="M6.04289 16.5413C5.65237 16.9318 5.65237 17.565 6.04289 17.9555C6.43342 18.346 7.06658 18.346 7.45711 17.9555L11.9987 13.4139L16.5408 17.956C16.9313 18.3466 17.5645 18.3466 17.955 17.956C18.3455 17.5655 18.3455 16.9323 17.955 16.5418L13.4129 11.9997L17.955 7.4576C18.3455 7.06707 18.3455 6.43391 17.955 6.04338C17.5645 5.65286 16.9313 5.65286 16.5408 6.04338L11.9987 10.5855L7.45711 6.0439C7.06658 5.65338 6.43342 5.65338 6.04289 6.0439C5.65237 6.43442 5.65237 7.06759 6.04289 7.45811L10.5845 11.9997L6.04289 16.5413Z" fill=""/>
                        </svg>
                    </button>

                    <div>
                        <h4 class="text-title-xs mb-1 font-semibold text-gray-800 dark:text-white/90">
                            Nouvelle intégration
                        </h4>
                        <p class="mb-7 text-sm leading-6 text-gray-500 dark:text-gray-400">
                            Configurez une intégration et ajoutez une brève explication pour l'équipe.
                        </p>
                        <form @submit.prevent="createIntegration()">
                            <div class="space-y-4">
                                <div>
                                    <label class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                                        Sélectionner l'application
                                    </label>
                                    <select
                                        x-model="formData.type"
                                        class="dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full appearance-none rounded-lg border border-gray-300 bg-transparent bg-none px-4 py-2.5 pr-11 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30"
                                    >
                                        <option value="">Sélectionner une option</option>
                                        <option value="pronote">Pronote</option>
                                        <option value="ecole_directe">Ecole Directe</option>
                                        <option value="other">Autre</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                                        Nom
                                    </label>
                                    <input
                                        type="text"
                                        x-model="formData.name"
                                        placeholder="Entrez le nom de l'intégration"
                                        class="dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30"
                                    />
                                </div>
                                <div>
                                    <label class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                                        Client ID
                                    </label>
                                    <input
                                        type="text"
                                        x-model="formData.clientId"
                                        placeholder="Entrez le Client ID ici"
                                        class="dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30"
                                    />
                                </div>
                                <div>
                                    <label class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                                        Client Secret
                                    </label>
                                    <input
                                        type="text"
                                        x-model="formData.clientSecret"
                                        placeholder="Entrez le Client Secret ici"
                                        class="dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30"
                                    />
                                </div>
                                <div>
                                    <label class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                                        URI de base d'authentification
                                    </label>
                                    <input
                                        type="text"
                                        x-model="formData.authBaseUri"
                                        placeholder="Collez l'URL ici"
                                        class="dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30"
                                    />
                                </div>
                            </div>

                            <p class="mt-4 text-sm text-gray-500 dark:text-gray-400">
                                Collez l'URI complète, et nous extrairons automatiquement et afficherons uniquement le sous-domaine pour référence rapide.
                            </p>
                        </form>
                        <div class="mt-8 flex w-full items-center justify-between gap-3">
                            <button
                                @click="isModalOpen = false"
                                type="button"
                                class="shadow-theme-xs s flex w-full justify-center rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-800 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-white/[0.03] dark:hover:text-gray-200"
                            >
                                Fermer
                            </button>
                            <button
                                @click="createIntegration(); isModalOpen = false"
                                type="button"
                                class="bg-brand-500 shadow-theme-xs hover:bg-brand-600 flex w-full justify-center rounded-lg px-4 py-3 text-sm font-medium text-white"
                            >
                                Ajouter l'intégration
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Integrations Grid -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 xl:grid-cols-3">
        <template x-for="integration in integrations" :key="integration.id">
            <article class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/3">
                <div class="relative p-5 pb-9">
                    <div class="mb-5 inline-flex h-10 w-10 items-center justify-center">
                        <template x-if="integration.type === 'pronote'">
                            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-100 dark:bg-blue-900/30">
                                <span class="text-xl font-bold text-blue-600 dark:text-blue-400">P</span>
                            </div>
                        </template>
                        <template x-if="integration.type === 'ecole_directe'">
                            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-green-100 dark:bg-green-900/30">
                                <span class="text-xl font-bold text-green-600 dark:text-green-400">ED</span>
                            </div>
                        </template>
                        <template x-if="integration.type !== 'pronote' && integration.type !== 'ecole_directe'">
                            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-gray-100 dark:bg-gray-800">
                                <span class="text-xl font-bold text-gray-600 dark:text-gray-400">?</span>
                            </div>
                        </template>
                    </div>
                    <h3 class="mb-3 text-lg font-semibold text-gray-800 dark:text-white/90" x-text="integration.name"></h3>
                    <p class="max-w-xs text-sm text-gray-500 dark:text-gray-400">
                        <template x-if="integration.type === 'pronote'">
                            Connectez Pronote pour synchroniser les notes, devoirs et informations scolaires.
                        </template>
                        <template x-if="integration.type === 'ecole_directe'">
                            Connectez Ecole Directe pour accéder aux informations scolaires et aux devoirs.
                        </template>
                        <template x-if="integration.type !== 'pronote' && integration.type !== 'ecole_directe'">
                            Intégration personnalisée configurée.
                        </template>
                    </p>
                    <div x-data="{openDropDown: false}" class="absolute top-5 right-5 h-fit">
                        <button
                            @click="openDropDown = !openDropDown"
                            :class="openDropDown ? 'text-gray-700 dark:text-white' : 'text-gray-400 hover:text-gray-700 dark:hover:text-white'"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                                <path d="M5 10.0044L5 9.99609M15 10.0044V9.99609M10 10.0044V9.99609" stroke="currentColor" stroke-width="3.5" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </button>
                        <div
                            x-show="openDropDown"
                            @click.outside="openDropDown = false"
                            class="shadow-theme-lg dark:bg-gray-dark absolute top-full right-0 z-40 w-40 space-y-1 rounded-2xl border border-gray-200 bg-white p-2 dark:border-gray-800"
                            style="display: none;"
                        >
                            <button
                                @click="deleteIntegration(integration.id); openDropDown = false"
                                class="text-theme-xs flex w-full rounded-lg px-3 py-2 text-left font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-700 dark:text-gray-400 dark:hover:bg-white/5 dark:hover:text-gray-300"
                            >
                                Supprimer
                            </button>
                        </div>
                    </div>
                </div>
                <div class="flex items-center justify-between border-t border-gray-200 p-5 dark:border-gray-800">
                    <div class="flex gap-3">
                        <button
                            @click="editIntegration(integration)"
                            class="shadow-theme-xs inline-flex h-11 w-11 items-center justify-center rounded-lg border border-gray-300 text-gray-700 dark:border-gray-700 dark:text-gray-400"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                                <path d="M5.64615 4.59906C5.05459 4.25752 4.29808 4.46015 3.95654 5.05171L2.69321 7.23986C2.35175 7.83128 2.5544 8.58754 3.14582 8.92899C3.97016 9.40493 3.97017 10.5948 3.14583 11.0707C2.55441 11.4122 2.35178 12.1684 2.69323 12.7598L3.95657 14.948C4.2981 15.5395 5.05461 15.7422 5.64617 15.4006C6.4706 14.9247 7.50129 15.5196 7.50129 16.4715C7.50129 17.1545 8.05496 17.7082 8.73794 17.7082H11.2649C11.9478 17.7082 12.5013 17.1545 12.5013 16.4717C12.5013 15.5201 13.5315 14.9251 14.3556 15.401C14.9469 15.7423 15.7029 15.5397 16.0443 14.9485L17.3079 12.7598C17.6494 12.1684 17.4467 11.4121 16.8553 11.0707C16.031 10.5948 16.031 9.40494 16.8554 8.92902C17.4468 8.58757 17.6494 7.83133 17.3079 7.23992L16.0443 5.05123C15.7029 4.45996 14.9469 4.25737 14.3556 4.59874C13.5315 5.07456 12.5013 4.47961 12.5013 3.52798C12.5013 2.84515 11.9477 2.2915 11.2649 2.2915L8.73795 2.2915C8.05496 2.2915 7.50129 2.84518 7.50129 3.52816C7.50129 4.48015 6.47059 5.07505 5.64615 4.59906Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M12.5714 9.99977C12.5714 11.4196 11.4204 12.5706 10.0005 12.5706C8.58069 12.5706 7.42969 11.4196 7.42969 9.99977C7.42969 8.57994 8.58069 7.42894 10.0005 7.42894C11.4204 7.42894 12.5714 8.57994 12.5714 9.99977Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </button>
                    </div>
                    <div x-data="{ switcherToggle: integration.isActive }">
                        <label class="cursor-pointer">
                            <div class="relative">
                                <input
                                    type="checkbox"
                                    :checked="integration.isActive"
                                    @change="toggleIntegration(integration.id, $event.target.checked, integration)"
                                    class="sr-only"
                                />
                                <div
                                    class="block h-6 w-11 rounded-full"
                                    :class="integration.isActive ? 'bg-brand-500 dark:bg-brand-500' : 'bg-gray-200 dark:bg-white/10'"
                                ></div>
                                <div
                                    :class="integration.isActive ? 'translate-x-full': 'translate-x-0'"
                                    class="shadow-theme-sm absolute top-0.5 left-0.5 h-5 w-5 rounded-full bg-white duration-200 ease-linear"
                                ></div>
                            </div>
                        </label>
                    </div>
                </div>
            </article>
        </template>
    </div>

    <!-- Right Sheet Overlay -->
    <div
        x-show="rightSheetOpen"
        @click="closeSheet()"
        x-transition:enter="transition-opacity ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition-opacity ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 z-50 bg-black/50 backdrop-blur-sm"
        style="display: none;"
    ></div>

    <!-- Right Sheet Panel -->
    <div
        x-show="rightSheetOpen"
        @click.away="closeSheet()"
        x-transition:enter="transition-transform ease-out duration-300"
        x-transition:enter-start="translate-x-full"
        x-transition:enter-end="translate-x-0"
        x-transition:leave="transition-transform ease-in duration-200"
        x-transition:leave-start="translate-x-0"
        x-transition:leave-end="translate-x-full"
        class="fixed right-0 top-0 z-50 h-full w-full max-w-md overflow-y-auto bg-white shadow-2xl dark:bg-gray-900"
        style="display: none;"
    >
        <div class="flex h-full flex-col">
            <!-- Header -->
            <div class="sticky top-0 z-10 border-b border-gray-200 bg-white px-6 py-4 dark:border-gray-800 dark:bg-gray-900">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white/90" x-text="currentIntegration.name"></h3>
                    <button
                        @click="closeSheet()"
                        class="rounded-lg p-2 text-gray-400 transition-colors hover:bg-gray-100 hover:text-gray-600 dark:hover:bg-gray-800 dark:hover:text-gray-300"
                    >
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Content -->
            <div class="flex-1 p-6">
                <p class="mb-6 text-sm text-gray-500 dark:text-gray-400">
                    <template x-if="currentIntegration.type === 'pronote'">
                        Configurez Pronote pour synchroniser les notes, devoirs et informations scolaires.
                    </template>
                    <template x-if="currentIntegration.type === 'ecole_directe'">
                        Configurez Ecole Directe pour accéder aux informations scolaires et aux devoirs.
                    </template>
                </p>

                <form @submit.prevent="saveIntegration()">
                    <div class="space-y-4">
                        <div>
                            <label class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                                Client ID<span class="text-error-500">*</span>
                            </label>
                            <input
                                type="text"
                                x-model="currentIntegration.clientId"
                                placeholder="Entrez le Client ID ici"
                                class="dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30"
                                required
                            />
                        </div>
                        <div>
                            <label class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                                Client Secret<span class="text-error-500">*</span>
                            </label>
                            <input
                                type="text"
                                x-model="currentIntegration.clientSecret"
                                placeholder="Entrez le Client Secret ici"
                                class="dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30"
                                required
                            />
                        </div>
                        <div>
                            <label class="mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400">
                                URI de base d'authentification<span class="text-error-500">*</span>
                            </label>
                            <input
                                type="text"
                                x-model="currentIntegration.authBaseUri"
                                placeholder="Collez l'URL ici"
                                class="dark:bg-dark-900 shadow-theme-xs focus:border-brand-300 focus:ring-brand-500/10 dark:focus:border-brand-800 h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:ring-3 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30"
                                required
                            />
                        </div>
                    </div>

                    <div class="mt-8 flex w-full items-center justify-between gap-3">
                        <button
                            @click="closeSheet()"
                            type="button"
                            class="shadow-theme-xs flex w-full justify-center rounded-lg border border-gray-300 bg-white px-4 py-3 text-sm font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-800 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-white/[0.03] dark:hover:text-gray-200"
                        >
                            Annuler
                        </button>
                        <button
                            type="submit"
                            class="bg-brand-500 shadow-theme-xs hover:bg-brand-600 flex w-full justify-center rounded-lg px-4 py-3 text-sm font-medium text-white"
                            :disabled="submitting"
                        >
                            <span x-show="!submitting">Activer</span>
                            <span x-show="submitting">Enregistrement...</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function integrationManager(integrationsData) {
    return {
        integrations: integrationsData || [],
        rightSheetOpen: false,
        currentIntegration: {},
        submitting: false,
        formData: {
            name: '',
            type: '',
            clientId: '',
            clientSecret: '',
            authBaseUri: ''
        },
        openSheet(integration) {
            this.currentIntegration = {
                id: integration.id,
                name: integration.name,
                type: integration.type,
                clientId: integration.clientId || '',
                clientSecret: integration.clientSecret || '',
                authBaseUri: integration.authBaseUri || '',
                isActive: true
            };
            this.rightSheetOpen = true;
        },
        closeSheet() {
            this.rightSheetOpen = false;
            this.currentIntegration = {};
        },
        async toggleIntegration(id, isActive, integration) {
            // Si on active une intégration désactivée, ouvrir le rightSheet
            if (isActive && !integration.isActive) {
                this.openSheet(integration);
                return;
            }

            // Si on désactive, mettre à jour directement
            if (!isActive) {
                try {
                    const response = await fetch(`{{ path('admin_integrations_update', {id: '__ID__'}) }}`.replace('__ID__', id), {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest',
                        },
                        body: JSON.stringify({ isActive: false }),
                    });

                    const result = await response.json();

                    if (result.success) {
                        const integrationItem = this.integrations.find(i => i.id === id);
                        if (integrationItem) {
                            integrationItem.isActive = false;
                        }
                    } else {
                        if (window.showAlert) {
                            window.showAlert(result.message, 'error');
                        } else {
                            alert(result.message);
                        }
                    }
                } catch (error) {
                    console.error('Erreur:', error);
                    if (window.showAlert) {
                        window.showAlert('Une erreur est survenue', 'error');
                    } else {
                        alert('Une erreur est survenue');
                    }
                }
            }
        },
        async saveIntegration() {
            if (!this.currentIntegration.clientId || !this.currentIntegration.clientSecret || !this.currentIntegration.authBaseUri) {
                if (window.showAlert) {
                    window.showAlert('Tous les champs sont requis', 'error');
                } else {
                    alert('Tous les champs sont requis');
                }
                return;
            }

            this.submitting = true;

            try {
                const response = await fetch(`{{ path('admin_integrations_update', {id: '__ID__'}) }}`.replace('__ID__', this.currentIntegration.id), {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest',
                    },
                    body: JSON.stringify({
                        clientId: this.currentIntegration.clientId,
                        clientSecret: this.currentIntegration.clientSecret,
                        authBaseUri: this.currentIntegration.authBaseUri,
                        isActive: true
                    }),
                });

                const result = await response.json();

                if (result.success) {
                    const integration = this.integrations.find(i => i.id === this.currentIntegration.id);
                    if (integration) {
                        integration.clientId = this.currentIntegration.clientId;
                        integration.clientSecret = this.currentIntegration.clientSecret;
                        integration.authBaseUri = this.currentIntegration.authBaseUri;
                        integration.isActive = true;
                    }
                    this.closeSheet();
                    if (window.showAlert) {
                        window.showAlert('Intégration activée avec succès', 'success');
                    } else {
                        alert('Intégration activée avec succès');
                    }
                } else {
                    if (window.showAlert) {
                        window.showAlert(result.message, 'error');
                    } else {
                        alert(result.message);
                    }
                }
            } catch (error) {
                console.error('Erreur:', error);
                if (window.showAlert) {
                    window.showAlert('Une erreur est survenue', 'error');
                } else {
                    alert('Une erreur est survenue');
                }
            } finally {
                this.submitting = false;
            }
        },
        async createIntegration() {
            if (!this.formData.name || !this.formData.type) {
                if (window.showAlert) {
                    window.showAlert('Le nom et le type sont requis', 'error');
                } else {
                    alert('Le nom et le type sont requis');
                }
                return;
            }

            try {
                const response = await fetch('{{ path('admin_integrations_create') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest',
                    },
                    body: JSON.stringify(this.formData),
                });

                const result = await response.json();

                if (result.success) {
                    if (window.showAlert) {
                        window.showAlert(result.message, 'success');
                    } else {
                        alert(result.message);
                    }
                    this.formData = {
                        name: '',
                        type: '',
                        clientId: '',
                        clientSecret: '',
                        authBaseUri: ''
                    };
                    setTimeout(() => location.reload(), 1000);
                } else {
                    if (window.showAlert) {
                        window.showAlert(result.message, 'error');
                    } else {
                        alert(result.message);
                    }
                }
            } catch (error) {
                console.error('Erreur:', error);
                if (window.showAlert) {
                    window.showAlert('Une erreur est survenue', 'error');
                } else {
                    alert('Une erreur est survenue');
                }
            }
        },
        async deleteIntegration(id) {
            if (!confirm('Êtes-vous sûr de vouloir supprimer cette intégration ?')) {
                return;
            }

            try {
                const response = await fetch(`{{ path('admin_integrations_delete', {id: '__ID__'}) }}`.replace('__ID__', id), {
                    method: 'DELETE',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                    },
                });

                const result = await response.json();

                if (result.success) {
                    if (window.showAlert) {
                        window.showAlert(result.message, 'success');
                    } else {
                        alert(result.message);
                    }
                    this.integrations = this.integrations.filter(i => i.id !== id);
                } else {
                    if (window.showAlert) {
                        window.showAlert(result.message, 'error');
                    } else {
                        alert(result.message);
                    }
                }
            } catch (error) {
                console.error('Erreur:', error);
                if (window.showAlert) {
                    window.showAlert('Une erreur est survenue', 'error');
                } else {
                    alert('Une erreur est survenue');
                }
            }
        },
        editIntegration(integration) {
            this.openSheet(integration);
        }
    };
}
</script>
