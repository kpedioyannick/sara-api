{% extends 'tailadmin/layouts/base.html.twig' %}

{% block content %}
<div 
    x-data="pathManager()"
    data-paths='{{ paths|json_encode|e('html_attr') }}'
    data-classrooms='{{ classrooms|json_encode|e('html_attr') }}'
    data-subjects='{{ subjects|json_encode|e('html_attr') }}'
    data-chapters='{{ chapters|json_encode|e('html_attr') }}'
    class="p-4 mx-auto max-w-(--breakpoint-2xl) md:p-6"
>
    {% include 'tailadmin/components/breadcrumb.html.twig' %}

    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="px-6 py-5 border-b border-gray-100 dark:border-gray-800">
            <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                <div>
                    <h3 class="text-base font-medium text-gray-800 dark:text-white/90">
                        Activités scolaires
                    </h3>
                </div>
                <div class="flex items-center gap-3">
                    <a
                        href="{{ path('admin_paths_create') }}"
                        class="inline-flex items-center gap-2 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
                    >
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        Nouveau parcours
                    </a>
                </div>
            </div>
        </div>

        <!-- Filtres -->
        <div class="border-b border-gray-100 p-4 dark:border-gray-800">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
                <input
                    type="text"
                    x-model="searchQuery"
                    @input.debounce.300ms="applyFilters()"
                    placeholder="Rechercher..."
                    class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                />
                <select
                    x-model="selectedType"
                    @change="applyFilters()"
                    class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                >
                    <option value="">Tous les types</option>
                    <option value="h5p">H5P</option>
                    <option value="video">Vidéo</option>
                    <option value="link">Lien</option>
                    <option value="kahoot">Kahoot</option>
                </select>
                <select
                    x-model="selectedStatus"
                    @change="applyFilters()"
                    class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                >
                    <option value="">Tous les statuts</option>
                    <option value="draft">Brouillon</option>
                    <option value="generated">Généré</option>
                    <option value="published">Publié</option>
                </select>
            </div>
        </div>

        <!-- Liste des parcours -->
        <div class="border-t border-gray-100 p-4 dark:border-gray-800 sm:p-6">
            <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 xl:grid-cols-3" x-show="filteredPaths.length > 0">
                <template x-for="(path, index) in filteredPaths" :key="path.id">
                    <div class="rounded-xl border-2 bg-white p-5 dark:bg-white/[0.03] sm:p-6 hover:shadow-lg transition-shadow cursor-pointer"
                         :style="`border-color: ${['#3b82f6', '#8b5cf6', '#ec4899', '#f59e0b', '#ef4444'][index % 5]};`"
                         @click="viewPath(path.id)">
                        <div class="mb-4 flex items-center justify-between">
                            <span class="inline-block rounded-md px-2.5 py-0.5 text-xs font-medium"
                                  :class="{
                                      'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400': path.type === 'h5p',
                                      'bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400': path.type === 'video',
                                      'bg-pink-100 text-pink-700 dark:bg-pink-900/30 dark:text-pink-400': path.type === 'link',
                                      'bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400': path.type === 'kahoot',
                                      'bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-400': !['h5p', 'video', 'link', 'kahoot'].includes(path.type)
                                  }"
                                  x-text="path.type?.toUpperCase()"></span>
                            <span 
                                class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium"
                                :class="{
                                    'bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-400': path.status === 'draft',
                                    'bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400': path.status === 'generated',
                                    'bg-purple-100 text-purple-600 dark:bg-purple-900/30 dark:text-purple-400': path.status === 'published'
                                }"
                                x-text="path.status === 'draft' ? 'Brouillon' : path.status === 'generated' ? 'Généré' : 'Publié'"
                            ></span>
                        </div>

                        <h4 class="mb-3 text-theme-xl font-semibold text-gray-800 dark:text-white/90" x-text="path.title"></h4>
                        <p class="mb-4 text-sm text-gray-600 dark:text-gray-400 line-clamp-2" x-text="path.description"></p>

                        <div class="mb-4 space-y-2 text-sm">
                            <div x-show="path.chapter" class="flex items-center gap-2">
                                <span class="inline-block rounded-md bg-yellow-100 dark:bg-yellow-900/30 px-2 py-0.5 text-xs font-medium text-yellow-800 dark:text-yellow-300">Chapitre:</span>
                                <span class="text-gray-600 dark:text-gray-400" x-text="path.chapter?.name"></span>
                            </div>
                            <div x-show="path.subChapter" class="flex items-center gap-2">
                                <span class="inline-block rounded-md bg-orange-100 dark:bg-orange-900/30 px-2 py-0.5 text-xs font-medium text-orange-800 dark:text-orange-300">Sous-chapitre:</span>
                                <span class="text-gray-600 dark:text-gray-400" x-text="path.subChapter?.name"></span>
                            </div>
                            <div class="flex items-center gap-2">
                                <span class="inline-block rounded-md bg-red-100 dark:bg-red-900/30 px-2 py-0.5 text-xs font-medium text-red-800 dark:text-red-300">Modules:</span>
                                <span class="text-gray-600 dark:text-gray-400" x-text="path.modulesCount"></span>
                            </div>
                        </div>

                        <div class="flex items-center justify-between">
                            <a
                                :href="'/admin/paths/' + path.id"
                                @click.stop
                                class="inline-block rounded-md bg-indigo-100 dark:bg-indigo-900/30 px-3 py-1.5 text-sm font-medium text-indigo-700 hover:bg-indigo-200 dark:text-indigo-400 dark:hover:bg-indigo-900/50"
                            >
                                Voir détails →
                            </a>
                        </div>
                    </div>
                </template>
            </div>

            <div x-show="filteredPaths.length === 0" class="text-center py-12">
                <p class="text-gray-500 dark:text-gray-400">Aucun parcours trouvé</p>
            </div>
        </div>
    </div>
</div>

<script>
function pathManager() {
    return {
        paths: [],
        searchQuery: '',
        selectedType: '',
        selectedStatus: '',
        filteredPaths: [],

        init() {
            this.paths = JSON.parse(this.$el.dataset.paths || '[]');
            this.filteredPaths = this.paths;
        },

        applyFilters() {
            this.filteredPaths = this.paths.filter(path => {
                const matchesSearch = !this.searchQuery || 
                    path.title.toLowerCase().includes(this.searchQuery.toLowerCase()) ||
                    (path.description || '').toLowerCase().includes(this.searchQuery.toLowerCase());
                const matchesType = !this.selectedType || path.type === this.selectedType;
                const matchesStatus = !this.selectedStatus || path.status === this.selectedStatus;
                return matchesSearch && matchesType && matchesStatus;
            });
        },

        viewPath(id) {
            window.location.href = '/admin/paths/' + id;
        }
    }
}
</script>
{% endblock %}

