function objectiveManager() {
    return {
        families: [],
        coaches: [],
        parents: [],
        specialists: [],
        expandedTasks: {},
        toggleTasks(objectiveId) {
            this.expandedTasks[objectiveId] = !this.expandedTasks[objectiveId];
        },
        isTasksExpanded(objectiveId) {
            return this.expandedTasks[objectiveId] || false;
        },
        rightSheetOpen: false,
        isEdit: false,
        currentId: null,
        currentObjective: null,
        formData: {
            title: '',
            description: '',
            category: '',
            status: 'modification',
            progress: 0,
            deadline: '',
            studentId: '',
        },
        objectivesData: [],
        studentsData: [],
        students: [],
        parentsData: [],
        specialistsData: [],
        coachesData: [],
        currentTasks: [],
        currentComments: [],
        taskSheetOpen: false,
        commentSheetOpen: false,
        taskEditMode: false,
        commentEditMode: false,
        currentTaskId: null,
        currentCommentId: null,
        taskFormData: {
            title: '',
            description: '',
            status: 'pending',
            frequency: 'daily',
            requiresProof: true, // Toutes les tâches nécessitent des preuves par défaut
            proofType: '',
            assignedType: 'coach',
            studentId: '',
            parentId: '',
            specialistId: '',
            dueDate: '',
        },
        commentFormData: {
            content: '',
        },
        init() {
            const objectivesJson = this.$el.getAttribute('data-objectives');
            const studentsJson = this.$el.getAttribute('data-students');
            const parentsJson = this.$el.getAttribute('data-parents');
            const specialistsJson = this.$el.getAttribute('data-specialists');
            const coachesJson = this.$el.getAttribute('data-coaches');
            if (objectivesJson) {
                this.objectivesData = JSON.parse(objectivesJson);
            }
            if (studentsJson) {
                this.studentsData = JSON.parse(studentsJson);
                this.students = JSON.parse(studentsJson);
            }
            if (parentsJson) {
                this.parentsData = JSON.parse(parentsJson);
                this.parents = JSON.parse(parentsJson);
            }
            if (specialistsJson) {
                this.specialistsData = JSON.parse(specialistsJson);
                this.specialists = JSON.parse(specialistsJson);
            }
            if (coachesJson) {
                this.coachesData = JSON.parse(coachesJson);
                this.coaches = JSON.parse(coachesJson);
            }
        },
        
        openCreate() {
            this.isEdit = false;
            this.currentId = null;
            this.currentObjective = null;
            this.formData = {
                title: '',
                description: '',
                category: '',
                status: 'modification',
                progress: 0,
                deadline: '',
                studentId: '',
            };
            this.rightSheetOpen = true;
