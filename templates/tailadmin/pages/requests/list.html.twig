{% extends 'tailadmin/layouts/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" />
{% endblock %}

{% block content %}
<div 
    x-data="requestManager()"
    data-requests='{{ requests|json_encode|e('html_attr') }}'
    data-families='{{ families|json_encode|e('html_attr') }}'
    data-students='{{ students|json_encode|e('html_attr') }}'
    data-parents='{{ parents|json_encode|e('html_attr') }}'
    data-specialists='{{ specialists|json_encode|e('html_attr') }}'
    data-coaches='{{ coaches|json_encode|e('html_attr') }}'
    class="p-4 mx-auto max-w-(--breakpoint-2xl) md:p-6"
>
    {% include 'tailadmin/components/breadcrumb.html.twig' %}

    {% if app.user.isCoach() or app.user.isParent() %}
    <!-- Barre de filtres -->
    <div 
        x-data="filterManager()"
        data-parents='{{ parents|json_encode|e('html_attr') }}'
        data-specialists='{{ specialists|json_encode|e('html_attr') }}'
        data-students='{{ students|json_encode|e('html_attr') }}'
        data-profile-type='{{ profileType|default('') }}'
        data-selected-ids='{{ selectedIds|default('') }}'
        data-user-role='{% if app.user.isCoach() %}coach{% elseif app.user.isParent() %}parent{% elseif app.user.isSpecialist() %}specialist{% else %}student{% endif %}'
        class="mb-6 rounded-2xl border border-gray-200 bg-white p-4 dark:border-gray-800 dark:bg-white/[0.03]"
    >
        <div class="mb-4">
            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                Filtrer par profil
            </label>
            <div class="flex gap-2 flex-wrap">
                <button
                    @click="setProfileType('')"
                    :class="profileType === '' ? 'bg-brand-500 text-white' : 'bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300'"
                    class="rounded-lg px-4 py-2 text-sm font-medium transition-colors hover:bg-brand-600 hover:text-white dark:hover:bg-gray-700"
                >
                    {% if app.user.isParent() %}Tous mes enfants{% else %}Tous{% endif %}
                </button>
                {% if app.user.isCoach() %}
                <button
                    @click="setProfileType('parent')"
                    :class="profileType === 'parent' ? 'bg-brand-500 text-white' : 'bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300'"
                    class="rounded-lg px-4 py-2 text-sm font-medium transition-colors hover:bg-brand-600 hover:text-white dark:hover:bg-gray-700"
                >
                    Parent
                </button>
                <button
                    @click="setProfileType('specialist')"
                    :class="profileType === 'specialist' ? 'bg-brand-500 text-white' : 'bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300'"
                    class="rounded-lg px-4 py-2 text-sm font-medium transition-colors hover:bg-brand-600 hover:text-white dark:hover:bg-gray-700"
                >
                    Spécialiste
                </button>
                {% endif %}
                <button
                    @click="setProfileType('student')"
                    :class="profileType === 'student' ? 'bg-brand-500 text-white' : 'bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300'"
                    class="rounded-lg px-4 py-2 text-sm font-medium transition-colors hover:bg-brand-600 hover:text-white dark:hover:bg-gray-700"
                >
                    {% if app.user.isParent() %}Enfant{% else %}Élève{% endif %}
                </button>
            </div>
        </div>
        
        <div x-show="profileType !== ''">
            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                Rechercher et sélectionner
            </label>
            <select
                id="choices-select-requests"
                x-ref="choicesSelect"
                class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                multiple
            >
            </select>
        </div>
        
        <div class="mb-4">
            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                Filtrer par statut
            </label>
            <select
                x-model="selectedStatus"
                @change="applyFilters()"
                class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
            >
                <option value="">Tous les statuts</option>
                <option value="pending">En attente</option>
                <option value="in_progress">En cours</option>
                <option value="resolved">Résolu</option>
                <option value="closed">Fermé</option>
            </select>
        </div>
        
        <div class="mt-4 flex items-center gap-2" x-show="profileType !== '' || selectedIds.length > 0 || selectedStatus !== ''">
            <button
                @click="applyFilters()"
                class="rounded-lg bg-brand-500 px-4 py-2 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
            >
                Appliquer les filtres
            </button>
            <button
                @click="resetFilters()"
                class="rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
            >
                Réinitialiser
            </button>
        </div>
    </div>
    {% endif %}

    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="px-6 py-5 border-b border-gray-100 dark:border-gray-800">
            <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                <div>
                    <h3 class="text-base font-medium text-gray-800 dark:text-white/90">
                        Liste des Demandes
                    </h3>
                </div>
                <div class="flex items-center gap-3 flex-wrap">
                    <button
                        @click="openCreate()"
                        class="inline-flex items-center gap-2 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
                    >
                        <svg class="fill-current" width="16" height="16" viewBox="0 0 16 16" fill="none">
                            <path d="M8 1a7 7 0 100 14A7 7 0 008 1zM7.5 4v4l3.5 2 .5-.866L8.5 7.5V4h-1z" fill=""/>
                        </svg>
                        Nouvelle Demande
                    </button>
                </div>
            </div>
        </div>
        <div class="border-t border-gray-100 p-4 dark:border-gray-800 sm:p-6">
            <div class="grid grid-cols-1 gap-5 sm:grid-cols-2">
                {% for request in requests %}
                <div>
                    <div class="rounded-xl border border-gray-200 bg-white p-4 dark:border-gray-800 dark:bg-white/[0.03] sm:p-5">
                        <div class="mb-3 flex items-center justify-between">
                            <span class="inline-block rounded-md bg-cyan-100 dark:bg-cyan-900/30 px-2.5 py-0.5 text-xs font-medium text-cyan-700 dark:text-cyan-300">{{ request.type|upper }}</span>
                            <div class="flex items-center gap-1.5">
                                {% if request.priority == 'high' %}
                                <span class="inline-flex items-center rounded-full bg-error-100 px-2 py-0.5 text-xs font-medium text-error-600 dark:bg-error-900/30 dark:text-error-400">
                                    Haute
                                </span>
                                {% elseif request.priority == 'medium' %}
                                <span class="inline-flex items-center rounded-full bg-warning-100 px-2 py-0.5 text-xs font-medium text-warning-600 dark:bg-warning-900/30 dark:text-warning-400">
                                    Moyenne
                                </span>
                                {% else %}
                                <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-600 dark:bg-gray-800 dark:text-gray-400">
                                    Basse
                                </span>
                                {% endif %}
                                {% if request.status == 'resolved' %}
                                <span class="inline-flex items-center rounded-full bg-success-100 px-2 py-0.5 text-xs font-medium text-success-600 dark:bg-success-900/30 dark:text-success-400">
                                    Résolue
                                </span>
                                {% elseif request.status == 'in_progress' %}
                                <span class="inline-flex items-center rounded-full bg-brand-100 px-2 py-0.5 text-xs font-medium text-brand-600 dark:bg-brand-900/30 dark:text-brand-400">
                                    En cours
                                </span>
                                {% else %}
                                <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-600 dark:bg-gray-800 dark:text-gray-400">
                                    En attente
                                </span>
                                {% endif %}
                            </div>
                        </div>

                        <h4 class="mb-2 text-base font-medium">
                            <span class="inline-block rounded-lg bg-blue-100 dark:bg-blue-900/30 px-3 py-1.5 text-gray-800 dark:text-white/90">
                                {{ request.title }}
                            </span>
                        </h4>

                        <div class="mb-3 space-y-1.5 text-sm">
                            <div class="flex items-center gap-2">
                                <span class="text-gray-600 dark:text-gray-400 font-medium">De:</span>
                                <span class="inline-block rounded-md bg-purple-100 dark:bg-purple-900/30 px-2 py-0.5 text-purple-700 dark:text-purple-300 font-medium">{{ request.creatorName }}</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <span class="text-gray-600 dark:text-gray-400 font-medium">Pour:</span>
                                <span class="inline-block rounded-md bg-indigo-100 dark:bg-indigo-900/30 px-2 py-0.5 text-indigo-700 dark:text-indigo-300 font-medium">{{ request.recipientName }}</span>
                            </div>
                            <div class="flex items-center gap-1.5">
                                <svg class="fill-gray-400" width="14" height="14" viewBox="0 0 16 16" fill="none">
                                    <path d="M8 1a7 7 0 100 14A7 7 0 008 1zM7.5 4v4l3.5 2 .5-.866L8.5 7.5V4h-1z" fill=""/>
                                </svg>
                                <span class="inline-block rounded-md bg-gray-100 dark:bg-gray-800 px-2 py-0.5 text-gray-600 dark:text-gray-400 text-xs">Créée le {{ request.createdAt }}</span>
                            </div>
                        </div>

                        <div class="mt-3">
                            <a
                                href="{{ path('admin_requests_detail', {id: request.id}) }}"
                                class="inline-flex w-full items-center justify-center gap-2 rounded-lg bg-brand-500 px-3 py-2 text-sm font-medium text-white shadow-theme-xs transition-colors hover:bg-brand-600"
                            >
                                <svg class="fill-current" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M8 1C4.134 1 1 4.134 1 8s3.134 7 7 7 7-3.134 7-7-3.134-7-7-7zm0 12.5c-3.032 0-5.5-2.468-5.5-5.5S4.968 2.5 8 2.5 13.5 4.968 13.5 8 11.032 13.5 8 13.5z" fill=""/>
                                    <path d="M8 4.5a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7zm0 6a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5z" fill=""/>
                                </svg>
                                Messages ({{ request.messagesCount|default(0) }})
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Right Sheet -->
    <div
        x-show="rightSheetOpen"
        @click="closeSheet()"
        x-transition:enter="transition-opacity ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition-opacity ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 z-50 bg-black/50 backdrop-blur-sm"
        style="display: none;"
    ></div>

    <div
        x-show="rightSheetOpen"
        @click.away="closeSheet()"
        x-transition:enter="transition-transform ease-out duration-300"
        x-transition:enter-start="translate-x-full"
        x-transition:enter-end="translate-x-0"
        x-transition:leave="transition-transform ease-in duration-200"
        x-transition:leave-start="translate-x-0"
        x-transition:leave-end="translate-x-full"
        class="fixed right-0 top-0 z-50 h-full w-full max-w-md overflow-y-auto bg-white shadow-2xl dark:bg-gray-900"
        style="display: none;"
    >
        <div class="flex h-full flex-col">
            <div class="sticky top-0 z-10 border-b border-gray-200 bg-white px-6 py-4 dark:border-gray-800 dark:bg-gray-900">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white/90">
                        <span x-show="!isEdit">Nouvelle Demande</span>
                        <span x-show="isEdit">Modifier Demande</span>
                    </h3>
                    <button
                        @click="closeSheet()"
                        class="rounded-lg p-2 text-gray-400 transition-colors hover:bg-gray-100 hover:text-gray-600 dark:hover:bg-gray-800 dark:hover:text-gray-300"
                    >
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>

            <div class="flex-1 p-6">
                <form @submit.prevent="saveRequest()" class="space-y-6">
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                            Type de demande <span class="text-error-500">*</span>
                        </label>
                        <select
                            x-model="formData.title"
                            @change="updateFieldsFromTitle()"
                            required
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        >
                            <option value="">Sélectionner un type...</option>
                            {% if app.user.isCoach() %}
                                <option value="Demande d'aide scolaire pour un élève">Demande d'aide scolaire pour un élève</option>
                                <option value="Demande d'échange avec un parent">Demande d'échange avec un parent</option>
                                <option value="Demande d'échange avec un élève">Demande d'échange avec un élève</option>
                                <option value="Demande d'échange avec un spécialiste">Demande d'échange avec un spécialiste</option>
                            {% elseif app.user.isParent() %}
                                <option value="Demande d'aide scolaire pour mon enfant">Demande d'aide scolaire pour mon enfant</option>
                                <option value="Demande d'échange avec mon coach">Demande d'échange avec mon coach</option>
                            {% elseif app.user.isSpecialist() %}
                                <option value="Demande d'échange avec un élève">Demande d'échange avec un élève</option>
                                <option value="Demande d'échange avec mon coach">Demande d'échange avec mon coach</option>
                            {% elseif app.user.isStudent() %}
                                <option value="Demande d'échange avec un spécialiste">Demande d'échange avec un spécialiste</option>
                                <option value="Demande d'échange avec mon coach">Demande d'échange avec mon coach</option>
                            {% endif %}
                        </select>
                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400" x-show="formData.title">
                            <span x-show="formData.title === 'Demande d\'aide scolaire pour un élève' || formData.title === 'Demande d\'aide scolaire pour mon enfant'">Sélectionnez un élève et un spécialiste pour cette demande</span>
                            <span x-show="formData.title === 'Demande d\'échange avec un parent'">Sélectionnez un parent pour cette demande</span>
                            <span x-show="formData.title === 'Demande d\'échange avec un élève'">Sélectionnez un élève pour cette demande</span>
                            <span x-show="formData.title === 'Demande d\'échange avec un spécialiste'">Sélectionnez un spécialiste pour cette demande</span>
                            <span x-show="formData.title === 'Demande d\'échange avec mon coach'">Votre coach sera automatiquement assigné</span>
                        </p>
                    </div>
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Description *</label>
                        <textarea
                            x-model="formData.description"
                            required
                            rows="4"
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        ></textarea>
                    </div>
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Statut *</label>
                        <select
                            x-model="formData.status"
                            required
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        >
                            <option value="pending">En attente</option>
                            <option value="in_progress">En cours</option>
                            <option value="resolved">Résolu</option>
                            <option value="closed">Fermé</option>
                        </select>
                    </div>
                    <div x-show="isEdit">
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Priorité *</label>
                        <select
                            x-model="formData.priority"
                            required
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        >
                            <option value="low">Faible</option>
                            <option value="medium">Moyenne</option>
                            <option value="high">Haute</option>
                        </select>
                    </div>
                    <!-- Champ Élève - Affiché conditionnellement -->
                    <div x-show="shouldShowStudentField()">
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                            Élève <span class="text-error-500" x-show="isStudentFieldRequired()">*</span>
                        </label>
                        <select
                            x-model="formData.studentId"
                            :required="isStudentFieldRequired()"
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        >
                            <option value="">Sélectionner un élève...</option>
                            <template x-for="student in studentsData" :key="student.id">
                                <option :value="student.id" x-text="student.firstName + ' ' + student.lastName"></option>
                            </template>
                        </select>
                    </div>
                    
                    <!-- Champ Spécialiste - Affiché conditionnellement -->
                    <div x-show="shouldShowSpecialistField()">
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                            Spécialiste <span class="text-error-500" x-show="isSpecialistFieldRequired()">*</span>
                        </label>
                        <select
                            x-model="formData.specialistId"
                            :required="isSpecialistFieldRequired()"
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        >
                            <option value="">Sélectionner un spécialiste...</option>
                            <template x-for="specialist in specialistsData" :key="specialist.id">
                                <option :value="specialist.id" x-text="specialist.firstName + ' ' + specialist.lastName"></option>
                            </template>
                        </select>
                    </div>
                    
                    <!-- Champ Parent - Affiché conditionnellement (pour les coaches) -->
                    {% if app.user.isCoach() %}
                    <div x-show="shouldShowParentField()">
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                            Parent <span class="text-error-500" x-show="isParentFieldRequired()">*</span>
                        </label>
                        <select
                            x-model="formData.parentId"
                            :required="isParentFieldRequired()"
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        >
                            <option value="">Sélectionner un parent...</option>
                            <template x-for="parent in parentsData" :key="parent.id">
                                <option :value="parent.id" x-text="parent.firstName + ' ' + parent.lastName"></option>
                            </template>
                        </select>
                    </div>
                    {% endif %}
                </form>
            </div>

            <div class="sticky bottom-0 border-t border-gray-200 bg-white px-6 py-4 dark:border-gray-800 dark:bg-gray-900">
                <div class="flex gap-3">
                    <button
                        @click="closeSheet()"
                        class="flex-1 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
                    >
                        Annuler
                    </button>
                    <button
                        @click="saveRequest()"
                        class="flex-1 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
                    >
                        Enregistrer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function requestManager() {
    return {
        families: [],
        students: [],
        parents: [],
        specialists: [],
        coaches: [],
        rightSheetOpen: false,
        isEdit: false,
        currentId: null,
        formData: {
            title: '',
            description: '',
            type: '',
            status: 'pending',
            priority: 'medium',
            studentId: '',
            specialistId: '',
            parentId: '',
        },
        requestsData: [],
        familiesData: [],
        studentsData: [],
        specialistsData: [],
        parentsData: [],
        init() {
            const requestsJson = this.$el.getAttribute('data-requests');
            const familiesJson = this.$el.getAttribute('data-families');
            const studentsJson = this.$el.getAttribute('data-students');
            const specialistsJson = this.$el.getAttribute('data-specialists');
            const parentsJson = this.$el.getAttribute('data-parents');
            const coachesJson = this.$el.getAttribute('data-coaches');
            if (requestsJson) this.requestsData = JSON.parse(requestsJson);
            if (familiesJson) {
                this.familiesData = JSON.parse(familiesJson);
                this.families = JSON.parse(familiesJson);
            }
            if (studentsJson) {
                this.studentsData = JSON.parse(studentsJson);
                this.students = JSON.parse(studentsJson);
            }
            if (specialistsJson) {
                this.specialistsData = JSON.parse(specialistsJson);
                this.specialists = JSON.parse(specialistsJson);
            }
            if (parentsJson) {
                this.parents = JSON.parse(parentsJson);
                this.parentsData = JSON.parse(parentsJson);
            }
            if (coachesJson) this.coaches = JSON.parse(coachesJson);
        },
        openCreate() {
            this.isEdit = false;
            this.currentId = null;
            this.formData = {
                title: '',
                description: '',
                type: '',
                status: 'pending',
                priority: 'medium',
                studentId: '',
                specialistId: '',
                parentId: '',
            };
            this.rightSheetOpen = true;
        },
        updateFieldsFromTitle() {
            // Réinitialiser les champs conditionnels quand le titre change
            if (!this.shouldShowStudentField()) {
                this.formData.studentId = '';
            }
            if (!this.shouldShowSpecialistField()) {
                this.formData.specialistId = '';
            }
            if (!this.shouldShowParentField()) {
                this.formData.parentId = '';
            }
        },
        shouldShowStudentField() {
            if (!this.formData.title) return false;
            const title = this.formData.title;
            return title === 'Demande d\'aide scolaire pour un élève' ||
                   title === 'Demande d\'aide scolaire pour mon enfant' ||
                   title === 'Demande d\'échange avec un élève';
        },
        shouldShowSpecialistField() {
            if (!this.formData.title) return false;
            const title = this.formData.title;
            // Le champ spécialiste est affiché uniquement pour "Demande d'aide scolaire pour un élève"
            // (car seul le coach peut assigner un spécialiste dans ce cas)
            // Pour "Demande d'échange avec un spécialiste", le spécialiste est assigné automatiquement pour les élèves
            return title === 'Demande d\'aide scolaire pour un élève';
        },
        shouldShowParentField() {
            if (!this.formData.title) return false;
            return this.formData.title === 'Demande d\'échange avec un parent';
        },
        isStudentFieldRequired() {
            return this.shouldShowStudentField();
        },
        isSpecialistFieldRequired() {
            return this.formData.title === 'Demande d\'aide scolaire pour un élève';
        },
        isParentFieldRequired() {
            return this.shouldShowParentField();
        },
        saveRequest() {
            const url = this.isEdit 
                ? `/admin/requests/${this.currentId}/update`
                : '/admin/requests/create';
            
            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                },
                body: JSON.stringify(this.formData),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    this.showMessage(data.message || 'Demande enregistrée avec succès', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    this.showMessage(data.message || 'Erreur lors de l\'enregistrement', 'error');
                }
            })
            .catch(error => {
                this.showMessage('Erreur de connexion', 'error');
            });
        },
        showMessage(message, type = 'info') {
            if (window.showToast) {
                window.showToast(message, type);
            } else {
                const toastManager = document.querySelector('[x-data="toastManager()"]')?.__x?.$data;
                if (toastManager) {
                    toastManager.show(message, type);
                }
            }
        },
        closeSheet() {
            this.rightSheetOpen = false;
            this.isEdit = false;
            this.currentId = null;
        }
    };
}

// Charger Choices.js si pas déjà chargé
if (typeof Choices === 'undefined') {
    const script = document.createElement('script');
    script.src = 'https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js';
    script.onload = function() {
        // Réinitialiser les composants Alpine.js qui utilisent Choices
        if (window.Alpine) {
            document.querySelectorAll('[x-data="filterManager()"]').forEach(el => {
                if (el.__x) {
                    el.__x.$data.initChoices();
                }
            });
        }
    };
    document.head.appendChild(script);
}

function filterManager() {
    return {
        profileType: '',
        selectedIds: [],
        selectedStatus: '',
        choicesInstance: null,
        parentsData: [],
        specialistsData: [],
        studentsData: [],
        currentOptions: [],
        userRole: '',
        init() {
            // Récupérer les données depuis les attributs data
            const parentsJson = this.$el.getAttribute('data-parents');
            const specialistsJson = this.$el.getAttribute('data-specialists');
            const studentsJson = this.$el.getAttribute('data-students');
            const profileTypeAttr = this.$el.getAttribute('data-profile-type');
            const selectedIdsAttr = this.$el.getAttribute('data-selected-ids');
            const userRoleAttr = this.$el.getAttribute('data-user-role');
            
            // Récupérer le filtre par status depuis l'URL
            const urlParams = new URLSearchParams(window.location.search);
            this.selectedStatus = urlParams.get('status') || '';
            
            if (parentsJson) this.parentsData = JSON.parse(parentsJson);
            if (specialistsJson) this.specialistsData = JSON.parse(specialistsJson);
            if (studentsJson) this.studentsData = JSON.parse(studentsJson);
            if (profileTypeAttr) this.profileType = profileTypeAttr;
            if (selectedIdsAttr) this.selectedIds = selectedIdsAttr ? selectedIdsAttr.split(',').map(id => parseInt(id)) : [];
            if (userRoleAttr) this.userRole = userRoleAttr;
            
            // Attendre que Choices.js soit chargé
            if (typeof Choices !== 'undefined') {
                this.$nextTick(() => {
                    this.initChoices();
                });
            } else {
                // Si Choices.js n'est pas encore chargé, attendre
                const checkChoices = setInterval(() => {
                    if (typeof Choices !== 'undefined') {
                        clearInterval(checkChoices);
                        this.$nextTick(() => {
                            this.initChoices();
                        });
                    }
                }, 100);
                
                // Timeout après 5 secondes
                setTimeout(() => clearInterval(checkChoices), 5000);
            }
        },
        initChoices() {
            // Détruire l'instance existante si elle existe
            if (this.choicesInstance) {
                this.choicesInstance.destroy();
            }
            
            // Récupérer les options selon le type de profil
            this.updateOptions();
            
            // Initialiser Choices.js
            const selectElement = this.$refs.choicesSelect;
            if (selectElement && this.currentOptions.length > 0) {
                this.choicesInstance = new Choices(selectElement, {
                    removeItemButton: true,
                    searchEnabled: true,
                    searchChoices: true,
                    searchFields: ['label', 'value'],
                    placeholder: true,
                    placeholderValue: 'Rechercher et sélectionner...',
                    noResultsText: 'Aucun résultat trouvé',
                    noChoicesText: 'Aucune option disponible',
                    itemSelectText: 'Appuyez pour sélectionner',
                });
                
                // Pré-sélectionner les IDs si présents
                if (this.selectedIds.length > 0) {
                    this.choicesInstance.setChoiceByValue(this.selectedIds.map(String));
                }
                
                // Écouter les changements
                selectElement.addEventListener('change', () => {
                    this.selectedIds = this.choicesInstance.getValue(true).map(id => parseInt(id));
                });
            }
        },
        updateOptions() {
            this.currentOptions = [];
            
            if (this.profileType === 'parent') {
                this.currentOptions = this.parentsData.map(p => ({
                    value: p.id,
                    label: `${p.firstName} ${p.lastName}${p.email ? ' (' + p.email + ')' : ''}`
                }));
            } else if (this.profileType === 'specialist') {
                this.currentOptions = this.specialistsData.map(s => ({
                    value: s.id,
                    label: `${s.firstName} ${s.lastName}`
                }));
            } else if (this.profileType === 'student') {
                this.currentOptions = this.studentsData.map(s => ({
                    value: s.id,
                    label: `${s.firstName} ${s.lastName}${s.pseudo ? ' (' + s.pseudo + ')' : ''}${s.class ? ' - ' + s.class : ''}`
                }));
            }
            
            // Mettre à jour le select HTML
            const selectElement = this.$refs.choicesSelect;
            if (selectElement) {
                selectElement.innerHTML = '';
                this.currentOptions.forEach(option => {
                    const optionElement = document.createElement('option');
                    optionElement.value = option.value;
                    optionElement.textContent = option.label;
                    selectElement.appendChild(optionElement);
                });
            }
        },
        setProfileType(type) {
            this.profileType = type;
            this.selectedIds = [];
            
            // Si on clique sur "Tous", réinitialiser complètement et appliquer les filtres
            if (type === '') {
                // Détruire l'instance Choices.js si elle existe
                if (this.choicesInstance) {
                    this.choicesInstance.destroy();
                    this.choicesInstance = null;
                }
                // Réinitialiser le contenu du select
                const selectElement = this.$refs.choicesSelect;
                if (selectElement) {
                    selectElement.innerHTML = '';
                }
                // Appliquer les filtres (réinitialiser)
                this.resetFilters();
                return;
            }
            
            // Pour les autres types, réinitialiser Choices.js avec les nouvelles options
            this.$nextTick(() => {
                this.initChoices();
            });
        },
        applyFilters() {
            const params = new URLSearchParams();
            if (this.profileType) {
                params.set('profileType', this.profileType);
            }
            if (this.selectedIds.length > 0) {
                params.set('selectedIds', this.selectedIds.join(','));
            }
            if (this.selectedStatus) {
                params.set('status', this.selectedStatus);
            }
            
            const url = '/admin/requests' + (params.toString() ? '?' + params.toString() : '');
            window.location.href = url;
        },
        resetFilters() {
            this.profileType = '';
            this.selectedIds = [];
            this.selectedStatus = '';
            window.location.href = '/admin/requests';
        }
    };
}
