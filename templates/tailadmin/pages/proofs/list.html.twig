{% extends 'tailadmin/layouts/base.html.twig' %}

{% block content %}
<div 
    x-data="proofManager()"
    data-proofs='{{ proofs|json_encode|e('html_attr') }}'
    data-task-id="{{ taskId|default('') }}"
    data-planning-id="{{ planningId|default('') }}"
    class="p-4 mx-auto max-w-(--breakpoint-2xl) md:p-6"
>
    {% include 'tailadmin/components/breadcrumb.html.twig' %}

    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="px-6 py-5 flex items-center justify-between">
            <h3 class="text-base font-medium text-gray-800 dark:text-white/90">
                {% if taskId %}
                    Preuves de la Tâche
                {% elseif planningId %}
                    Preuves de l'Événement
                {% else %}
                    Liste des Preuves
                {% endif %}
            </h3>
            <button
                @click="openCreate()"
                class="inline-flex items-center gap-2 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
            >
                <svg class="fill-current" width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <path d="M8 1a7 7 0 100 14A7 7 0 008 1zM7.5 4v4l3.5 2 .5-.866L8.5 7.5V4h-1z" fill=""/>
                </svg>
                Nouvelle Preuve
            </button>
        </div>
        <div class="border-t border-gray-100 p-4 dark:border-gray-800 sm:p-6">
            <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 xl:grid-cols-3">
                <template x-for="proof in proofsData" :key="proof.id">
                    <div class="rounded-xl border border-gray-200 bg-white p-4 dark:border-gray-800 dark:bg-white/[0.03]">
                        <div class="flex items-start justify-between mb-3">
                            <div class="flex-1">
                                <h4 class="text-sm font-semibold text-gray-800 dark:text-white/90" x-text="proof.title"></h4>
                                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400" x-text="proof.type"></p>
                            </div>
                            <div class="flex gap-1">
                                <button
                                    @click="openEdit(proof)"
                                    class="rounded p-1 text-gray-400 hover:bg-gray-100 hover:text-gray-600 dark:hover:bg-gray-700"
                                >
                                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                    </svg>
                                </button>
                                <button
                                    @click="openDelete(proof.id)"
                                    class="rounded p-1 text-red-400 hover:bg-red-50 hover:text-red-600 dark:hover:bg-red-900/20"
                                >
                                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                        <template x-if="proof.description">
                            <p class="text-sm text-gray-600 dark:text-gray-400 mb-3" x-text="proof.description"></p>
                        </template>
                        <template x-if="proof.type === 'text' && proof.content">
                            <div class="rounded-lg bg-gray-50 p-3 mb-3 dark:bg-gray-800/50">
                                <p class="text-sm text-gray-800 dark:text-white/90" x-text="proof.content"></p>
                            </div>
                        </template>
                        <template x-if="proof.fileUrl">
                            <div class="mb-3">
                                <a :href="proof.fileUrl" target="_blank" class="text-sm text-brand-600 hover:text-brand-700 flex items-center gap-1">
                                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
                                    </svg>
                                    <span x-text="proof.fileName || 'Voir le fichier'"></span>
                                </a>
                            </div>
                        </template>
                        <div class="flex items-center gap-2 text-xs text-gray-500 dark:text-gray-400">
                            <span x-text="proof.submittedBy?.firstName + ' ' + proof.submittedBy?.lastName"></span>
                            <span>•</span>
                            <span x-text="proof.createdAt ? new Date(proof.createdAt).toLocaleDateString('fr-FR') : ''"></span>
                        </div>
                    </div>
                </template>
                <template x-if="!proofsData || proofsData.length === 0">
                    <div class="col-span-full text-center py-12">
                        <p class="text-gray-500 dark:text-gray-400">Aucune preuve</p>
                    </div>
                </template>
            </div>
        </div>
    </div>

    <!-- Right Sheet -->
    <div
        x-show="rightSheetOpen"
        @click="rightSheetOpen = false"
        x-transition:enter="transition-opacity ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition-opacity ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 z-[70] bg-black/50 backdrop-blur-sm"
        style="display: none;"
    ></div>

    <div
        x-show="rightSheetOpen"
        @click.away="rightSheetOpen = false"
        x-transition:enter="transition-transform ease-out duration-300"
        x-transition:enter-start="translate-x-full"
        x-transition:enter-end="translate-x-0"
        x-transition:leave="transition-transform ease-in duration-200"
        x-transition:leave-start="translate-x-0"
        x-transition:leave-end="translate-x-full"
        class="fixed right-0 top-0 z-[70] h-full w-full max-w-md overflow-y-auto bg-white shadow-2xl dark:bg-gray-900"
        style="display: none;"
    >
        <div class="flex h-full flex-col">
            <div class="sticky top-0 z-10 border-b border-gray-200 bg-white px-6 py-4 dark:border-gray-800 dark:bg-gray-900">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white/90">
                        <span x-show="!isEdit">Nouvelle Preuve</span>
                        <span x-show="isEdit">Modifier Preuve</span>
                    </h3>
                    <button
                        @click="rightSheetOpen = false"
                        class="rounded-lg p-2 text-gray-400 transition-colors hover:bg-gray-100 hover:text-gray-600 dark:hover:bg-gray-800 dark:hover:text-gray-300"
                    >
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>

            <div class="flex-1 overflow-y-auto p-6">
                <form @submit.prevent="saveProof()" class="space-y-6">
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Titre *</label>
                        <input
                            x-model="formData.title"
                            required
                            type="text"
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        />
                    </div>
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Description</label>
                        <textarea
                            x-model="formData.description"
                            rows="3"
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        ></textarea>
                    </div>
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Type *</label>
                        <select
                            x-model="formData.type"
                            @change="handleTypeChange()"
                            required
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        >
                            <option value="text">Texte</option>
                            <option value="photo">Photo</option>
                            <option value="audio">Audio</option>
                            <option value="video">Vidéo</option>
                            <option value="document">Document</option>
                        </select>
                    </div>
                    <div x-show="formData.type === 'text'">
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Contenu *</label>
                        <textarea
                            x-model="formData.content"
                            required
                            rows="6"
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        ></textarea>
                    </div>
                    <div x-show="formData.type !== 'text'">
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Fichier *</label>
                        <input
                            type="file"
                            @change="handleFileSelect($event)"
                            :accept="getAcceptTypes()"
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        />
                        <template x-if="formData.fileName">
                            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400" x-text="'Fichier sélectionné: ' + formData.fileName"></p>
                        </template>
                    </div>
                </form>
            </div>

            <div class="sticky bottom-0 border-t border-gray-200 bg-white px-6 py-4 dark:border-gray-800 dark:bg-gray-900">
                <div class="flex gap-3">
                    <button
                        @click="rightSheetOpen = false"
                        class="flex-1 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
                    >
                        Annuler
                    </button>
                    <button
                        @click="saveProof()"
                        class="flex-1 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
                    >
                        Enregistrer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function proofManager() {
    return {
        proofsData: [],
        rightSheetOpen: false,
        isEdit: false,
        currentId: null,
        formData: {
            title: '',
            description: '',
            type: 'text',
            content: '',
            fileBase64: null,
            fileName: null,
            fileSize: null,
            mimeType: null,
        },
        init() {
            const proofsJson = this.$el.getAttribute('data-proofs');
            if (proofsJson) {
                this.proofsData = JSON.parse(proofsJson);
            }
        },
        openCreate() {
            this.isEdit = false;
            this.currentId = null;
            this.formData = {
                title: '',
                description: '',
                type: 'text',
                content: '',
                fileBase64: null,
                fileName: null,
                fileSize: null,
                mimeType: null,
            };
            this.rightSheetOpen = true;
        },
        openEdit(proof) {
            this.isEdit = true;
            this.currentId = proof.id;
            this.formData = {
                title: proof.title || '',
                description: proof.description || '',
                type: proof.type || 'text',
                content: proof.content || '',
                fileBase64: null,
                fileName: proof.fileName || null,
                fileSize: proof.fileSize || null,
                mimeType: proof.mimeType || null,
            };
            this.rightSheetOpen = true;
        },
        openDelete(id) {
            if (confirm('Êtes-vous sûr de vouloir supprimer cette preuve ?')) {
                fetch(`/admin/proofs/${id}`, {
                    method: 'DELETE',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        this.proofsData = this.proofsData.filter(p => p.id !== id);
                        this.showMessage(data.message || 'Preuve supprimée avec succès', 'success');
                    } else {
                        this.showMessage(data.message || 'Erreur lors de la suppression', 'error');
                    }
                })
                .catch(error => {
                    this.showMessage('Erreur de connexion', 'error');
                });
            }
        },
        handleTypeChange() {
            if (this.formData.type !== 'text') {
                this.formData.content = '';
            }
        },
        handleFileSelect(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = (e) => {
                const base64 = e.target.result.split(',')[1];
                this.formData.fileBase64 = base64;
                this.formData.fileName = file.name;
                this.formData.fileSize = file.size;
                this.formData.mimeType = file.type;
            };
            reader.readAsDataURL(file);
        },
        getAcceptTypes() {
            const types = {
                'photo': 'image/*',
                'audio': 'audio/*',
                'video': 'video/*',
                'document': '.pdf,.doc,.docx,.txt',
            };
            return types[this.formData.type] || '*';
        },
        saveProof() {
            if (!this.formData.title || (this.formData.type === 'text' && !this.formData.content) || 
                (this.formData.type !== 'text' && !this.formData.fileBase64)) {
                this.showMessage('Veuillez remplir tous les champs requis', 'error');
                return;
            }

            const taskId = this.$el.getAttribute('data-task-id');
            const planningId = this.$el.getAttribute('data-planning-id');
            
            if (!taskId && !planningId) {
                this.showMessage('Erreur: aucune tâche ou événement sélectionné', 'error');
                return;
            }

            let url;
            if (taskId) {
                url = this.isEdit 
                    ? `/admin/proofs/${this.currentId}/update`
                    : `/admin/tasks/${taskId}/proofs/create`;
            } else {
                url = this.isEdit 
                    ? `/admin/proofs/${this.currentId}/update`
                    : `/admin/plannings/${planningId}/proofs/create`;
            }

            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                },
                body: JSON.stringify(this.formData),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    this.rightSheetOpen = false;
                    this.showMessage(data.message || 'Preuve enregistrée avec succès', 'success');
                    setTimeout(() => location.reload(), 500);
                } else {
                    this.showMessage(data.message || 'Erreur lors de l\'enregistrement', 'error');
                }
            })
            .catch(error => {
                this.showMessage('Erreur de connexion', 'error');
            });
        },
        showMessage(message, type = 'info') {
            const toastManager = document.querySelector('[x-data="toastManager()"]')?.__x?.$data;
            if (toastManager) {
                toastManager.show(message, type);
            } else {
                alert(message);
            }
        },
    };
}
</script>
{% endblock %}

