<script>
function activityManager() {
    return {
        activities: [],
        categories: [],
        
        // Filtres
        searchQuery: '',
        selectedCategoryId: '',
        selectedType: '',
        
        // Right Sheet
        rightSheetOpen: false,
        editingActivity: null,
        saving: false,
        
        // Formulaire
        activityForm: {
            title: '',
            description: '',
            duration: '30 minutes',
            ageRange: '6-8 ans',
            type: '',
            categoryId: '',
            objectives: [],
            workedPoints: []
        },
        
        init() {
            // Initialiser les données depuis les attributs data
            this.activities = JSON.parse(this.$el.dataset.activities || '[]');
            this.categories = JSON.parse(this.$el.dataset.categories || '[]');
        },
        
        // Computed
        get filteredActivities() {
            let filtered = [...this.activities];
            
            if (this.searchQuery) {
                const query = this.searchQuery.toLowerCase();
                filtered = filtered.filter(a => 
                    (a.title || '').toLowerCase().includes(query) ||
                    (a.description || '').toLowerCase().includes(query) ||
                    (a.category?.name || '').toLowerCase().includes(query)
                );
            }
            
            if (this.selectedCategoryId) {
                filtered = filtered.filter(a => a.category?.id == this.selectedCategoryId);
            }
            
            if (this.selectedType) {
                filtered = filtered.filter(a => a.type === this.selectedType);
            }
            
            return filtered;
        },
        
        get availableCategories() {
            return this.categories || [];
        },
        
        // Méthodes
        applyFilters() {
            // Les filtres sont appliqués automatiquement via computed
        },
        
        onCategoryChange() {
            // Méthode appelée lors du changement de catégorie
            // Peut être utilisée pour des actions supplémentaires si nécessaire
        },
        
        openCreate() {
            this.editingActivity = null;
            this.activityForm = {
                title: '',
                description: '',
                duration: '30 minutes',
                ageRange: '6-8 ans',
                type: '',
                categoryId: '',
                objectives: [],
                workedPoints: []
            };
            this.rightSheetOpen = true;
        },
        
        closeSheet() {
            this.rightSheetOpen = false;
            this.editingActivity = null;
        },
        
        addObjective() {
            this.activityForm.objectives.push('');
        },
        
        removeObjective(index) {
            this.activityForm.objectives.splice(index, 1);
        },
        
        addWorkedPoint() {
            this.activityForm.workedPoints.push('');
        },
        
        removeWorkedPoint(index) {
            this.activityForm.workedPoints.splice(index, 1);
        },
        
        async saveActivity() {
            this.saving = true;
            try {
                const url = this.editingActivity 
                    ? `/admin/activities/${this.editingActivity}/update`
                    : '/admin/activities/create';
                
                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(this.activityForm),
                });
                
                const result = await response.json();
                
                if (result.success) {
                    if (window.showToast) {
                        window.showToast(result.message, 'success');
                    }
                    this.closeSheet();
                    // Recharger la page pour voir les nouvelles données
                    window.location.reload();
                } else {
                    if (window.showToast) {
                        window.showToast(result.message, 'error');
                    }
                }
            } catch (error) {
                console.error('Erreur:', error);
                if (window.showToast) {
                    window.showToast('Erreur lors de l\'enregistrement', 'error');
                }
            } finally {
                this.saving = false;
            }
        },
        
        viewActivity(id) {
            window.location.href = `/admin/activities/${id}`;
        },
        
        formatDate(dateString) {
            if (!dateString) return '';
            try {
                const date = new Date(dateString);
                const day = String(date.getDate()).padStart(2, '0');
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const year = date.getFullYear();
                const hours = String(date.getHours()).padStart(2, '0');
                const minutes = String(date.getMinutes()).padStart(2, '0');
                return `${day}/${month}/${year} à ${hours}:${minutes}`;
            } catch (e) {
                return dateString;
            }
        }
    };
}
</script>
