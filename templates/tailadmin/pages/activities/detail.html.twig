{% extends 'tailadmin/layouts/base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
{% endblock %}

{% block content %}
<div 
    x-data="activityDetailManager()"
    data-activity='{{ activity|json_encode|e('html_attr') }}'
    data-images='{{ images|json_encode|e('html_attr') }}'
    data-comments='{{ comments|json_encode|e('html_attr') }}'
    data-categories='{{ categories|json_encode|e('html_attr') }}'
    class="p-4 mx-auto max-w-(--breakpoint-2xl) md:p-6"
>
    {% include 'tailadmin/components/breadcrumb.html.twig' %}

    <!-- Activity Info Card -->
    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03] mb-6">
        <div class="p-4 xl:p-6">
            <div class="flex items-start justify-between mb-4">
                <div class="flex-1">
                    <h3 class="text-2xl font-semibold text-gray-800 dark:text-white/90 mb-4" x-text="activity.title || 'Sans titre'"></h3>
                    
                    <div class="flex flex-wrap items-center gap-3 mb-4">
                        <span class="inline-flex rounded-full bg-brand-50 px-3 py-1 text-sm font-medium text-brand-500 dark:bg-brand-500/15 dark:text-brand-400" x-text="activity.category && activity.category.name ? activity.category.name : 'Sans catégorie'"></span>
                        <span class="inline-flex rounded-full bg-success-50 px-3 py-1 text-sm font-medium text-success-500 dark:bg-success-500/15 dark:text-success-400" x-text="activity.typeLabel"></span>
                        <span class="inline-flex items-center gap-2 rounded-full px-3 py-1 text-sm font-medium"
                            :class="{
                                'bg-gray-100 text-gray-700 dark:bg-white/[0.03] dark:text-white/80': activity.status === 'modification',
                                'bg-warning-50 text-warning-500 dark:bg-warning-500/15 dark:text-warning-400': activity.status === 'pending_validation',
                                'bg-blue-50 text-blue-500 dark:bg-blue-500/15 dark:text-blue-400': activity.status === 'validated',
                                'bg-success-50 text-success-500 dark:bg-success-500/15 dark:text-success-400': activity.status === 'published'
                            }"
                            x-text="activity.statusLabel || activity.status">
                        </span>
                    </div>
                    
                    <!-- Message de statut -->
                    <div class="mb-4 rounded-lg border border-gray-200 bg-gray-50 p-4 dark:border-gray-800 dark:bg-white/[0.02]">
                        <div class="flex items-start gap-3">
                            <svg class="h-5 w-5 text-gray-500 dark:text-gray-400 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <p class="text-sm text-gray-700 dark:text-gray-300" x-text="activity.statusMessage || ''"></p>
                        </div>
                    </div>
                </div>
                <div class="flex gap-2">
                    <a
                        href="{{ path('admin_activities_edit', {id: activity.id}) }}"
                        :class="activity.canModify 
                            ? 'inline-flex items-center gap-2 rounded-lg border border-gray-300 px-4 py-2.5 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-white/[0.03]' 
                            : 'inline-flex items-center gap-2 rounded-lg border border-gray-200 px-4 py-2.5 text-sm font-medium text-gray-400 cursor-not-allowed dark:border-gray-800 dark:text-gray-600 pointer-events-none'"
                        :title="activity.canModify ? 'Modifier l\'activité' : activity.statusMessage"
                    >
                        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                        Modifier
                    </a>
                    {% if activity.canDelete %}
                    <form method="POST" action="{{ path('admin_activities_delete', {id: activity.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette activité ? Cette action est irréversible.');" style="display: inline;">
                        <button
                            type="submit"
                            class="inline-flex items-center gap-2 rounded-lg border border-error-300 bg-error-50 px-4 py-2.5 text-sm font-medium text-error-700 shadow-theme-xs hover:bg-error-100 dark:border-error-700 dark:bg-error-900/20 dark:text-error-400 dark:hover:bg-error-900/30"
                        >
                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                            Supprimer
                        </button>
                    </form>
                    {% endif %}
                    <a href="{{ path('admin_activities_list') }}" class="inline-flex items-center gap-2 rounded-lg border border-gray-300 px-4 py-2.5 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-white/[0.03]">
                        <svg class="fill-current" width="20" height="20" viewBox="0 0 20 20" fill="none">
                            <path fill-rule="evenodd" clip-rule="evenodd" d="M9.70711 16.7071C9.31658 17.0976 8.68342 17.0976 8.29289 16.7071L2.29289 10.7071C1.90237 10.3166 1.90237 9.68342 2.29289 9.29289L8.29289 3.29289C8.68342 2.90237 9.31658 2.90237 9.70711 3.29289C10.0976 3.68342 10.0976 4.31658 9.70711 4.70711L5.41421 9H17C17.5523 9 18 9.44772 18 10C18 10.5523 17.5523 11 17 11H5.41421L9.70711 15.2929C10.0976 15.6834 10.0976 16.3166 9.70711 16.7071Z" fill=""/>
                        </svg>
                        Retour
                    </a>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                <div class="flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-brand-50 dark:bg-brand-500/15">
                        <svg class="fill-current text-brand-500 dark:text-brand-400" width="20" height="20" viewBox="0 0 20 20" fill="none">
                            <path d="M10 2C5.58172 2 2 5.58172 2 10C2 14.4183 5.58172 18 10 18C14.4183 18 18 14.4183 18 10C18 5.58172 14.4183 2 10 2ZM10 16C6.68629 16 4 13.3137 4 10C4 6.68629 6.68629 4 10 4C13.3137 4 16 6.68629 16 10C16 13.3137 13.3137 16 10 16ZM9 11V9H11V11H9ZM9 13V11H11V13H9Z" fill=""/>
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Durée</p>
                        <p class="text-base font-medium text-gray-800 dark:text-white/90" x-text="activity.duration"></p>
                    </div>
                </div>
                <div class="flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-warning-50 dark:bg-warning-500/15">
                        <svg class="fill-current text-warning-500 dark:text-warning-400" width="20" height="20" viewBox="0 0 20 20" fill="none">
                            <path d="M10 2C5.58172 2 2 5.58172 2 10C2 14.4183 5.58172 18 10 18C14.4183 18 18 14.4183 18 10C18 5.58172 14.4183 2 10 2ZM10 16C6.68629 16 4 13.3137 4 10C4 6.68629 6.68629 4 10 4C13.3137 4 16 6.68629 16 10C16 13.3137 13.3137 16 10 16ZM9 11V9H11V11H9ZM9 13V11H11V13H9Z" fill=""/>
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Tranche d'âges</p>
                        <p class="text-base font-medium text-gray-800 dark:text-white/90" x-text="activity.ageRange"></p>
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Description</h4>
                <div class="text-base text-gray-600 dark:text-gray-400 prose prose-sm max-w-none" x-html="activity.description"></div>
            </div>

            <!-- Objectifs -->
            <div class="mb-4" x-show="activity.objectives && activity.objectives.length > 0">
                <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Objectifs</h4>
                <ul class="list-disc list-inside space-y-1">
                    <template x-for="objective in activity.objectives" :key="objective">
                        <li class="text-sm text-gray-600 dark:text-gray-400" x-text="objective"></li>
                    </template>
                </ul>
            </div>

            <!-- Points travaillés -->
            <div class="mb-4" x-show="activity.workedPoints && activity.workedPoints.length > 0">
                <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Points travaillés</h4>
                <div class="flex flex-wrap gap-2">
                    <template x-for="point in activity.workedPoints" :key="point">
                        <span class="inline-flex rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-700 dark:bg-gray-800 dark:text-gray-300" x-text="point"></span>
                    </template>
                </div>
            </div>
        </div>
    </div>

    <!-- Images Section -->
    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03] mb-6" x-show="images.length > 0">
        <div class="p-4 xl:p-6">
            <h3 class="text-lg font-semibold text-gray-800 dark:text-white/90 mb-4">Images / Exemples</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                <template x-for="image in images" :key="image.id">
                    <div class="relative group">
                        <img :src="'/uploads/' + image.filePath" :alt="image.caption || 'Image'" class="w-full h-48 object-cover rounded-lg">
                        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400" x-text="image.caption" x-show="image.caption"></p>
                    </div>
                </template>
            </div>
        </div>
    </div>

    <!-- Comments Section -->
    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="p-4 xl:p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-800 dark:text-white/90">Commentaires</h3>
                <button
                    @click="showCommentForm = !showCommentForm"
                    class="inline-flex items-center gap-2 rounded-lg bg-brand-500 px-4 py-2 text-sm font-medium text-white hover:bg-brand-600"
                >
                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Ajouter un commentaire
                </button>
            </div>

            <!-- Formulaire de commentaire -->
            <div x-show="showCommentForm" class="mb-6 p-4 border border-gray-200 rounded-lg dark:border-gray-700">
                <form @submit.prevent="addComment()" enctype="multipart/form-data" class="space-y-4">
                    <textarea
                        x-model="commentForm.content"
                        required
                        rows="4"
                        class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        placeholder="Votre commentaire..."
                    ></textarea>
                    
                    <!-- Upload d'images -->
                    <div class="space-y-2">
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                            Images (optionnel)
                        </label>
                        <input
                            type="file"
                            @change="handleImageUpload($event)"
                            multiple
                            accept="image/*"
                            class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-brand-50 file:text-brand-700 hover:file:bg-brand-100 dark:file:bg-brand-500/15 dark:file:text-brand-400"
                        />
                        <!-- Aperçu des images sélectionnées -->
                        <div x-show="commentForm.images.length > 0" class="flex flex-wrap gap-2 mt-2">
                            <template x-for="(image, index) in commentForm.images" :key="index">
                                <div class="relative">
                                    <img :src="image.preview" class="w-20 h-20 object-cover rounded-lg border border-gray-200 dark:border-gray-700" />
                                    <button
                                        type="button"
                                        @click="removeImage(index)"
                                        class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-6 h-6 flex items-center justify-center text-xs hover:bg-red-600"
                                    >
                                        ×
                                    </button>
                                </div>
                            </template>
                        </div>
                    </div>
                    
                    <div class="flex gap-3 justify-end">
                        <button
                            type="button"
                            @click="showCommentForm = false; commentForm = { content: '', images: [] }"
                            class="rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300"
                        >
                            Annuler
                        </button>
                        <button
                            type="submit"
                            :disabled="savingComment"
                            class="rounded-lg bg-brand-500 px-4 py-2 text-sm font-medium text-white hover:bg-brand-600 disabled:opacity-50 disabled:cursor-not-allowed"
                        >
                            <span x-show="!savingComment">Publier</span>
                            <span x-show="savingComment">Publication...</span>
                        </button>
                    </div>
                </form>
            </div>

            <!-- Liste des commentaires -->
            <div class="space-y-4" x-show="comments.length > 0">
                <template x-for="comment in comments" :key="comment.id">
                    <div class="border-b border-gray-200 pb-4 dark:border-gray-700 last:border-0">
                        <div class="flex items-start gap-3">
                            <div class="flex-1">
                                <div class="flex items-center gap-2 mb-2">
                                    <span class="text-sm font-medium text-gray-800 dark:text-white/90" x-text="comment.author?.firstName + ' ' + comment.author?.lastName"></span>
                                    <span class="text-xs text-gray-500 dark:text-gray-400" x-text="new Date(comment.createdAt).toLocaleDateString('fr-FR')"></span>
                                </div>
                                <p class="text-sm text-gray-600 dark:text-gray-400 whitespace-pre-wrap mb-2" x-text="comment.content"></p>
                                
                                <!-- Images du commentaire -->
                                <div x-show="comment.images && comment.images.length > 0" class="flex flex-wrap gap-2 mt-2">
                                    <template x-for="image in comment.images" :key="image.id">
                                        <div class="relative group">
                                            <img 
                                                :src="image.fileUrl" 
                                                :alt="image.caption || 'Image'" 
                                                class="w-32 h-32 object-cover rounded-lg border border-gray-200 dark:border-gray-700 cursor-pointer hover:opacity-90 transition-opacity"
                                                @click="openImageModal(image.fileUrl)"
                                            />
                                            <p x-show="image.caption" class="mt-1 text-xs text-gray-500 dark:text-gray-400" x-text="image.caption"></p>
                                        </div>
                                    </template>
                                </div>
                            </div>
                        </div>
                    </div>
                </template>
            </div>

            <div x-show="comments.length === 0" class="text-center py-8 text-gray-500 dark:text-gray-400">
                Aucun commentaire pour le moment
            </div>
        </div>
    </div>

    <!-- Modal pour afficher les images en grand -->
    <div
        x-show="imageModalOpen"
        @click="imageModalOpen = false"
        x-transition:enter="transition-opacity ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition-opacity ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 z-50 bg-black/75 backdrop-blur-sm flex items-center justify-center p-4"
        style="display: none;"
        x-cloak
    >
        <div @click.stop class="relative max-w-4xl max-h-[90vh] w-full">
            <button
                @click="imageModalOpen = false"
                class="absolute -top-10 right-0 text-white hover:text-gray-300 transition-colors"
            >
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
            <img :src="imageModalSrc" alt="Image" class="max-w-full max-h-[90vh] object-contain rounded-lg" />
        </div>
    </div>

</div>

<script>
function activityDetailManager() {
    return {
        activity: {},
        images: [],
        comments: [],
        
        showCommentForm: false,
        savingComment: false,
        imageModalOpen: false,
        imageModalSrc: '',
        
        commentForm: {
            content: '',
            images: []
        },
        
        init() {
            // Initialiser les données depuis les attributs data
            this.activity = JSON.parse(this.$el.dataset.activity || '{}');
            this.images = JSON.parse(this.$el.dataset.images || '[]');
            this.comments = JSON.parse(this.$el.dataset.comments || '[]');
        },
        
        handleImageUpload(event) {
            const files = Array.from(event.target.files || []);
            files.forEach(file => {
                if (file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        this.commentForm.images.push({
                            file: file,
                            preview: e.target.result
                        });
                    };
                    reader.readAsDataURL(file);
                }
            });
        },
        
        removeImage(index) {
            this.commentForm.images.splice(index, 1);
        },
        
        openImageModal(imageUrl) {
            this.imageModalSrc = imageUrl;
            this.imageModalOpen = true;
        },
        
        async addComment() {
            this.savingComment = true;
            try {
                const formData = new FormData();
                formData.append('content', this.commentForm.content);
                
                // Ajouter les images
                this.commentForm.images.forEach((imageData, index) => {
                    formData.append(`images[${index}]`, imageData.file);
                });
                
                const response = await fetch(`/admin/activities/${this.activity.id}/comment`, {
                    method: 'POST',
                    body: formData,
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Recharger la page après succès
                    window.location.reload();
                } else {
                    if (window.showToast) {
                        window.showToast(result.message, 'error');
                    }
                }
            } catch (error) {
                console.error('Erreur:', error);
                if (window.showToast) {
                    window.showToast('Erreur lors de l\'ajout du commentaire', 'error');
                }
            } finally {
                this.savingComment = false;
            }
        }
    };
}
</script>
{% endblock %}

