{% extends 'tailadmin/layouts/base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
{% endblock %}

{% block content %}
<div 
    x-data="activityCreateManager()"
    class="p-4 mx-auto max-w-(--breakpoint-2xl) md:p-6"
>
    {% include 'tailadmin/components/breadcrumb.html.twig' %}

    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="px-6 py-5 border-b border-gray-100 dark:border-gray-800">
            <div class="flex items-center justify-between">
                <h3 class="text-base font-medium text-gray-800 dark:text-white/90">Créer une activité</h3>
                <a href="{{ path('admin_activities_list') }}" class="inline-flex items-center gap-2 rounded-lg border border-gray-300 px-4 py-2.5 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-white/[0.03]">
                    <svg class="fill-current" width="20" height="20" viewBox="0 0 20 20" fill="none">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M9.70711 16.7071C9.31658 17.0976 8.68342 17.0976 8.29289 16.7071L2.29289 10.7071C1.90237 10.3166 1.90237 9.68342 2.29289 9.29289L8.29289 3.29289C8.68342 2.90237 9.31658 2.90237 9.70711 3.29289C10.0976 3.68342 10.0976 4.31658 9.70711 4.70711L5.41421 9H17C17.5523 9 18 9.44772 18 10C18 10.5523 17.5523 11 17 11H5.41421L9.70711 15.2929C10.0976 15.6834 10.0976 16.3166 9.70711 16.7071Z" fill=""/>
                    </svg>
                    Retour
                </a>
            </div>
        </div>

        <form @submit.prevent="createActivity()" class="p-6 space-y-6">
            <!-- Titre -->
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                    Titre <span class="text-error-500">*</span>
                </label>
                <input
                    type="text"
                    x-model="createForm.title"
                    required
                    class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                    placeholder="Titre de l'activité"
                />
            </div>

            <!-- Description avec éditeur WYSIWYG -->
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                    Description <span class="text-error-500">*</span>
                </label>
                <div 
                    x-ref="descriptionEditor"
                    class="min-h-[400px] rounded-lg border border-gray-200 bg-white dark:border-gray-700 dark:bg-gray-800"
                ></div>
                <input type="hidden" x-model="createForm.description" id="description-hidden">
            </div>

            <!-- Durée -->
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                    Durée <span class="text-error-500">*</span>
                </label>
                <select
                    x-model="createForm.duration"
                    required
                    class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                >
                    <option value="">Sélectionner une durée</option>
                    <option value="15 minutes">15 minutes</option>
                    <option value="15-30 minutes">15-30 minutes</option>
                    <option value="30 minutes">30 minutes</option>
                    <option value="30-45 minutes">30-45 minutes</option>
                    <option value="45 minutes">45 minutes</option>
                    <option value="45-60 minutes">45-60 minutes</option>
                    <option value="1 heure">1 heure</option>
                    <option value="1h30">1h30</option>
                    <option value="2 heures">2 heures</option>
                </select>
            </div>

            <!-- Niveau scolaire -->
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                    Niveau scolaire <span class="text-error-500">*</span>
                </label>
                <select
                    x-model="createForm.ageRange"
                    required
                    class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                >
                    <option value="">Sélectionner un niveau</option>
                    <option value="Maternelle">Maternelle</option>
                    <option value="Primaire">Primaire</option>
                    <option value="Collège">Collège</option>
                    <option value="Lycée">Lycée</option>
                </select>
            </div>

            <!-- Objectifs -->
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                    Objectifs
                </label>
                <div class="space-y-2">
                    <template x-for="(objective, index) in (createForm.objectives || [])" :key="index">
                        <div class="flex gap-2">
                            <input
                                type="text"
                                x-model="createForm.objectives[index]"
                                class="flex-1 rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                                placeholder="Objectif"
                            />
                            <button
                                type="button"
                                @click="createForm.objectives.splice(index, 1)"
                                class="rounded-lg border border-error-500 bg-error-50 px-3 py-2 text-sm text-error-600 hover:bg-error-100 dark:border-error-400 dark:bg-error-900/30 dark:text-error-400"
                            >
                                Supprimer
                            </button>
                        </div>
                    </template>
                    <button
                        type="button"
                        @click="createForm.objectives = createForm.objectives || []; createForm.objectives.push('')"
                        class="w-full rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300"
                    >
                        + Ajouter un objectif
                    </button>
                </div>
            </div>

            <!-- Images -->
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                    Images
                </label>
                <input
                    type="file"
                    accept="image/*"
                    multiple
                    @change="handleImagesSelect($event)"
                    class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                />
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                    Formats acceptés : JPG, PNG, GIF (max 5MB par image)
                </p>
                <!-- Prévisualisation des images -->
                <div x-show="createForm.images && createForm.images.length > 0" class="mt-4 grid grid-cols-2 gap-4 sm:grid-cols-3">
                    <template x-for="(image, index) in createForm.images" :key="index">
                        <div class="relative">
                            <img
                                :src="image.preview"
                                :alt="image.name"
                                class="h-32 w-full rounded-lg border border-gray-200 object-cover dark:border-gray-700"
                            />
                            <button
                                type="button"
                                @click="createForm.images.splice(index, 1)"
                                class="absolute top-2 right-2 rounded-full bg-error-500 p-1.5 text-white shadow-lg hover:bg-error-600"
                            >
                                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                            </button>
                            <p class="mt-1 truncate text-xs text-gray-500 dark:text-gray-400" x-text="image.name"></p>
                        </div>
                    </template>
                </div>
            </div>

            <!-- Liens -->
            <div>
                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                    Liens
                </label>
                <div class="space-y-2">
                    <template x-for="(link, index) in (createForm.links || [])" :key="index">
                        <div class="flex gap-2">
                            <input
                                type="url"
                                x-model="createForm.links[index]"
                                class="flex-1 rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                                placeholder="https://example.com"
                            />
                            <button
                                type="button"
                                @click="createForm.links.splice(index, 1)"
                                class="rounded-lg border border-error-500 bg-error-50 px-3 py-2 text-sm text-error-600 hover:bg-error-100 dark:border-error-400 dark:bg-error-900/30 dark:text-error-400"
                            >
                                Supprimer
                            </button>
                        </div>
                    </template>
                    <button
                        type="button"
                        @click="createForm.links = createForm.links || []; createForm.links.push('')"
                        class="w-full rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300"
                    >
                        + Ajouter un lien
                    </button>
                </div>
            </div>

            <!-- Boutons d'action -->
            <div class="flex gap-3 justify-end pt-4 border-t border-gray-200 dark:border-gray-800">
                <a href="{{ path('admin_activities_list') }}" class="rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700">
                    Annuler
                </a>
                <button
                    type="submit"
                    :disabled="saving"
                    class="rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600 disabled:opacity-50 disabled:cursor-not-allowed"
                >
                    <span x-show="!saving">Créer</span>
                    <span x-show="saving">Enregistrement...</span>
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function activityCreateManager() {
    return {
        createForm: {
            title: '',
            description: '',
            duration: '30 minutes',
            ageRange: 'Primaire',
            objectives: [],
            images: [],
            links: []
        },
        quillEditor: null,
        quillLoaded: false,
        saving: false,

        init() {
            if (typeof Quill === 'undefined') {
                const script = document.createElement('script');
                script.src = 'https://cdn.quilljs.com/1.3.6/quill.js';
                script.onload = () => {
                    this.quillLoaded = true;
                    this.$nextTick(() => this.initQuillEditor());
                };
                document.head.appendChild(script);
            } else {
                this.quillLoaded = true;
                this.$nextTick(() => this.initQuillEditor());
            }
        },

        initQuillEditor() {
            const editorElement = this.$refs.descriptionEditor;
            if (!editorElement || typeof Quill === 'undefined') {
                return;
            }

            this.quillEditor = new Quill(editorElement, {
                theme: 'snow',
                modules: {
                    toolbar: [
                        [{ 'header': [1, 2, 3, false] }],
                        ['bold', 'italic', 'underline', 'strike'],
                        [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                        [{ 'script': 'sub'}, { 'script': 'super' }],
                        [{ 'indent': '-1'}, { 'indent': '+1' }],
                        [{ 'direction': 'rtl' }],
                        [{ 'color': [] }, { 'background': [] }],
                        [{ 'align': [] }],
                        ['link', 'image', 'video'],
                        ['clean']
                    ]
                },
                placeholder: 'Rédigez la description de l\'activité...'
            });

            this.quillEditor.on('text-change', () => {
                this.createForm.description = this.quillEditor.root.innerHTML;
            });
        },

        handleImagesSelect(event) {
            const files = Array.from(event.target.files || []);
            if (files.length === 0) return;

            files.forEach(file => {
                // Vérifier le type
                if (!file.type.startsWith('image/')) {
                    if (window.showToast) {
                        window.showToast(`Le fichier ${file.name} n'est pas une image`, 'error');
                    }
                    return;
                }

                // Vérifier la taille (max 5MB)
                if (file.size > 5 * 1024 * 1024) {
                    if (window.showToast) {
                        window.showToast(`Le fichier ${file.name} est trop volumineux (max 5MB)`, 'error');
                    }
                    return;
                }

                // Lire le fichier en base64 pour la prévisualisation
                const reader = new FileReader();
                reader.onload = (e) => {
                    if (!this.createForm.images) {
                        this.createForm.images = [];
                    }
                    this.createForm.images.push({
                        file: file,
                        name: file.name,
                        size: file.size,
                        type: file.type,
                        preview: e.target.result,
                        base64: e.target.result.split(',')[1] // Retirer le préfixe data:image/...
                    });
                };
                reader.readAsDataURL(file);
            });

            // Réinitialiser l'input
            event.target.value = '';
        },

        async createActivity() {
            if (this.quillEditor) {
                this.createForm.description = this.quillEditor.root.innerHTML;
            }

            if (!this.createForm.description || this.createForm.description.trim() === '<p><br></p>') {
                if (window.showToast) {
                    window.showToast('La description est requise', 'error');
                }
                return;
            }

            this.saving = true;
            try {
                // Filtrer les liens vides
                const validLinks = (this.createForm.links || []).filter(link => link && link.trim().length > 0);

                const payload = {
                    title: this.createForm.title,
                    description: this.createForm.description,
                    duration: this.createForm.duration,
                    ageRange: this.createForm.ageRange,
                    objectives: this.createForm.objectives || [],
                    links: validLinks,
                    images: (this.createForm.images || []).map(img => ({
                        fileName: img.name,
                        fileSize: img.size,
                        mimeType: img.type,
                        fileBase64: img.base64
                    }))
                };

                const response = await fetch('/admin/activities/create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(payload),
                });

                const result = await response.json();

                if (result.success) {
                    if (window.showToast) {
                        window.showToast(result.message || 'Activité créée avec succès', 'success');
                    }
                    if (result.id) {
                        window.location.href = `/admin/activities/${result.id}`;
                    } else {
                        window.location.href = '{{ path('admin_activities_list') }}';
                    }
                } else {
                    if (window.showToast) {
                        window.showToast(result.message || 'Erreur lors de la création', 'error');
                    }
                }
            } catch (error) {
                console.error('Erreur:', error);
                if (window.showToast) {
                    window.showToast('Erreur lors de la création', 'error');
                }
            } finally {
                this.saving = false;
            }
        }
    };
}
</script>
{% endblock %}


