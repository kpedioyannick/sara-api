<script>
function planningManager() {
    return {
        rightSheetOpen: false,
        taskRightSheetOpen: false,
        isEdit: false,
        isView: false,
        currentId: null,
        showCustomTitle: false,
        viewData: {
            id: null,
            title: '',
            description: '',
            type: '',
            status: '',
            userId: '',
            userName: '',
            date: '',
            startTime: '',
            endTime: '',
            startDate: '',
            endDate: '',
        },
        formData: {
            title: '',
            description: '',
            type: '',
            status: 'scheduled',
            userType: '',
            userId: '',
            date: '',
            startTime: '',
            endTime: '',
            startDate: '',
            endDate: '',
        },
        init() {
            // Initialisation simplifi√©e
        },
        handleTitleChange(value) {
            if (value === 'custom') {
                this.showCustomTitle = true;
                this.formData.title = '';
            } else {
                this.showCustomTitle = false;
                
                // D√©terminer automatiquement le type selon le titre
                if (value.startsWith('Disponibilit√© pour √©changer')) {
                    this.formData.type = 'availability_exchange';
                } else if (value.startsWith('Disponibilit√© pour venir sur site') || value.startsWith('Disponibilit√© pour aider √† distance')) {
                    this.formData.type = 'availability_activity';
                } else {
                    // Pour les mati√®res, utiliser un type par d√©faut selon le userType
                    if (this.formData.userType === 'student') {
                        this.formData.type = 'course'; // Par d√©faut pour les √©l√®ves
                    } else {
                        this.formData.type = 'other'; // Par d√©faut pour les autres
                    }
                }
            }
        },
        getPlanningUrl(weekOffset) {
            const params = new URLSearchParams(window.location.search);
            
            // D√©finir le param√®tre week
            params.set('week', weekOffset);
            
            // Pr√©server tous les autres filtres (profileType, selectedIds)
            // Ces param√®tres sont d√©j√† dans l'URL, donc ils seront pr√©serv√©s automatiquement
            
            const queryString = params.toString();
            return '/admin/planning' + (queryString ? '?' + queryString : '');
        },
        openCreate(date = null) {
            this.isEdit = false;
            this.isView = false;
            this.currentId = null;
            this.showCustomTitle = false;
            const selectedDate = date || new Date().toISOString().split('T')[0];
            
            // Pr√©remplir les champs selon le type d'utilisateur
            let userType = '';
            let userId = '';
            if (this.currentUserType === 'student' && this.currentUserId) {
                userType = 'student';
                userId = this.currentUserId;
            } else if (this.currentUserType === 'specialist' && this.currentUserId) {
                // Pour les sp√©cialistes, pr√©remplir avec "Moi" par d√©faut
                userType = 'specialist';
                userId = this.currentUserId;
            }
            
            this.formData = {
                title: '',
                description: '',
                type: '',
                status: 'scheduled',
                userType: userType,
                userId: userId,
                date: selectedDate,
                startTime: '09:00',
                endTime: '10:00',
                startDate: '',
                endDate: '',
            };
            this.updateDateTime();
            this.rightSheetOpen = true;
        },
        
        onUserTypeChange() {
            // R√©initialiser userId quand le type change
            this.formData.userId = '';
            
            // Si le sp√©cialiste s√©lectionne "Moi", pr√©remplir avec son ID
            if (this.formData.userType === 'specialist' && this.currentUserType === 'specialist' && this.currentUserId) {
                this.formData.userId = this.currentUserId;
            }
        },
        openCreateWithDate(dateString) {
            // Convertir la date du format "YYYY-MM-DD" si n√©cessaire
            let date = dateString;
            if (dateString && !dateString.match(/^\d{4}-\d{2}-\d{2}$/)) {
                // Si la date est dans un autre format, essayer de la convertir
                const dateObj = new Date(dateString);
                if (!isNaN(dateObj.getTime())) {
                    date = dateObj.toISOString().split('T')[0];
                } else {
                    date = new Date().toISOString().split('T')[0];
                }
            }
            this.openCreate(date);
        },
        openView(id, title, description, startDate, endDate, userId, type, status) {
            this.isView = true;
            this.isEdit = false;
            this.currentId = id;
            
            // Trouver le nom de l'utilisateur
            let userName = 'N/A';
            if (userId && this.studentsData) {
                const user = this.studentsData.find(s => s.id == userId);
                if (user) {
                    userName = user.firstName + ' ' + user.lastName;
                }
            }
            
            // Parser les dates
            let date = '';
            let startTime = '';
            let endTime = '';
            
            if (startDate) {
                const start = new Date(startDate);
                date = start.toISOString().split('T')[0];
                startTime = start.toTimeString().slice(0, 5);
            }
            
            if (endDate) {
                const end = new Date(endDate);
                endTime = end.toTimeString().slice(0, 5);
            }
            
            // Mapper le statut
            const statusMap = {
                'completed': 'Termin√©',
                'in_progress': 'En cours',
                'to_do': '√Ä faire',
                'scheduled': 'Planifi√©',
                'planifie': 'Planifi√©',
                'en_cours': 'En cours',
                'termine': 'Termin√©'
            };
            
            // Mapper le type
            const typeMap = {
                'homework': 'Devoir',
                'course': 'Cours',
                'revision': 'R√©vision',
                'activity': 'Activit√©',
                'assessment': '√âvaluation',
                'task': 'T√¢che',
                'other': 'Autre'
            };
            
            this.viewData = {
                id: id,
                title: title || 'N/A',
                description: description || 'Aucune description',
                type: typeMap[type] || type || 'N/A',
                status: statusMap[status] || status || 'N/A',
                userId: userId || '',
                userName: userName,
                date: date || 'N/A',
                startTime: startTime || 'N/A',
                endTime: endTime || 'N/A',
                startDate: startDate || '',
                endDate: endDate || '',
            };
            this.rightSheetOpen = true;
        },
        openEdit(id, title, startDate, endDate, userId, type, status) {
            this.isEdit = true;
            this.isView = false;
            this.currentId = id;
            this.showCustomTitle = false;
            
            // Parser les dates
            let date = '';
            let startTime = '09:00';
            let endTime = '10:00';
            
            if (startDate) {
                const start = new Date(startDate);
                date = start.toISOString().split('T')[0];
                startTime = start.toTimeString().slice(0, 5);
            }
            
            if (endDate) {
                const end = new Date(endDate);
                endTime = end.toTimeString().slice(0, 5);
            }
            
            // D√©terminer le type d'utilisateur selon l'ID
            let userType = '';
            if (userId) {
                if (this.coachData && userId == this.coachData.id) {
                    userType = 'coach';
                } else if (this.parentData && userId == this.parentData.id) {
                    userType = 'parent';
                } else if (this.studentsData.find(s => s.id == userId)) {
                    userType = 'student';
                } else if (this.specialistsData.find(s => s.id == userId)) {
                    userType = 'specialist';
                }
            }
            
            this.formData = {
                title: title || '',
                description: '',
                type: type || '',
                status: status || 'scheduled',
                userType: userType,
                userId: userId || '',
                date: date || new Date().toISOString().split('T')[0],
                startTime: startTime,
                endTime: endTime,
                startDate: '',
                endDate: '',
            };
            this.updateDateTime();
            this.rightSheetOpen = true;
        },
        openDelete(id) {
            if (confirm('√ätes-vous s√ªr de vouloir supprimer cet √©v√©nement ?')) {
                fetch(`/admin/planning/${id}/delete`, {
                    method: 'DELETE',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        this.showMessage(data.message || '√âv√©nement supprim√© avec succ√®s', 'success');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        this.showMessage(data.message || 'Erreur lors de la suppression', 'error');
                    }
                })
                .catch(error => {
                    this.showMessage('Erreur de connexion', 'error');
                });
            }
        },
        updateDateTime() {
            // Combiner date + heures en datetime pour l'API
            if (this.formData.date && this.formData.startTime) {
                this.formData.startDate = `${this.formData.date}T${this.formData.startTime}:00`;
            }
            if (this.formData.date && this.formData.endTime) {
                this.formData.endDate = `${this.formData.date}T${this.formData.endTime}:00`;
            }
        },
        saveEvent() {
            // Mettre √† jour les dates avant l'envoi
            this.updateDateTime();
            
            // V√©rifier que le titre est rempli
            if (!this.formData.title || this.formData.title.trim() === '') {
                this.showMessage('Veuillez s√©lectionner ou entrer un titre', 'error');
                return;
            }
            
            const url = this.isEdit 
                ? `/admin/planning/${this.currentId}/update`
                : '/admin/planning/create';
            
            // Pr√©parer les donn√©es pour l'API
            // D√©terminer le userId selon le type s√©lectionn√©
            let userId = this.formData.userId;
            if (this.formData.userType === 'coach' && this.coachData) {
                userId = this.coachData.id;
            } else if (this.formData.userType === 'parent' && this.parentData) {
                userId = this.parentData.id;
            }
            
            const data = {
                title: this.formData.title,
                description: this.formData.description || '',
                type: this.formData.type,
                status: this.formData.status,
                userId: userId,
                startDate: this.formData.startDate,
                endDate: this.formData.endDate,
            };
            
            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                },
                body: JSON.stringify(data),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    this.showMessage(data.message || '√âv√©nement enregistr√© avec succ√®s', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    this.showMessage(data.message || 'Erreur lors de l\'enregistrement', 'error');
                }
            })
            .catch(error => {
                this.showMessage('Erreur de connexion', 'error');
            });
        },
        showMessage(message, type = 'info') {
            if (window.showToast) {
                window.showToast(message, type);
            } else {
                const toastManager = document.querySelector('[x-data="toastManager()"]')?.__x?.$data;
                if (toastManager) {
                    toastManager.show(message, type);
                }
            }
        },
        closeSheet() {
            this.rightSheetOpen = false;
            this.isEdit = false;
            this.isView = false;
            this.currentId = null;
            this.viewData = {
                id: null,
                title: '',
                description: '',
                type: '',
                status: '',
                userId: '',
                userName: '',
                date: '',
                startTime: '',
                endTime: '',
                startDate: '',
                endDate: '',
            };
        },
        async openTaskDetails(taskId) {
            this.taskRightSheetOpen = true;
            
            // Afficher un loader
            this.$nextTick(() => {
                const container = document.getElementById('task-rightsheet-container');
                if (container) {
                    container.innerHTML = '<div class="flex items-center justify-center h-full"><div class="text-center"><div class="animate-spin rounded-full h-8 w-8 border-b-2 border-brand-500 mx-auto"></div><p class="mt-2 text-sm text-gray-500">Chargement...</p></div></div>';
                }
            });
            
            try {
                const response = await fetch(`/admin/planning/task/${taskId}/details`, {
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                    }
                });
                
                if (!response.ok) {
                    throw new Error('Erreur lors du chargement');
                }
                
                const html = await response.text();
                
                // Injecter le HTML dans le conteneur et initialiser Alpine.js
                this.$nextTick(() => {
                    const container = document.getElementById('task-rightsheet-container');
                    if (container) {
                        // Extraire les scripts du HTML
                        const tempDiv = document.createElement('div');
                        tempDiv.innerHTML = html;
                        
                        const scripts = tempDiv.querySelectorAll('script');
                        scripts.forEach(script => {
                            const newScript = document.createElement('script');
                            if (script.src) {
                                newScript.src = script.src;
                            } else {
                                newScript.textContent = script.textContent;
                            }
                            document.head.appendChild(newScript);
                        });
                        
                        // Injecter le HTML sans les scripts
                        const htmlWithoutScripts = html.replace(/<script\b[^<]*(?:(?!<\/script>)<[^<]*)*<\/script>/gi, '');
                        container.innerHTML = htmlWithoutScripts;
                        
                        // Initialiser Alpine.js sur le nouveau contenu
                        setTimeout(() => {
                            if (window.Alpine) {
                                Alpine.initTree(container);
                            }
                        }, 100);
                    }
                });
            } catch (error) {
                console.error('Erreur:', error);
                const container = document.getElementById('task-rightsheet-container');
                if (container) {
                    container.innerHTML = '<div class="flex items-center justify-center h-full"><div class="text-center text-red-500"><p class="text-sm">Erreur lors du chargement</p></div></div>';
                }
            }
        },
        closeTaskSheet() {
            this.taskRightSheetOpen = false;
            const container = document.getElementById('task-rightsheet-container');
            if (container) {
                container.innerHTML = '';
            }
        },
        handleTaskClickAway(event) {
            // Emp√™cher la fermeture si du texte est s√©lectionn√© ou si on clique sur un √©l√©ment interactif
            const selection = window.getSelection();
            if (selection && selection.toString().length > 0) {
                return;
            }
            
            const target = event.target;
            if (target.tagName === 'INPUT' || target.tagName === 'TEXTAREA' || target.tagName === 'BUTTON' || target.tagName === 'SELECT' || target.closest('button') || target.closest('input') || target.closest('textarea') || target.closest('select')) {
                return;
            }
            
            this.closeTaskSheet();
        }
    };
}

