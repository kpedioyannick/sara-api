{% extends 'tailadmin/layouts/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" />
{% endblock %}

{% block content %}
<div 
    x-data="planningManager()"
    class="p-4 mx-auto max-w-(--breakpoint-2xl) md:p-6"
>
    {% include 'tailadmin/components/breadcrumb.html.twig' %}

    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <!-- Week Navigation Header -->
        <div class="px-6 py-5 border-b border-gray-100 dark:border-gray-800">
            <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
                <div>
                    <h3 class="text-base font-medium text-gray-800 dark:text-white/90">
                        Planning hebdomadaire
                    </h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400" id="week-range">
                        {{ weekRange }}
                    </p>
                </div>
                <div class="flex items-center gap-3">
                    <!-- Navigation buttons -->
                    <div class="flex items-center gap-2 rounded-lg border border-gray-200 bg-white p-1 dark:border-gray-700 dark:bg-gray-800">
                        <a
                            x-bind:href="getPlanningUrl({{ prevWeek }})"
                            class="flex h-9 w-9 items-center justify-center rounded-lg text-gray-500 transition-colors hover:bg-gray-100 hover:text-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-gray-300"
                            title="Semaine pr√©c√©dente"
                        >
                            <svg class="fill-current" width="20" height="20" viewBox="0 0 20 20" fill="none">
                                <path d="M12.5 15L7.5 10L12.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </a>
                        <a
                            x-bind:href="getPlanningUrl(0)"
                            class="px-3 py-1.5 text-sm font-medium text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
                            title="Cette semaine"
                        >
                            Aujourd'hui
                        </a>
                        <a
                            x-bind:href="getPlanningUrl({{ nextWeek }})"
                            class="flex h-9 w-9 items-center justify-center rounded-lg text-gray-500 transition-colors hover:bg-gray-100 hover:text-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-gray-300"
                            title="Semaine suivante"
                        >
                            <svg class="fill-current" width="20" height="20" viewBox="0 0 20 20" fill="none">
                                <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Weekly Calendar Grid -->
        <div class="p-4 sm:p-6">
            <div class="grid grid-cols-1 gap-4 lg:grid-cols-7">
                {% for day in weekDays %}
                <div class="rounded-xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
                    <!-- Day Header -->
                    <div class="border-b border-gray-100 bg-gray-50 px-4 py-3 dark:border-gray-800 dark:bg-gray-900/50">
                        <div class="text-center">
                            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">{{ day.name }}</p>
                            <p class="mt-1 text-lg font-semibold text-gray-800 dark:text-white/90">{{ day.day }}/{{ day.month }}</p>
                        </div>
                    </div>

                    <!-- Events List - Todo List Style -->
                    <div class="min-h-[200px] p-3">
                        {% if day.events|length > 0 %}
                            <ul class="space-y-2">
                                {% for event in day.events %}
                                {% set startTime = event.startDate|split(' ')[1]|slice(0, 5) %}
                                {% set endTime = event.endDate|split(' ')[1]|slice(0, 5) %}
                                {% set isCompleted = event.status == 'completed' %}
                                <li class="flex items-start gap-3 p-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors"
                                    {% if event.sourceType is defined and event.sourceType == 'task' and event.sourceId is defined %}
                                        @click="openTaskDetails({{ event.sourceId }}, '{{ event.startDate }}')"
                                    {% else %}
                                        @click="openView({{ event.id|default('null') }}, '{{ event.title|e('js') }}', '{{ event.description|e('js')|default('') }}', '{{ event.startDate }}', '{{ event.endDate }}', {{ event.userId }}, '{{ event.type }}', '{{ event.status }}')"
                                    {% endif %}
                                >
                                    <!-- Checkbox -->
                                    <input
                                        type="checkbox"
                                        {% if isCompleted %}checked{% endif %}
                                        class="mt-1 h-4 w-4 rounded border-gray-300 text-brand-500 focus:ring-brand-500 dark:border-gray-600 dark:bg-gray-700 cursor-pointer"
                                        readonly
                                        tabindex="-1"
                                    />
                                    
                                    <!-- Event Content -->
                                    <div class="flex-1 min-w-0 cursor-pointer">
                                        <!-- Title -->
                                        <div class="flex items-start justify-between gap-2">
                                            <h4 class="text-sm font-medium text-gray-800 dark:text-white/90 {% if isCompleted %}line-through text-gray-500{% endif %}">
                                                {{ event.title }}
                                            </h4>
                                            {% if event.status == 'completed' %}
                                            <span class="inline-flex items-center rounded-full bg-success-100 px-2 py-0.5 text-xs font-medium text-success-600 dark:bg-success-900/30 dark:text-success-400 flex-shrink-0">
                                                Termin√©
                                            </span>
                                            {% elseif event.status == 'in_progress' %}
                                            <span class="inline-flex items-center rounded-full bg-brand-100 px-2 py-0.5 text-xs font-medium text-brand-600 dark:bg-brand-900/30 dark:text-brand-400 flex-shrink-0">
                                                En cours
                                            </span>
                                            {% endif %}
                                        </div>
                                        
                                        <!-- Additional Info -->
                                        <div class="mt-1 flex flex-wrap items-center gap-2 text-xs text-gray-600 dark:text-gray-400">
                                            <!-- Time -->
                                            <span class="inline-flex items-center gap-1">
                                                <svg class="h-3 w-3" fill="none" viewBox="0 0 16 16" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 1a7 7 0 100 14A7 7 0 008 1zM7.5 4v4l3.5 2 .5-.866L8.5 7.5V4h-1z" />
                                                </svg>
                                                <span>{{ startTime }} - {{ endTime }}</span>
                                            </span>
                                            
                                            <!-- User -->
                                            <span class="inline-flex items-center gap-1">
                                                <svg class="h-3 w-3" fill="none" viewBox="0 0 16 16" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-14 0h14z" />
                                                </svg>
                                                <span>{{ event.userName }}</span>
                                            </span>
                                            
                                            <!-- Type -->
                                            <span class="inline-flex items-center gap-1">
                                                {% if event.sourceType is defined and event.sourceType == 'task' %}
                                                    üìã T√¢che
                                                {% else %}
                                                    {{ event.typeLabel|default(event.type|upper) }}
                                                {% endif %}
                                            </span>
                                        </div>
                                        
                                        <!-- Description (if available) -->
                                        {% if event.description %}
                                        <p class="mt-1 text-xs text-gray-500 dark:text-gray-500 line-clamp-2">
                                            {{ event.description }}
                                        </p>
                                        {% endif %}
                                    </div>
                                    
                                    <!-- Action buttons (only for non-task events) -->
                                    {% if event.sourceType is not defined or event.sourceType != 'task' %}
                                    <div class="flex gap-1 flex-shrink-0" @click.stop>
                                        <button
                                            @click="openEdit({{ event.id }}, '{{ event.title|e('js') }}', '{{ event.startDate }}', '{{ event.endDate }}', {{ event.userId }}, '{{ event.type }}', '{{ event.status }}')"
                                            class="rounded p-1 text-gray-400 hover:bg-gray-100 hover:text-gray-600 dark:hover:bg-gray-700"
                                            title="Modifier"
                                        >
                                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        </button>
                                        <button
                                            @click="openDelete({{ event.id }})"
                                            class="rounded p-1 text-red-400 hover:bg-red-50 hover:text-red-600 dark:hover:bg-red-900/20"
                                            title="Supprimer"
                                        >
                                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </button>
                                    </div>
                                    {% endif %}
                                </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <div class="flex h-full min-h-[150px] flex-col items-center justify-center text-center">
                                <div class="text-gray-400 dark:text-gray-500">
                                    <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    <p class="mt-2 text-sm">Aucune t√¢che</p>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

        <!-- Summary Footer -->
        <div class="border-t border-gray-100 bg-gray-50 px-6 py-4 dark:border-gray-800 dark:bg-gray-900/50">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div class="flex flex-wrap items-center gap-4">
                    <div class="flex items-center gap-2">
                        <div class="h-3 w-3 rounded-full bg-brand-500"></div>
                        <span class="text-sm text-gray-600 dark:text-gray-400">Planifi√©</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <div class="h-3 w-3 rounded-full bg-brand-600"></div>
                        <span class="text-sm text-gray-600 dark:text-gray-400">En cours</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <div class="h-3 w-3 rounded-full bg-success-500"></div>
                        <span class="text-sm text-gray-600 dark:text-gray-400">Termin√©</span>
                    </div>
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-400">
                    <span class="font-medium">Total √©v√©nements cette semaine:</span>
                    <span class="ml-2 font-semibold text-brand-600 dark:text-brand-400">
                        {% set totalEvents = 0 %}
                        {% for day in weekDays %}
                            {% set totalEvents = totalEvents + day.events|length %}
                        {% endfor %}
                        {{ totalEvents }}
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Sheet Overlay -->
    <div
        x-show="rightSheetOpen || taskRightSheetOpen"
        @click="closeSheet(); closeTaskSheet()"
        x-transition:enter="transition-opacity ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition-opacity ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 z-50 bg-black/50 backdrop-blur-sm"
        style="display: none;"
    ></div>

    <!-- Right Sheet pour les t√¢ches -->
    <div
        x-show="taskRightSheetOpen"
        @click.away="handleTaskClickAway($event)"
        @click.stop
        x-transition:enter="transition-transform ease-out duration-300"
        x-transition:enter-start="translate-x-full"
        x-transition:enter-end="translate-x-0"
        x-transition:leave="transition-transform ease-in duration-200"
        x-transition:leave-start="translate-x-0"
        x-transition:leave-end="translate-x-full"
        class="fixed right-0 top-0 z-50 h-full w-full max-w-2xl overflow-y-auto bg-white shadow-2xl dark:bg-gray-900"
        style="display: none;"
    >
        <!-- Contenu charg√© dynamiquement pour les t√¢ches -->
        <div id="task-rightsheet-container"></div>
    </div>

    <!-- Right Sheet pour les √©v√©nements Planning -->
    <div
        x-show="rightSheetOpen"
        @click.away="closeSheet()"
        x-transition:enter="transition-transform ease-out duration-300"
        x-transition:enter-start="translate-x-full"
        x-transition:enter-end="translate-x-0"
        x-transition:leave="transition-transform ease-in duration-200"
        x-transition:leave-start="translate-x-0"
        x-transition:leave-end="translate-x-full"
        class="fixed right-0 top-0 z-50 h-full w-full max-w-md overflow-y-auto bg-white shadow-2xl dark:bg-gray-900"
        style="display: none;"
    >
        <!-- Contenu charg√© dynamiquement -->
        <div id="planning-rightsheet-container"></div>
    </div>
</div>

<script>
function planningManager() {
    return {
        rightSheetOpen: false,
        taskRightSheetOpen: false,
        isEdit: false,
        isView: false,
        currentId: null,
        showCustomTitle: false,
        viewData: {
            id: null,
            title: '',
            description: '',
            type: '',
            status: '',
            userId: '',
            userName: '',
            date: '',
            startTime: '',
            endTime: '',
            startDate: '',
            endDate: '',
        },
        formData: {
            title: '',
            description: '',
            type: '',
            status: 'scheduled',
            userType: '',
            userId: '',
            date: '',
            startTime: '',
            endTime: '',
            startDate: '',
            endDate: '',
        },
        init() {
            // Exposer les donn√©es n√©cessaires pour le template charg√© via AJAX
            window.planningManagerData = {
                studentsData: this.studentsData,
                specialistsData: this.specialistsData,
                coachData: this.coachData,
                parentData: this.parentData,
                currentUserType: this.currentUserType,
                currentUserId: this.currentUserId,
                showMessage: (message, type) => this.showMessage(message, type),
            };
            
            // √âcouter les √©v√©nements du rightsheet charg√©
            document.addEventListener('close-planning-rightsheet', () => {
                this.closeSheet();
            });
            
            document.addEventListener('open-planning-edit', (event) => {
                const { id, title, startDate, endDate, userId, type, status } = event.detail;
                this.openEdit(id, title, startDate, endDate, userId, type, status);
            });
            
            // √âcouter l'√©v√©nement de rafra√Æchissement du calendrier (d√©sactiv√© car on ne veut pas rafra√Æchir le calendrier)
            // document.addEventListener('refresh-planning-calendar', () => {
            //     this.refreshCalendar();
            // });
        },
        async refreshCalendar() {
            // R√©cup√©rer l'offset de semaine actuel depuis l'URL
            const urlParams = new URLSearchParams(window.location.search);
            const weekOffset = urlParams.get('week') || '0';
            
            try {
                // Charger uniquement le calendrier via AJAX
                const response = await fetch(`/admin/planning?week=${weekOffset}`, {
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                    }
                });
                
                if (!response.ok) {
                    throw new Error('Erreur lors du rafra√Æchissement');
                }
                
                const html = await response.text();
                
                // Extraire uniquement la partie calendrier du HTML
                const tempDiv = document.createElement('div');
                tempDiv.innerHTML = html;
                
                // Trouver le conteneur du calendrier dans la r√©ponse
                const calendarContainer = tempDiv.querySelector('.rounded-2xl.border.border-gray-200');
                
                if (calendarContainer) {
                    // Trouver le conteneur du calendrier dans la page actuelle
                    const currentCalendar = document.querySelector('.rounded-2xl.border.border-gray-200');
                    if (currentCalendar) {
                        // Remplacer le contenu
                        currentCalendar.outerHTML = calendarContainer.outerHTML;
                        
                        // R√©initialiser Alpine.js sur le nouveau contenu
                        if (window.Alpine) {
                            const newCalendar = document.querySelector('.rounded-2xl.border.border-gray-200');
                            if (newCalendar) {
                                Alpine.initTree(newCalendar);
                            }
                        }
                    }
                }
            } catch (error) {
                console.error('Erreur lors du rafra√Æchissement du calendrier:', error);
                // Ne pas recharger la page, juste afficher un message d'erreur
                if (this.showMessage) {
                    this.showMessage('Erreur lors du rafra√Æchissement du calendrier', 'error');
                }
            }
        },
        handleTitleChange(value) {
            if (value === 'custom') {
                this.showCustomTitle = true;
                this.formData.title = '';
            } else {
                this.showCustomTitle = false;
                
                // D√©terminer automatiquement le type selon le titre
                if (value.startsWith('Disponibilit√© pour √©changer')) {
                    this.formData.type = 'availability_exchange';
                } else if (value.startsWith('Disponibilit√© pour venir sur site') || value.startsWith('Disponibilit√© pour aider √† distance')) {
                    this.formData.type = 'availability_activity';
                } else {
                    // Pour les mati√®res, utiliser un type par d√©faut selon le userType
                    if (this.formData.userType === 'student') {
                        this.formData.type = 'course'; // Par d√©faut pour les √©l√®ves
                    } else {
                        this.formData.type = 'other'; // Par d√©faut pour les autres
                    }
                }
            }
        },
        getPlanningUrl(weekOffset) {
            const params = new URLSearchParams(window.location.search);
            
            // D√©finir le param√®tre week
            params.set('week', weekOffset);
            
            // Pr√©server tous les autres filtres (profileType, selectedIds)
            // Ces param√®tres sont d√©j√† dans l'URL, donc ils seront pr√©serv√©s automatiquement
            
            const queryString = params.toString();
            return '/admin/planning' + (queryString ? '?' + queryString : '');
        },
        async openCreate(date = null) {
            this.rightSheetOpen = true;
            
            // Afficher un loader
            this.$nextTick(() => {
                const container = document.getElementById('planning-rightsheet-container');
                if (container) {
                    container.innerHTML = '<div class="flex items-center justify-center h-full"><div class="text-center"><div class="animate-spin rounded-full h-8 w-8 border-b-2 border-brand-500 mx-auto"></div><p class="mt-2 text-sm text-gray-500">Chargement...</p></div></div>';
                }
            });
            
            try {
            const selectedDate = date || new Date().toISOString().split('T')[0];
                const url = `/admin/planning/event-sheet?mode=create&date=${encodeURIComponent(selectedDate)}`;
                
                const response = await fetch(url, {
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                    }
                });
                
                if (!response.ok) {
                    throw new Error('Erreur lors du chargement');
                }
                
                const html = await response.text();
                
                // Injecter le HTML dans le conteneur et initialiser Alpine.js
                this.$nextTick(() => {
                    const container = document.getElementById('planning-rightsheet-container');
                    if (container) {
                        // Extraire et ex√©cuter les scripts AVANT d'injecter le HTML
                        const tempDiv = document.createElement('div');
                        tempDiv.innerHTML = html;
                        const scripts = tempDiv.querySelectorAll('script');
                        const htmlWithoutScripts = html.replace(/<script\b[^<]*(?:(?!<\/script>)<[^<]*)*<\/script>/gi, '');
                        
                        // Ex√©cuter les scripts
                        scripts.forEach(script => {
                            if (script.src) {
                                const newScript = document.createElement('script');
                                newScript.src = script.src;
                                document.head.appendChild(newScript);
                            } else {
                                try {
                                    eval(script.textContent);
                                } catch (e) {
                                    console.error('Erreur lors de l\'ex√©cution du script:', e);
                                }
                            }
                        });
                        
                        // Injecter le HTML sans les scripts
                        container.innerHTML = htmlWithoutScripts;
                        
                        // Initialiser Alpine.js sur le nouveau contenu
                        setTimeout(() => {
                            if (window.Alpine) {
                                Alpine.initTree(container);
                            }
                        }, 100);
                    }
                });
            } catch (error) {
                console.error('Erreur:', error);
                const container = document.getElementById('planning-rightsheet-container');
                if (container) {
                    container.innerHTML = '<div class="flex items-center justify-center h-full"><div class="text-center text-red-500"><p class="text-sm">Erreur lors du chargement</p></div></div>';
                }
            }
        },
        
        onUserTypeChange() {
            // R√©initialiser userId quand le type change
            this.formData.userId = '';
            
            // Si le sp√©cialiste s√©lectionne "Moi", pr√©remplir avec son ID
            if (this.formData.userType === 'specialist' && this.currentUserType === 'specialist' && this.currentUserId) {
                this.formData.userId = this.currentUserId;
            }
        },
        openCreateWithDate(dateString) {
            // Convertir la date du format "YYYY-MM-DD" si n√©cessaire
            let date = dateString;
            if (dateString && !dateString.match(/^\d{4}-\d{2}-\d{2}$/)) {
                // Si la date est dans un autre format, essayer de la convertir
                const dateObj = new Date(dateString);
                if (!isNaN(dateObj.getTime())) {
                    date = dateObj.toISOString().split('T')[0];
                } else {
                    date = new Date().toISOString().split('T')[0];
                }
            }
            this.openCreate(date);
        },
        async openView(id, title, description, startDate, endDate, userId, type, status) {
            this.rightSheetOpen = true;
            
            // Afficher un loader
            this.$nextTick(() => {
                const container = document.getElementById('planning-rightsheet-container');
                if (container) {
                    container.innerHTML = '<div class="flex items-center justify-center h-full"><div class="text-center"><div class="animate-spin rounded-full h-8 w-8 border-b-2 border-brand-500 mx-auto"></div><p class="mt-2 text-sm text-gray-500">Chargement...</p></div></div>';
                }
            });
            
            try {
                const url = `/admin/planning/event-sheet?mode=view&id=${id}`;
                
                const response = await fetch(url, {
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                    }
                });
                
                if (!response.ok) {
                    throw new Error('Erreur lors du chargement');
                }
                
                const html = await response.text();
                
                // Injecter le HTML dans le conteneur et initialiser Alpine.js
                this.$nextTick(() => {
                    const container = document.getElementById('planning-rightsheet-container');
                    if (container) {
                        // Extraire et ex√©cuter les scripts AVANT d'injecter le HTML
                        const tempDiv = document.createElement('div');
                        tempDiv.innerHTML = html;
                        const scripts = tempDiv.querySelectorAll('script');
                        const htmlWithoutScripts = html.replace(/<script\b[^<]*(?:(?!<\/script>)<[^<]*)*<\/script>/gi, '');
                        
                        // Ex√©cuter les scripts
                        scripts.forEach(script => {
                            if (script.src) {
                                const newScript = document.createElement('script');
                                newScript.src = script.src;
                                document.head.appendChild(newScript);
                            } else {
                                try {
                                    eval(script.textContent);
                                } catch (e) {
                                    console.error('Erreur lors de l\'ex√©cution du script:', e);
                                }
                            }
                        });
                        
                        // Injecter le HTML sans les scripts
                        container.innerHTML = htmlWithoutScripts;
                        
                        // Initialiser Alpine.js sur le nouveau contenu
                        setTimeout(() => {
                            if (window.Alpine) {
                                Alpine.initTree(container);
                            }
                        }, 100);
                    }
                });
