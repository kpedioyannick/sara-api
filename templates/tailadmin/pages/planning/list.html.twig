                                class="group cursor-pointer rounded-lg border p-3 transition-all hover:shadow-theme-xs {% if event.backgroundColor %}border-opacity-30{% else %}border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800/50{% endif %}"
