<script>
function planningManager() {
    return {
        rightSheetOpen: false,
        isEdit: false,
        isView: false,
        currentId: null,
        showCustomTitle: false,
        viewData: {
            id: null,
            title: '',
            description: '',
            type: '',
            status: '',
            userId: '',
            userName: '',
            date: '',
            startTime: '',
            endTime: '',
            startDate: '',
            endDate: '',
        },
        formData: {
            title: '',
            description: '',
            type: '',
            status: 'scheduled',
            userType: '',
            userId: '',
            date: '',
            startTime: '',
            endTime: '',
            startDate: '',
            endDate: '',
        },
        studentsData: [],
        specialistsData: [],
        coachData: null,
        parentData: null,
        students: [],
        currentUserId: null,
        currentUserType: null,
        init() {
            const studentsJson = this.$el.getAttribute('data-students');
            if (studentsJson) {
                this.studentsData = JSON.parse(studentsJson);
                this.students = JSON.parse(studentsJson);
            }
            const specialistsJson = this.$el.getAttribute('data-specialists');
            if (specialistsJson) {
                this.specialistsData = JSON.parse(specialistsJson);
            }
            const coachJson = this.$el.getAttribute('data-coach');
            if (coachJson) {
                const parsed = JSON.parse(coachJson);
                // Si l'utilisateur est un parent, stocker dans parentData
                {% if app.user.isParent() %}
                this.parentData = parsed;
                {% else %}
                this.coachData = parsed;
                {% endif %}
            }
            // Récupérer l'ID et le type de l'utilisateur connecté
            const currentUserIdAttr = this.$el.getAttribute('data-current-user-id');
            if (currentUserIdAttr) {
                this.currentUserId = parseInt(currentUserIdAttr);
            }
            const currentUserTypeAttr = this.$el.getAttribute('data-current-user-type');
            if (currentUserTypeAttr) {
                this.currentUserType = currentUserTypeAttr;
            }
        },
        handleTitleChange(value) {
            if (value === 'custom') {
                this.showCustomTitle = true;
                this.formData.title = '';
            } else {
                this.showCustomTitle = false;
                
                // Déterminer automatiquement le type selon le titre
                if (value.startsWith('Disponibilité pour échanger')) {
                    this.formData.type = 'availability_exchange';
                } else if (value.startsWith('Disponibilité pour venir sur site') || value.startsWith('Disponibilité pour aider à distance')) {
                    this.formData.type = 'availability_activity';
                } else {
                    // Pour les matières, utiliser un type par défaut selon le userType
                    if (this.formData.userType === 'student') {
                        this.formData.type = 'course'; // Par défaut pour les élèves
                    } else {
                        this.formData.type = 'other'; // Par défaut pour les autres
                    }
                }
            }
        },
        getPlanningUrl(weekOffset) {
            const params = new URLSearchParams(window.location.search);
            
            // Définir le paramètre week
            params.set('week', weekOffset);
            
            // Préserver tous les autres filtres (profileType, selectedIds)
            // Ces paramètres sont déjà dans l'URL, donc ils seront préservés automatiquement
            
            const queryString = params.toString();
            return '/admin/planning' + (queryString ? '?' + queryString : '');
        },
        openCreate(date = null) {
            this.isEdit = false;
            this.isView = false;
            this.currentId = null;
            this.showCustomTitle = false;
            const selectedDate = date || new Date().toISOString().split('T')[0];
            
            // Préremplir les champs selon le type d'utilisateur
            let userType = '';
            let userId = '';
            if (this.currentUserType === 'student' && this.currentUserId) {
                userType = 'student';
                userId = this.currentUserId;
            } else if (this.currentUserType === 'specialist' && this.currentUserId) {
                // Pour les spécialistes, préremplir avec "Moi" par défaut
                userType = 'specialist';
                userId = this.currentUserId;
            }
            
            this.formData = {
                title: '',
                description: '',
                type: '',
                status: 'scheduled',
                userType: userType,
                userId: userId,
                date: selectedDate,
                startTime: '09:00',
                endTime: '10:00',
                startDate: '',
                endDate: '',
            };
            this.updateDateTime();
            this.rightSheetOpen = true;
        },
        
        onUserTypeChange() {
            // Réinitialiser userId quand le type change
            this.formData.userId = '';
            
            // Si le spécialiste sélectionne "Moi", préremplir avec son ID
            if (this.formData.userType === 'specialist' && this.currentUserType === 'specialist' && this.currentUserId) {
                this.formData.userId = this.currentUserId;
            }
        },
        openCreateWithDate(dateString) {
            // Convertir la date du format "YYYY-MM-DD" si nécessaire
            let date = dateString;
            if (dateString && !dateString.match(/^\d{4}-\d{2}-\d{2}$/)) {
                // Si la date est dans un autre format, essayer de la convertir
                const dateObj = new Date(dateString);
                if (!isNaN(dateObj.getTime())) {
                    date = dateObj.toISOString().split('T')[0];
                } else {
                    date = new Date().toISOString().split('T')[0];
                }
            }
            this.openCreate(date);
        },
        openView(id, title, description, startDate, endDate, userId, type, status) {
            this.isView = true;
            this.isEdit = false;
            this.currentId = id;
            
            // Trouver le nom de l'utilisateur
            let userName = 'N/A';
            if (userId && this.studentsData) {
                const user = this.studentsData.find(s => s.id == userId);
                if (user) {
                    userName = user.firstName + ' ' + user.lastName;
                }
            }
            
            // Parser les dates
            let date = '';
            let startTime = '';
            let endTime = '';
            
            if (startDate) {
                const start = new Date(startDate);
                date = start.toISOString().split('T')[0];
                startTime = start.toTimeString().slice(0, 5);
            }
            
            if (endDate) {
                const end = new Date(endDate);
                endTime = end.toTimeString().slice(0, 5);
            }
            
            // Mapper le statut
            const statusMap = {
                'completed': 'Terminé',
                'in_progress': 'En cours',
                'to_do': 'À faire',
                'scheduled': 'Planifié',
                'planifie': 'Planifié',
                'en_cours': 'En cours',
                'termine': 'Terminé'
            };
            
            // Mapper le type
            const typeMap = {
                'homework': 'Devoir',
                'course': 'Cours',
                'revision': 'Révision',
                'activity': 'Activité',
                'assessment': 'Évaluation',
                'task': 'Tâche',
                'other': 'Autre'
            };
            
            this.viewData = {
                id: id,
                title: title || 'N/A',
                description: description || 'Aucune description',
                type: typeMap[type] || type || 'N/A',
                status: statusMap[status] || status || 'N/A',
                userId: userId || '',
                userName: userName,
                date: date || 'N/A',
                startTime: startTime || 'N/A',
                endTime: endTime || 'N/A',
                startDate: startDate || '',
                endDate: endDate || '',
            };
            this.rightSheetOpen = true;
        },
        openEdit(id, title, startDate, endDate, userId, type, status) {
            this.isEdit = true;
            this.isView = false;
            this.currentId = id;
            this.showCustomTitle = false;
            
            // Parser les dates
            let date = '';
            let startTime = '09:00';
            let endTime = '10:00';
            
            if (startDate) {
                const start = new Date(startDate);
                date = start.toISOString().split('T')[0];
                startTime = start.toTimeString().slice(0, 5);
            }
            
            if (endDate) {
                const end = new Date(endDate);
                endTime = end.toTimeString().slice(0, 5);
            }
            
            // Déterminer le type d'utilisateur selon l'ID
            let userType = '';
            if (userId) {
                if (this.coachData && userId == this.coachData.id) {
                    userType = 'coach';
                } else if (this.parentData && userId == this.parentData.id) {
                    userType = 'parent';
                } else if (this.studentsData.find(s => s.id == userId)) {
                    userType = 'student';
                } else if (this.specialistsData.find(s => s.id == userId)) {
                    userType = 'specialist';
                }
            }
            
            this.formData = {
                title: title || '',
                description: '',
                type: type || '',
                status: status || 'scheduled',
                userType: userType,
                userId: userId || '',
                date: date || new Date().toISOString().split('T')[0],
                startTime: startTime,
                endTime: endTime,
                startDate: '',
                endDate: '',
            };
            this.updateDateTime();
            this.rightSheetOpen = true;
        },
        openDelete(id) {
            if (confirm('Êtes-vous sûr de vouloir supprimer cet événement ?')) {
                fetch(`/admin/planning/${id}/delete`, {
                    method: 'DELETE',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        this.showMessage(data.message || 'Événement supprimé avec succès', 'success');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        this.showMessage(data.message || 'Erreur lors de la suppression', 'error');
                    }
                })
                .catch(error => {
                    this.showMessage('Erreur de connexion', 'error');
                });
            }
        },
        updateDateTime() {
            // Combiner date + heures en datetime pour l'API
            if (this.formData.date && this.formData.startTime) {
                this.formData.startDate = `${this.formData.date}T${this.formData.startTime}:00`;
            }
            if (this.formData.date && this.formData.endTime) {
                this.formData.endDate = `${this.formData.date}T${this.formData.endTime}:00`;
            }
        },
        saveEvent() {
            // Mettre à jour les dates avant l'envoi
            this.updateDateTime();
            
            // Vérifier que le titre est rempli
            if (!this.formData.title || this.formData.title.trim() === '') {
                this.showMessage('Veuillez sélectionner ou entrer un titre', 'error');
                return;
            }
            
            const url = this.isEdit 
                ? `/admin/planning/${this.currentId}/update`
                : '/admin/planning/create';
            
            // Préparer les données pour l'API
            // Déterminer le userId selon le type sélectionné
            let userId = this.formData.userId;
            if (this.formData.userType === 'coach' && this.coachData) {
                userId = this.coachData.id;
            } else if (this.formData.userType === 'parent' && this.parentData) {
                userId = this.parentData.id;
            }
            
            const data = {
                title: this.formData.title,
                description: this.formData.description || '',
                type: this.formData.type,
                status: this.formData.status,
                userId: userId,
                startDate: this.formData.startDate,
                endDate: this.formData.endDate,
            };
            
            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                },
                body: JSON.stringify(data),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    this.showMessage(data.message || 'Événement enregistré avec succès', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    this.showMessage(data.message || 'Erreur lors de l\'enregistrement', 'error');
                }
            })
            .catch(error => {
                this.showMessage('Erreur de connexion', 'error');
            });
        },
        showMessage(message, type = 'info') {
            if (window.showToast) {
                window.showToast(message, type);
            } else {
                const toastManager = document.querySelector('[x-data="toastManager()"]')?.__x?.$data;
                if (toastManager) {
                    toastManager.show(message, type);
                }
            }
        },
        closeSheet() {
            this.rightSheetOpen = false;
            this.isEdit = false;
            this.isView = false;
            this.currentId = null;
            this.viewData = {
                id: null,
                title: '',
                description: '',
                type: '',
                status: '',
                userId: '',
                userName: '',
                date: '',
                startTime: '',
                endTime: '',
                startDate: '',
                endDate: '',
            };
        }
    };
}

// Charger Choices.js si pas déjà chargé
if (typeof Choices === 'undefined') {
    const script = document.createElement('script');
    script.src = 'https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js';
    script.onload = function() {
        // Réinitialiser les composants Alpine.js qui utilisent Choices
        if (window.Alpine) {
            document.querySelectorAll('[x-data="filterManager()"]').forEach(el => {
                if (el.__x) {
                    el.__x.$data.initChoices();
                }
            });
        }
    };
    document.head.appendChild(script);
}

function filterManager() {
    return {
        profileType: '',
        selectedIds: [],
        selectedType: '',
        choicesInstance: null,
        parentsData: [],
        specialistsData: [],
        studentsData: [],
        currentOptions: [],
        userRole: '',
        init() {
            // Récupérer les données depuis les attributs data
            const parentsJson = this.$el.getAttribute('data-parents');
            const specialistsJson = this.$el.getAttribute('data-specialists');
            const studentsJson = this.$el.getAttribute('data-students');
            const profileTypeAttr = this.$el.getAttribute('data-profile-type');
            const selectedIdsAttr = this.$el.getAttribute('data-selected-ids');
            const userRoleAttr = this.$el.getAttribute('data-user-role');
            
            // Récupérer le filtre par type depuis l'URL
            const urlParams = new URLSearchParams(window.location.search);
            this.selectedType = urlParams.get('type') || '';
            
            if (parentsJson) this.parentsData = JSON.parse(parentsJson);
            if (specialistsJson) this.specialistsData = JSON.parse(specialistsJson);
            if (studentsJson) this.studentsData = JSON.parse(studentsJson);
            if (profileTypeAttr) this.profileType = profileTypeAttr;
            if (selectedIdsAttr) this.selectedIds = selectedIdsAttr ? selectedIdsAttr.split(',').map(id => parseInt(id)) : [];
            if (userRoleAttr) this.userRole = userRoleAttr;
            
            // Attendre que Choices.js soit chargé
            if (typeof Choices !== 'undefined') {
                this.$nextTick(() => {
                    this.initChoices();
                });
            } else {
                // Si Choices.js n'est pas encore chargé, attendre
                const checkChoices = setInterval(() => {
                    if (typeof Choices !== 'undefined') {
                        clearInterval(checkChoices);
                        this.$nextTick(() => {
                            this.initChoices();
                        });
                    }
                }, 100);
                
                // Timeout après 5 secondes
                setTimeout(() => clearInterval(checkChoices), 5000);
            }
        },
        initChoices() {
            // Détruire l'instance existante si elle existe
            if (this.choicesInstance) {
                this.choicesInstance.destroy();
            }
            
            // Récupérer les options selon le type de profil
            this.updateOptions();
            
            // Initialiser Choices.js
            const selectElement = this.$refs.choicesSelect;
            if (selectElement && this.currentOptions.length > 0) {
                this.choicesInstance = new Choices(selectElement, {
                    removeItemButton: true,
                    searchEnabled: true,
                    searchChoices: true,
                    searchFields: ['label', 'value'],
                    placeholder: true,
                    placeholderValue: 'Rechercher et sélectionner...',
                    noResultsText: 'Aucun résultat trouvé',
                    noChoicesText: 'Aucune option disponible',
                    itemSelectText: 'Appuyez pour sélectionner',
                });
                
                // Pré-sélectionner les IDs si présents
                if (this.selectedIds.length > 0) {
                    this.choicesInstance.setChoiceByValue(this.selectedIds.map(String));
                }
                
                // Écouter les changements
                selectElement.addEventListener('change', () => {
                    this.selectedIds = this.choicesInstance.getValue(true).map(id => parseInt(id));
                });
            }
        },
        updateOptions() {
            this.currentOptions = [];
            
            if (this.profileType === 'parent') {
                this.currentOptions = this.parentsData.map(p => ({
                    value: p.id,
                    label: `${p.firstName} ${p.lastName}${p.email ? ' (' + p.email + ')' : ''}`
                }));
            } else if (this.profileType === 'specialist') {
                this.currentOptions = this.specialistsData.map(s => ({
                    value: s.id,
                    label: `${s.firstName} ${s.lastName}`
                }));
            } else if (this.profileType === 'student') {
                this.currentOptions = this.studentsData.map(s => ({
                    value: s.id,
                    label: `${s.firstName} ${s.lastName}${s.pseudo ? ' (' + s.pseudo + ')' : ''}${s.class ? ' - ' + s.class : ''}`
                }));
            }
            
            // Mettre à jour le select HTML
            const selectElement = this.$refs.choicesSelect;
            if (selectElement) {
                selectElement.innerHTML = '';
                this.currentOptions.forEach(option => {
                    const optionElement = document.createElement('option');
                    optionElement.value = option.value;
                    optionElement.textContent = option.label;
                    selectElement.appendChild(optionElement);
                });
            }
        },
        setProfileType(type) {
            this.profileType = type;
            this.selectedIds = [];
            
            // Si on clique sur "Mon planning", réinitialiser complètement et appliquer les filtres
            if (type === '') {
                // Détruire l'instance Choices.js si elle existe
                if (this.choicesInstance) {
                    this.choicesInstance.destroy();
                    this.choicesInstance = null;
                }
                // Réinitialiser le contenu du select
                const selectElement = this.$refs.choicesSelect;
                if (selectElement) {
                    selectElement.innerHTML = '';
                }
                // Appliquer les filtres (réinitialiser)
                this.resetFilters();
                return;
            }
            
            // Pour les autres types, réinitialiser Choices.js avec les nouvelles options
            this.$nextTick(() => {
                this.initChoices();
            });
        },
        applyFilters() {
            const params = new URLSearchParams(window.location.search);
            
            // Préserver le paramètre week s'il existe
            const weekParam = params.get('week');
            
            // Réinitialiser les paramètres de filtres
            params.delete('profileType');
            params.delete('selectedIds');
            params.delete('type');
            
            // Ajouter les nouveaux filtres
            if (this.profileType) {
                params.set('profileType', this.profileType);
            }
            if (this.selectedIds.length > 0) {
                params.set('selectedIds', this.selectedIds.join(','));
            }
            if (this.selectedType) {
                params.set('type', this.selectedType);
            }
            
            // Préserver le paramètre week
            if (weekParam !== null) {
                params.set('week', weekParam);
            }
            
            const url = '/admin/planning' + (params.toString() ? '?' + params.toString() : '');
            window.location.href = url;
        },
        resetFilters() {
            const params = new URLSearchParams(window.location.search);
            
            // Préserver uniquement le paramètre week
            const weekParam = params.get('week');
            
            // Réinitialiser les filtres
            this.profileType = '';
            this.selectedIds = [];
            this.selectedType = '';
            
            const url = '/admin/planning' + (weekParam !== null ? '?week=' + weekParam : '');
            window.location.href = url;
        }
    };
}
</script>
