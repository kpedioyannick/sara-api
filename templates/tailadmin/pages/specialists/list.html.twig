{% extends 'tailadmin/layouts/base.html.twig' %}

{% block content %}
<div 
    x-data="specialistManager()"
    data-specialists='{{ specialists|json_encode|e('html_attr') }}'
    class="p-4 mx-auto max-w-(--breakpoint-2xl) md:p-6"
>
    {% include 'tailadmin/components/breadcrumb.html.twig' %}

    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="px-6 py-5 flex items-center justify-between">
            <h3 class="text-base font-medium text-gray-800 dark:text-white/90">
                Liste des Spécialistes
            </h3>
            <button
                @click="openCreate()"
                class="inline-flex items-center gap-2 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
            >
                <svg class="fill-current" width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <path d="M8 1a7 7 0 100 14A7 7 0 008 1zM7.5 4v4l3.5 2 .5-.866L8.5 7.5V4h-1z" fill=""/>
                </svg>
                Nouveau Spécialiste
            </button>
        </div>
        <div class="border-t border-gray-100 p-4 dark:border-gray-800 sm:p-6">
            <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 xl:grid-cols-2">
                {% for specialist in specialists %}
                <div>
                    <div class="flex flex-col gap-5 rounded-xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03] sm:flex-row sm:items-center sm:gap-6 sm:p-6">
                        <div class="flex-shrink-0">
                            <div class="h-20 w-20 overflow-hidden rounded-full bg-brand-100 dark:bg-brand-900/30 flex items-center justify-center">
                                <span class="text-2xl font-semibold text-brand-600 dark:text-brand-400">
                                    {{ specialist.name|slice(0, 1) }}
                                </span>
                            </div>
                        </div>

                        <div class="flex-1">
                            <div class="mb-2 flex items-center justify-between">
                                <h4 class="text-theme-xl font-medium text-gray-800 dark:text-white/90">
                                    {{ specialist.name }}
                                </h4>
                                {% if specialist.isActive %}
                                <span class="inline-flex items-center rounded-full bg-success-100 px-2.5 py-0.5 text-xs font-medium text-success-600 dark:bg-success-900/30 dark:text-success-400">
                                    Actif
                                </span>
                                {% else %}
                                <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-600 dark:bg-gray-800 dark:text-gray-400">
                                    Inactif
                                </span>
                                {% endif %}
                            </div>

                            <p class="mb-3 text-sm text-gray-500 dark:text-gray-400">
                                {{ specialist.email }}
                            </p>

                            <div class="mb-3 flex flex-wrap gap-2">
                                {% for specialization in specialist.specializations %}
                                <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-600 dark:bg-gray-800 dark:text-gray-400">
                                    {{ specialization }}
                                </span>
                                {% endfor %}
                            </div>

                            <div class="mb-4 flex items-center gap-4 text-sm text-gray-600 dark:text-gray-400">
                                <span>{{ specialist.studentsCount }} élève(s)</span>
                                <span>•</span>
                                <span>{{ specialist.requestsCount }} demande(s)</span>
                            </div>

                            <div class="flex gap-2">
                                <button
                                    @click="openEdit({{ specialist.id }})"
                                    class="flex-1 inline-flex items-center justify-center gap-2 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 shadow-theme-xs transition-colors hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
                                >
                                    <svg class="fill-current" width="16" height="16" viewBox="0 0 16 16" fill="none">
                                        <path d="M11.333 2.667a2.667 2.667 0 0 1 3.774 3.774l-8 8a2.667 2.667 0 0 1-1.886.78H2.667v-2.554a2.667 2.667 0 0 1 .78-1.886l8-8zm2.554 1.22L12.113 2.113a1.333 1.333 0 0 0-1.886 0L9.333 3.007l2.667 2.667 1.554-1.554a1.333 1.333 0 0 0 0-1.886z" fill=""/>
                                    </svg>
                                    Modifier
                                </button>
                                <button
                                    @click="openDelete({{ specialist.id }})"
                                    class="inline-flex items-center justify-center gap-2 rounded-lg border border-red-200 bg-white px-4 py-2.5 text-sm font-medium text-red-600 shadow-theme-xs transition-colors hover:bg-red-50 dark:border-red-800 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-red-900/20"
                                >
                                    <svg class="fill-current" width="16" height="16" viewBox="0 0 16 16" fill="none">
                                        <path d="M5.5 5.5a.5.5 0 015 0v3a.5.5 0 01-5 0v-3zM2 4a2 2 0 012-2h8a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V4z" fill=""/>
                                    </svg>
                                    Supprimer
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Right Sheet -->
    <div
        x-show="rightSheetOpen"
        @click="closeSheet()"
        x-transition:enter="transition-opacity ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition-opacity ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 z-50 bg-black/50 backdrop-blur-sm"
        style="display: none;"
    ></div>

    <div
        x-show="rightSheetOpen"
        @click.away="closeSheet()"
        x-transition:enter="transition-transform ease-out duration-300"
        x-transition:enter-start="translate-x-full"
        x-transition:enter-end="translate-x-0"
        x-transition:leave="transition-transform ease-in duration-200"
        x-transition:leave-start="translate-x-0"
        x-transition:leave-end="translate-x-full"
        class="fixed right-0 top-0 z-50 h-full w-full max-w-md overflow-y-auto bg-white shadow-2xl dark:bg-gray-900"
        style="display: none;"
    >
        <div class="flex h-full flex-col">
            <div class="sticky top-0 z-10 border-b border-gray-200 bg-white px-6 py-4 dark:border-gray-800 dark:bg-gray-900">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white/90">
                        <span x-show="!isEdit">Nouveau Spécialiste</span>
                        <span x-show="isEdit">Modifier Spécialiste</span>
                    </h3>
                    <button
                        @click="closeSheet()"
                        class="rounded-lg p-2 text-gray-400 transition-colors hover:bg-gray-100 hover:text-gray-600 dark:hover:bg-gray-800 dark:hover:text-gray-300"
                    >
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>

            <div class="flex-1 p-6">
                <form @submit.prevent="saveSpecialist()" class="space-y-6">
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Email *</label>
                        <input
                            type="email"
                            x-model="formData.email"
                            required
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        />
                    </div>
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Prénom *</label>
                        <input
                            type="text"
                            x-model="formData.firstName"
                            required
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        />
                    </div>
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Nom *</label>
                        <input
                            type="text"
                            x-model="formData.lastName"
                            required
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        />
                    </div>
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Spécialisations (séparées par des virgules)</label>
                        <input
                            type="text"
                            x-model="formData.specializationsText"
                            placeholder="ex: Psychologie, Orthophonie, Ergothérapie"
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        />
                    </div>
                    <div>
                        <label class="mb-2 flex items-center gap-2">
                            <input
                                type="checkbox"
                                x-model="formData.isActive"
                                class="rounded border-gray-300 text-brand-600 focus:ring-brand-500"
                            />
                            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Actif</span>
                        </label>
                    </div>
                </form>
            </div>

            <div class="sticky bottom-0 border-t border-gray-200 bg-white px-6 py-4 dark:border-gray-800 dark:bg-gray-900">
                <div class="flex gap-3">
                    <button
                        @click="closeSheet()"
                        class="flex-1 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
                    >
                        Annuler
                    </button>
                    <button
                        @click="saveSpecialist()"
                        class="flex-1 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
                    >
                        Enregistrer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function specialistManager() {
    return {
        rightSheetOpen: false,
        isEdit: false,
        currentId: null,
        formData: {
            email: '',
            firstName: '',
            lastName: '',
            specializationsText: '',
            isActive: true,
        },
        specialistsData: [],
        init() {
            const specialistsJson = this.$el.getAttribute('data-specialists');
            if (specialistsJson) {
                this.specialistsData = JSON.parse(specialistsJson);
            }
        },
        openCreate() {
            this.isEdit = false;
            this.currentId = null;
            this.formData = {
                email: '',
                firstName: '',
                lastName: '',
                specializationsText: '',
                isActive: true,
            };
            this.rightSheetOpen = true;
        },
        openEdit(id) {
            const specialist = this.specialistsData.find(s => s.id === id);
            if (specialist) {
                this.isEdit = true;
                this.currentId = id;
                this.formData = {
                    email: specialist.email || '',
                    firstName: specialist.firstName || '',
                    lastName: specialist.lastName || '',
                    specializationsText: specialist.specializations ? specialist.specializations.join(', ') : '',
                    isActive: specialist.isActive !== undefined ? specialist.isActive : true,
                };
                this.rightSheetOpen = true;
            }
        },
        openDelete(id) {
            if (confirm('Êtes-vous sûr de vouloir supprimer ce spécialiste ?')) {
                fetch(`/admin/specialists/${id}`, {
                    method: 'DELETE',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        this.showMessage(data.message || 'Spécialiste supprimé avec succès', 'success');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        this.showMessage(data.message || 'Erreur lors de la suppression', 'error');
                    }
                })
                .catch(error => {
                    this.showMessage('Erreur de connexion', 'error');
                });
            }
        },
        saveSpecialist() {
            const specializations = this.formData.specializationsText
                .split(',')
                .map(s => s.trim())
                .filter(s => s.length > 0);
            
            const data = {
                email: this.formData.email,
                firstName: this.formData.firstName,
                lastName: this.formData.lastName,
                specializations: specializations,
                isActive: this.formData.isActive,
            };
            
            const url = this.isEdit 
                ? `/admin/specialists/${this.currentId}/update`
                : '/admin/specialists/create';
            
            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                },
                body: JSON.stringify(data),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    this.showMessage(data.message || 'Spécialiste enregistré avec succès', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    this.showMessage(data.message || 'Erreur lors de l\'enregistrement', 'error');
                }
            })
            .catch(error => {
                this.showMessage('Erreur de connexion', 'error');
            });
        },
        showMessage(message, type = 'info') {
            const toastManager = document.querySelector('[x-data="toastManager()"]')?.__x?.$data;
            if (toastManager) {
                toastManager.show(message, type);
            } else {
                alert(message);
            }
        },
        closeSheet() {
            this.rightSheetOpen = false;
            this.isEdit = false;
            this.currentId = null;
        }
    };
}
</script>
{% endblock %}
