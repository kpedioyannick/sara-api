{% extends 'tailadmin/layouts/base.html.twig' %}

{% block content %}
<div 
    x-data="specialistManager()"
    data-specialists='{{ specialists|json_encode|e('html_attr') }}'
    data-students='{{ studentsData|json_encode|e('html_attr') }}'
    data-is-coach="{{ isCoach ? 'true' : 'false' }}"
    class="p-4 mx-auto max-w-(--breakpoint-2xl) md:p-6"
>
    {% include 'tailadmin/components/breadcrumb.html.twig' %}

    <!-- Barre de recherche -->
    <div class="mb-6 rounded-2xl border border-gray-200 bg-white p-4 dark:border-gray-800 dark:bg-white/[0.03]">
        <form method="GET" action="{{ path('admin_specialists_list') }}" class="flex flex-col gap-4 sm:flex-row sm:items-end">
            <div class="flex-1">
                <label for="search" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                    Rechercher un intervenant
                </label>
                <input
                    type="text"
                    id="search"
                    name="search"
                    value="{{ app.request.query.get('search', '') }}"
                    placeholder="Nom, prénom, email ou spécialisation..."
                    class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                />
            </div>
            <div class="flex gap-2">
                <button
                    type="submit"
                    class="inline-flex items-center gap-2 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
                >
                    <svg class="fill-current" width="16" height="16" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" fill="currentColor"/>
                    </svg>
                    Rechercher
                </button>
                {% if app.request.query.get('search') %}
                <a
                    href="{{ path('admin_specialists_list') }}"
                    class="inline-flex items-center gap-2 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
                >
                    Réinitialiser
                </a>
                {% endif %}
            </div>
        </form>
    </div>

    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="px-6 py-5 flex items-center justify-between">
            <h3 class="text-base font-medium text-gray-800 dark:text-white/90">
                Liste des Intervenants
                {% if app.request.query.get('search') %}
                    <span class="ml-2 text-sm font-normal text-gray-500 dark:text-gray-400">
                        ({{ specialists|length }} résultat{{ specialists|length > 1 ? 's' : '' }})
                    </span>
                {% endif %}
            </h3>
            <button
                @click="openCreate()"
                class="inline-flex items-center gap-2 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
            >
                <svg class="fill-current" width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <path d="M8 1a7 7 0 100 14A7 7 0 008 1zM7.5 4v4l3.5 2 .5-.866L8.5 7.5V4h-1z" fill=""/>
                </svg>
                Nouvel Intervenant
            </button>
        </div>
        <div class="border-t border-gray-100 p-4 dark:border-gray-800 sm:p-6">
            <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 xl:grid-cols-2">
                {% for specialist in specialists %}
                <div>
                    <div class="flex flex-col gap-5 rounded-xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03] sm:flex-row sm:items-center sm:gap-6 sm:p-6">
                        <div class="flex-shrink-0">
                            <div class="h-20 w-20 overflow-hidden rounded-full bg-brand-100 dark:bg-brand-900/30 flex items-center justify-center">
                                <span class="text-2xl font-semibold text-brand-600 dark:text-brand-400">
                                    {{ specialist.name|slice(0, 1) }}
                                </span>
                            </div>
                        </div>

                        <div class="flex-1">
                            <div class="mb-2 flex items-center justify-between">
                                <h4 class="text-theme-xl font-medium">
                                    <span class="inline-block rounded-lg bg-blue-100 dark:bg-blue-900/30 px-3 py-1.5 text-gray-800 dark:text-white/90">
                                        {{ specialist.name }}
                                    </span>
                                </h4>
                                {% if specialist.isActive %}
                                <span class="inline-flex items-center rounded-full bg-success-100 px-2.5 py-0.5 text-xs font-medium text-success-600 dark:bg-success-900/30 dark:text-success-400">
                                    Actif
                                </span>
                                {% else %}
                                <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-600 dark:bg-gray-800 dark:text-gray-400">
                                    Inactif
                                </span>
                                {% endif %}
                            </div>

                            <p class="mb-3 text-sm">
                                <span class="inline-block rounded-md bg-purple-100 dark:bg-purple-900/30 px-2.5 py-0.5 text-purple-700 dark:text-purple-300 font-medium">{{ specialist.email }}</span>
                            </p>

                            <div class="mb-3 flex flex-wrap gap-2">
                                {% for specialization in specialist.specializations %}
                                <span class="inline-flex items-center rounded-full bg-indigo-100 dark:bg-indigo-900/30 px-2.5 py-0.5 text-xs font-medium text-indigo-700 dark:text-indigo-300">
                                    {{ specialization }}
                                </span>
                                {% endfor %}
                            </div>

                            <div class="mb-4 flex items-center gap-2 flex-wrap text-sm">
                                <span class="inline-block rounded-md bg-cyan-100 dark:bg-cyan-900/30 px-2.5 py-0.5 text-cyan-700 dark:text-cyan-300 font-medium">{{ specialist.studentsCount }} élève(s)</span>
                                <span>•</span>
                                <span class="inline-block rounded-md bg-amber-100 dark:bg-amber-900/30 px-2.5 py-0.5 text-amber-700 dark:text-amber-300 font-medium">{{ specialist.requestsCount }} demande(s)</span>
                            </div>

                            <div class="flex gap-2">
                                <button
                                    @click="openEdit({{ specialist.id }})"
                                    class="flex-1 inline-flex items-center justify-center gap-2 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 shadow-theme-xs transition-colors hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
                                >
                                    <svg class="fill-current" width="16" height="16" viewBox="0 0 16 16" fill="none">
                                        <path d="M11.333 2.667a2.667 2.667 0 0 1 3.774 3.774l-8 8a2.667 2.667 0 0 1-1.886.78H2.667v-2.554a2.667 2.667 0 0 1 .78-1.886l8-8zm2.554 1.22L12.113 2.113a1.333 1.333 0 0 0-1.886 0L9.333 3.007l2.667 2.667 1.554-1.554a1.333 1.333 0 0 0 0-1.886z" fill=""/>
                                    </svg>
                                    Modifier
                                </button>
                                <button
                                    @click="openDelete({{ specialist.id }})"
                                    class="inline-flex items-center justify-center gap-2 rounded-lg border border-red-200 bg-white px-4 py-2.5 text-sm font-medium text-red-600 shadow-theme-xs transition-colors hover:bg-red-50 dark:border-red-800 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-red-900/20"
                                >
                                    <svg class="fill-current" width="16" height="16" viewBox="0 0 16 16" fill="none">
                                        <path d="M5.5 5.5a.5.5 0 015 0v3a.5.5 0 01-5 0v-3zM2 4a2 2 0 012-2h8a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V4z" fill=""/>
                                    </svg>
                                    Supprimer
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Right Sheet -->
    <div
        x-show="rightSheetOpen"
        @click="closeSheet()"
        x-transition:enter="transition-opacity ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition-opacity ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 z-50 bg-black/50 backdrop-blur-sm"
        style="display: none;"
    ></div>

    <div
        x-show="rightSheetOpen"
        @click.away="closeSheet()"
        x-transition:enter="transition-transform ease-out duration-300"
        x-transition:enter-start="translate-x-full"
        x-transition:enter-end="translate-x-0"
        x-transition:leave="transition-transform ease-in duration-200"
        x-transition:leave-start="translate-x-0"
        x-transition:leave-end="translate-x-full"
        class="fixed right-0 top-0 z-50 h-full w-full max-w-md overflow-y-auto bg-white shadow-2xl dark:bg-gray-900"
        style="display: none;"
    >
        <div class="flex h-full flex-col">
            <div class="sticky top-0 z-10 border-b border-gray-200 bg-white px-6 py-4 dark:border-gray-800 dark:bg-gray-900">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white/90">
                        <span x-show="!isEdit">Nouvel Intervenant</span>
                        <span x-show="isEdit">Modifier Intervenant</span>
                    </h3>
                    <button
                        @click="closeSheet()"
                        class="rounded-lg p-2 text-gray-400 transition-colors hover:bg-gray-100 hover:text-gray-600 dark:hover:bg-gray-800 dark:hover:text-gray-300"
                    >
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>

            <div class="flex-1 p-6">
                <form @submit.prevent="saveSpecialist()" class="space-y-6">
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Email *</label>
                        <input
                            type="email"
                            x-model="formData.email"
                            required
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        />
                    </div>
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Prénom *</label>
                        <input
                            type="text"
                            x-model="formData.firstName"
                            required
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        />
                    </div>
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Nom *</label>
                        <input
                            type="text"
                            x-model="formData.lastName"
                            required
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        />
                    </div>
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Spécialisations *</label>
                        <div class="space-y-2 rounded-lg border border-gray-200 bg-white p-4 dark:border-gray-700 dark:bg-gray-800">
                            <label class="flex items-center gap-2 cursor-pointer">
                                <input
                                    type="checkbox"
                                    value="dessin"
                                    x-model="formData.specializations"
                                    class="rounded border-gray-300 text-brand-600 focus:ring-brand-500"
                                />
                                <span class="text-sm text-gray-700 dark:text-gray-300">Dessin / Arts plastiques</span>
                            </label>
                            <label class="flex items-center gap-2 cursor-pointer">
                                <input
                                    type="checkbox"
                                    value="theatre"
                                    x-model="formData.specializations"
                                    class="rounded border-gray-300 text-brand-600 focus:ring-brand-500"
                                />
                                <span class="text-sm text-gray-700 dark:text-gray-300">Théâtre</span>
                            </label>
                            <label class="flex items-center gap-2 cursor-pointer">
                                <input
                                    type="checkbox"
                                    value="peinture"
                                    x-model="formData.specializations"
                                    class="rounded border-gray-300 text-brand-600 focus:ring-brand-500"
                                />
                                <span class="text-sm text-gray-700 dark:text-gray-300">Peinture</span>
                            </label>
                            <label class="flex items-center gap-2 cursor-pointer">
                                <input
                                    type="checkbox"
                                    value="philosophie"
                                    x-model="formData.specializations"
                                    class="rounded border-gray-300 text-brand-600 focus:ring-brand-500"
                                />
                                <span class="text-sm text-gray-700 dark:text-gray-300">Philosophie</span>
                            </label>
                            <label class="flex items-center gap-2 cursor-pointer">
                                <input
                                    type="checkbox"
                                    value="musique"
                                    x-model="formData.specializations"
                                    class="rounded border-gray-300 text-brand-600 focus:ring-brand-500"
                                />
                                <span class="text-sm text-gray-700 dark:text-gray-300">Musique</span>
                            </label>
                            <label class="flex items-center gap-2 cursor-pointer">
                                <input
                                    type="checkbox"
                                    value="soutien_scolaire"
                                    x-model="formData.specializations"
                                    class="rounded border-gray-300 text-brand-600 focus:ring-brand-500"
                                />
                                <span class="text-sm text-gray-700 dark:text-gray-300">Soutien scolaire</span>
                            </label>
                            <label class="flex items-center gap-2 cursor-pointer">
                                <input
                                    type="checkbox"
                                    value="autre"
                                    x-model="formData.specializations"
                                    class="rounded border-gray-300 text-brand-600 focus:ring-brand-500"
                                />
                                <span class="text-sm text-gray-700 dark:text-gray-300">Autre</span>
                            </label>
                        </div>
                    </div>
                    <div x-show="!isEdit">
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Mot de passe *</label>
                        <input
                            type="password"
                            x-model="formData.password"
                            required
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        />
                    </div>
                    <div x-show="!isEdit">
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Confirmation du mot de passe *</label>
                        <input
                            type="password"
                            x-model="formData.passwordConfirmation"
                            required
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        />
                    </div>
                    
                    <!-- Section changement de mot de passe (uniquement en mode édition) -->
                    <div x-show="isEdit" class="mt-6 border-t border-gray-200 pt-6 dark:border-gray-800">
                        <h4 class="mb-4 text-sm font-semibold text-gray-800 dark:text-white/90">Changer le mot de passe</h4>
                        <div class="space-y-4">
                            <div>
                                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Nouveau mot de passe</label>
                                <input
                                    type="password"
                                    x-model="passwordForm.newPassword"
                                    placeholder="Laisser vide pour ne pas changer"
                                    class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                                />
                            </div>
                            <div>
                                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Confirmation du nouveau mot de passe</label>
                                <input
                                    type="password"
                                    x-model="passwordForm.passwordConfirmation"
                                    placeholder="Laisser vide pour ne pas changer"
                                    class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                                />
                            </div>
                            <button
                                type="button"
                                @click="changePassword()"
                                class="w-full rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
                            >
                                Changer le mot de passe
                            </button>
                        </div>
                    </div>
                    {% if isCoach %}
                    <div>
                        <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Élèves assignés</label>
                        <select
                            id="students-select"
                            x-ref="studentsSelect"
                            multiple
                            class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        >
                            <template x-for="student in studentsData" :key="student.id">
                                <option 
                                    :value="student.id" 
                                    x-text="student.firstName + ' ' + student.lastName + (student.pseudo ? ' (' + student.pseudo + ')' : '')"
                                ></option>
                            </template>
                        </select>
                        <p x-show="studentsData.length === 0" class="mt-2 text-xs text-gray-500 dark:text-gray-400">Aucun élève disponible</p>
                    </div>
                    {% endif %}
                    <div>
                        <label class="mb-2 flex items-center gap-2">
                            <input
                                type="checkbox"
                                x-model="formData.isActive"
                                class="rounded border-gray-300 text-brand-600 focus:ring-brand-500"
                            />
                            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Actif</span>
                        </label>
                    </div>
                </form>
            </div>

            <div class="sticky bottom-0 border-t border-gray-200 bg-white px-6 py-4 dark:border-gray-800 dark:bg-gray-900">
                <div class="flex gap-3">
                    <button
                        @click="closeSheet()"
                        class="flex-1 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
                    >
                        Annuler
                    </button>
                    <button
                        @click="saveSpecialist()"
                        class="flex-1 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
                    >
                        Enregistrer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function specialistManager() {
    return {
        rightSheetOpen: false,
        isEdit: false,
        currentId: null,
        formData: {
            email: '',
            firstName: '',
            lastName: '',
            specializations: [],
            password: '',
            passwordConfirmation: '',
            isActive: true,
            studentIds: [],
        },
        passwordForm: {
            newPassword: '',
            passwordConfirmation: '',
        },
        specialistsData: [],
        studentsData: [],
        isCoach: false,
        studentsChoicesInstance: null,
        init() {
            const specialistsJson = this.$el.getAttribute('data-specialists');
            if (specialistsJson) {
                this.specialistsData = JSON.parse(specialistsJson);
            }
            const studentsJson = this.$el.getAttribute('data-students');
            if (studentsJson) {
                this.studentsData = JSON.parse(studentsJson);
            }
            const isCoachAttr = this.$el.getAttribute('data-is-coach');
            this.isCoach = isCoachAttr === 'true';
        },
        initStudentsChoices() {
            // Charger Choices.js si pas déjà chargé
            if (typeof Choices === 'undefined') {
                const script = document.createElement('script');
                script.src = 'https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js';
                const link = document.createElement('link');
                link.rel = 'stylesheet';
                link.href = 'https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css';
                document.head.appendChild(link);
                script.onload = () => {
                    this.$nextTick(() => {
                        this.initStudentsChoices();
                    });
                };
                document.head.appendChild(script);
                return;
            }
            
            // Attendre que le sheet soit visible dans le DOM
            this.$nextTick(() => {
                // Détruire l'instance existante si elle existe
                if (this.studentsChoicesInstance) {
                    try {
                        this.studentsChoicesInstance.destroy();
                    } catch (e) {
                        console.warn('Erreur lors de la destruction de ChoiceJS (élèves):', e);
                    }
                    this.studentsChoicesInstance = null;
                }
                
                // Initialiser ChoiceJS sur le select des élèves
                const studentsSelect = document.getElementById('students-select');
                if (studentsSelect && this.studentsData && this.studentsData.length > 0) {
                    try {
                        this.studentsChoicesInstance = new Choices(studentsSelect, {
                            removeItemButton: true,
                            searchEnabled: true,
                            searchChoices: true,
                            searchFields: ['label', 'value'],
                            placeholder: true,
                            placeholderValue: 'Sélectionner des élèves',
                            shouldSort: false,
                            itemSelectText: '',
                        });
                        
                        // Synchroniser avec Alpine.js
                        this.studentsChoicesInstance.passedElement.element.addEventListener('change', () => {
                            const values = this.studentsChoicesInstance.getValue(true);
                            this.formData.studentIds = values.map(id => parseInt(id));
                        });
                        
                        // Mettre à jour les valeurs si elles sont déjà définies
                        if (this.formData.studentIds && this.formData.studentIds.length > 0) {
                            setTimeout(() => {
                                try {
                                    this.studentsChoicesInstance.setChoiceByValue(this.formData.studentIds.map(String));
                                } catch (e) {
                                    console.warn('Erreur lors de la mise à jour initiale de ChoiceJS:', e);
                                }
                            }, 50);
                        }
                    } catch (e) {
                        console.error('Erreur lors de l\'initialisation de ChoiceJS (élèves):', e);
                    }
                }
            });
        },
        openCreate() {
            this.isEdit = false;
            this.currentId = null;
            this.formData = {
                email: '',
                firstName: '',
                lastName: '',
                specializations: [],
                password: '',
                passwordConfirmation: '',
                isActive: true,
                studentIds: [],
            };
            this.rightSheetOpen = true;
            
            // Initialiser ChoiceJS après l'ouverture du sheet (pour la création aussi)
            if (this.isCoach) {
                setTimeout(() => {
                    this.initStudentsChoices();
                }, 200);
            }
        },
        async openEdit(id) {
            const specialist = this.specialistsData.find(s => s.id === id);
            if (specialist) {
                this.isEdit = true;
                this.currentId = id;
                this.formData = {
                    email: specialist.email || '',
                    firstName: specialist.firstName || '',
                    lastName: specialist.lastName || '',
                    specializations: specialist.specializations ? [...specialist.specializations] : [],
                    isActive: specialist.isActive !== undefined ? specialist.isActive : true,
                    studentIds: [],
                };
                this.passwordForm = {
                    newPassword: '',
                    passwordConfirmation: '',
                };
                
                // Charger les élèves assignés au spécialiste
                if (this.isCoach) {
                    try {
                        const response = await fetch(`/admin/specialists/${id}/students`);
                        if (response.ok) {
                            const data = await response.json();
                            this.formData.studentIds = data.studentIds || [];
                        }
                    } catch (error) {
                        console.error('Erreur lors du chargement des élèves:', error);
                    }
                }
                
                this.rightSheetOpen = true;
                
                // Initialiser ChoiceJS après l'ouverture du sheet
                if (this.isCoach) {
                    setTimeout(() => {
                        this.initStudentsChoices();
                    }, 200);
                }
            }
        },
        changePassword() {
            // Vérifier que les deux champs sont remplis
            if (!this.passwordForm.newPassword || !this.passwordForm.passwordConfirmation) {
                this.showMessage('Veuillez remplir tous les champs', 'error');
                return;
            }
            
            // Vérifier que le mot de passe a au moins 6 caractères
            if (this.passwordForm.newPassword.length < 6) {
                this.showMessage('Le mot de passe doit contenir au moins 6 caractères', 'error');
                return;
            }
            
            // Vérifier que les mots de passe correspondent
            if (this.passwordForm.newPassword !== this.passwordForm.passwordConfirmation) {
                this.showMessage('Les mots de passe ne correspondent pas', 'error');
                return;
            }
            
            const data = {
                password: this.passwordForm.newPassword,
                passwordConfirmation: this.passwordForm.passwordConfirmation,
            };
            
            fetch(`/admin/specialists/${this.currentId}/change-password`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                },
                body: JSON.stringify(data),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    this.showMessage(data.message || 'Mot de passe changé avec succès', 'success');
                    // Réinitialiser le formulaire de mot de passe
                    this.passwordForm = {
                        newPassword: '',
                        passwordConfirmation: '',
                    };
                } else {
                    this.showMessage(data.message || 'Erreur lors du changement de mot de passe', 'error');
                }
            })
            .catch(error => {
                this.showMessage('Erreur de connexion', 'error');
            });
        },
        openDelete(id) {
            if (confirm('Êtes-vous sûr de vouloir supprimer cet intervenant ?')) {
                fetch(`/admin/specialists/${id}/delete`, {
                    method: 'DELETE',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        this.showMessage(data.message || 'Intervenant supprimé avec succès', 'success');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        this.showMessage(data.message || 'Erreur lors de la suppression', 'error');
                    }
                })
                .catch(error => {
                    this.showMessage('Erreur de connexion', 'error');
                });
            }
        },
        saveSpecialist() {
            // Vérifier qu'au moins une spécialisation est sélectionnée
            if (!this.formData.specializations || this.formData.specializations.length === 0) {
                this.showMessage('Veuillez sélectionner au moins une spécialisation', 'error');
                return;
            }
            
            // Vérifier le mot de passe si c'est une création
            if (!this.isEdit) {
                if (!this.formData.password || this.formData.password.length < 6) {
                    this.showMessage('Le mot de passe doit contenir au moins 6 caractères', 'error');
                    return;
                }
                if (this.formData.password !== this.formData.passwordConfirmation) {
                    this.showMessage('Les mots de passe ne correspondent pas', 'error');
                    return;
                }
            }
            
            // Récupérer les valeurs de ChoiceJS si l'instance existe
            if (this.isCoach && this.studentsChoicesInstance) {
                const values = this.studentsChoicesInstance.getValue(true);
                this.formData.studentIds = values.map(id => parseInt(id));
            }
            
            const data = {
                email: this.formData.email,
                firstName: this.formData.firstName,
                lastName: this.formData.lastName,
                specializations: Array.isArray(this.formData.specializations) ? this.formData.specializations : [],
                isActive: this.formData.isActive,
            };
            
            // Ajouter les studentIds si c'est un coach (création ou édition)
            if (this.isCoach) {
                data.studentIds = Array.isArray(this.formData.studentIds) ? this.formData.studentIds : [];
            }
            
            // Ajouter le mot de passe seulement pour la création
            if (!this.isEdit) {
                data.password = this.formData.password;
                data.passwordConfirmation = this.formData.passwordConfirmation;
            }
            
            const url = this.isEdit 
                ? `/admin/specialists/${this.currentId}/update`
                : '/admin/specialists/create';
            
            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                },
                body: JSON.stringify(data),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    this.showMessage(data.message || 'Intervenant enregistré avec succès', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    this.showMessage(data.message || 'Erreur lors de l\'enregistrement', 'error');
                }
            })
            .catch(error => {
                this.showMessage('Erreur de connexion', 'error');
            });
        },
        showMessage(message, type = 'info') {
            if (window.showToast) {
                window.showToast(message, type);
            } else {
                const toastManager = document.querySelector('[x-data="toastManager()"]')?.__x?.$data;
                if (toastManager) {
                    toastManager.show(message, type);
                }
            }
        },
        closeSheet() {
            // Détruire ChoiceJS avant de fermer
            if (this.studentsChoicesInstance) {
                try {
                    this.studentsChoicesInstance.destroy();
                    this.studentsChoicesInstance = null;
                } catch (e) {
                    console.warn('Erreur lors de la destruction de ChoiceJS (élèves):', e);
                }
            }
            
            this.rightSheetOpen = false;
            this.isEdit = false;
            this.currentId = null;
            this.passwordForm = {
                newPassword: '',
                passwordConfirmation: '',
            };
        }
    };
}
</script>
