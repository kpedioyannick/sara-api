function filterManager() {
    return {
        profileType: '',
        selectedIds: [],
        choicesInstance: null,
        parentsData: [],
        specialistsData: [],
        studentsData: [],
        currentOptions: [],
        init() {
            // R√©cup√©rer les donn√©es depuis les attributs data
            const parentsJson = this.$el.getAttribute('data-parents');
            const specialistsJson = this.$el.getAttribute('data-specialists');
            const studentsJson = this.$el.getAttribute('data-students');
            const profileTypeAttr = this.$el.getAttribute('data-profile-type');
            const selectedIdsAttr = this.$el.getAttribute('data-selected-ids');
            
            if (parentsJson) this.parentsData = JSON.parse(parentsJson);
            if (specialistsJson) this.specialistsData = JSON.parse(specialistsJson);
            if (studentsJson) this.studentsData = JSON.parse(studentsJson);
            if (profileTypeAttr) this.profileType = profileTypeAttr;
            if (selectedIdsAttr) this.selectedIds = selectedIdsAttr ? selectedIdsAttr.split(',').map(id => parseInt(id)) : [];
            
            // Attendre que Choices.js soit charg√©
            if (typeof Choices !== 'undefined') {
                this.$nextTick(() => {
                    this.initChoices();
                });
            } else {
                // Si Choices.js n'est pas encore charg√©, attendre
                const checkChoices = setInterval(() => {
                    if (typeof Choices !== 'undefined') {
                        clearInterval(checkChoices);
                        this.$nextTick(() => {
                            this.initChoices();
                        });
                    }
                }, 100);
                
                // Timeout apr√®s 5 secondes
                setTimeout(() => clearInterval(checkChoices), 5000);
            }
        },
        initChoices() {
            // D√©truire l'instance existante si elle existe
            if (this.choicesInstance) {
                this.choicesInstance.destroy();
            }
            
            // R√©cup√©rer les options selon le type de profil
            this.updateOptions();
            
            // Initialiser Choices.js
            const selectElement = this.$refs.choicesSelect;
            if (selectElement && this.currentOptions.length > 0) {
                this.choicesInstance = new Choices(selectElement, {
                    removeItemButton: true,
                    searchEnabled: true,
                    searchChoices: true,
                    searchFields: ['label', 'value'],
                    placeholder: true,
                    placeholderValue: 'Rechercher et s√©lectionner...',
                    noResultsText: 'Aucun r√©sultat trouv√©',
                    noChoicesText: 'Aucune option disponible',
                    itemSelectText: 'Appuyez pour s√©lectionner',
                });
                
                // Pr√©-s√©lectionner les IDs si pr√©sents
                if (this.selectedIds.length > 0) {
                    this.choicesInstance.setChoiceByValue(this.selectedIds.map(String));
                }
                
                // √âcouter les changements
                selectElement.addEventListener('change', () => {
                    this.selectedIds = this.choicesInstance.getValue(true).map(id => parseInt(id));
                });
            }
        },
        updateOptions() {
            this.currentOptions = [];
            
            if (this.profileType === 'parent') {
                this.currentOptions = this.parentsData.map(p => ({
                    value: p.id,
                    label: `${p.firstName} ${p.lastName}${p.email ? ' (' + p.email + ')' : ''}`
                }));
            } else if (this.profileType === 'specialist') {
                this.currentOptions = this.specialistsData.map(s => ({
                    value: s.id,
                    label: `${s.firstName} ${s.lastName}`
                }));
            } else if (this.profileType === 'student') {
                this.currentOptions = this.studentsData.map(s => ({
                    value: s.id,
                    label: `${s.firstName} ${s.lastName}${s.pseudo ? ' (' + s.pseudo + ')' : ''}${s.class ? ' - ' + s.class : ''}`
                }));
            }
            
            // Mettre √† jour le select HTML
            const selectElement = this.$refs.choicesSelect;
            if (selectElement) {
                selectElement.innerHTML = '';
                this.currentOptions.forEach(option => {
                    const optionElement = document.createElement('option');
                    optionElement.value = option.value;
                    optionElement.textContent = option.label;
                    selectElement.appendChild(optionElement);
                });
            }
        },
        setProfileType(type) {
            this.profileType = type;
            this.selectedIds = [];
            
            // Si on clique sur "Tous", r√©initialiser compl√®tement et appliquer les filtres
            if (type === '') {
                // D√©truire l'instance Choices.js si elle existe
                if (this.choicesInstance) {
                    this.choicesInstance.destroy();
                    this.choicesInstance = null;
                }
                // R√©initialiser le contenu du select
                const selectElement = this.$refs.choicesSelect;
                if (selectElement) {
                    selectElement.innerHTML = '';
                }
                // Appliquer les filtres (r√©initialiser)
                this.resetFilters();
                return;
            }
            
            // Pour les autres types, r√©initialiser Choices.js avec les nouvelles options
            this.$nextTick(() => {
                this.initChoices();
            });
        },
        applyFilters() {
            const params = new URLSearchParams();
            if (this.profileType) {
                params.set('profileType', this.profileType);
            }
            if (this.selectedIds.length > 0) {
                params.set('selectedIds', this.selectedIds.join(','));
            }
            
            const url = '/admin/families' + (params.toString() ? '?' + params.toString() : '');
            window.location.href = url;
        },
        resetFilters() {
            this.profileType = '';
            this.selectedIds = [];
            window.location.href = '/admin/families';
        }
    };
}
