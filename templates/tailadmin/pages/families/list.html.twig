<script>
function familyManager() {
    return {
        rightSheetOpen: false,
        editMode: false,
        currentType: '',
        currentData: null,
        familiesData: [],
        specialistsData: [],
        expandedFamilies: {}, // Pour g√©rer l'√©tat pliant/d√©pliant de chaque famille
        newFamilyData: {
            parentFirstName: '',
            parentLastName: '',
            parentEmail: '',
        },
        newStudentData: {
            firstName: '',
            lastName: '',
            pseudo: '',
            class: '',
        },
        init() {
            const familiesJson = this.$el.getAttribute('data-families');
            if (familiesJson) {
                this.familiesData = JSON.parse(familiesJson);
                // Initialiser l'√©tat pliant/d√©pliant pour chaque famille
                this.familiesData.forEach(family => {
                    this.expandedFamilies[family.id] = false;
                });
            }
            
            const specialistsJson = this.$el.getAttribute('data-specialists');
            if (specialistsJson) {
                this.specialistsData = JSON.parse(specialistsJson);
            }
        },
        currentFamilyId: null,
        currentStudentId: null,
        openCreate() {
            this.currentType = 'create';
            this.newFamilyData = {
                parentFirstName: '',
                parentLastName: '',
                parentEmail: '',
            };
            this.rightSheetOpen = true;
        },
        saveFamily() {
            if (!this.newFamilyData.parentFirstName || 
                !this.newFamilyData.parentLastName || !this.newFamilyData.parentEmail) {
                this.showMessage('Veuillez remplir tous les champs obligatoires', 'error');
                return;
            }

            fetch('/admin/families/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                },
                body: JSON.stringify({
                    parent: {
                        firstName: this.newFamilyData.parentFirstName,
                        lastName: this.newFamilyData.parentLastName,
                        email: this.newFamilyData.parentEmail,
                    },
                }),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    this.showMessage(data.message || 'Famille cr√©√©e avec succ√®s', 'success');
                    this.closeSheet();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    this.showMessage(data.message || 'Erreur lors de la cr√©ation', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                this.showMessage('Erreur de connexion', 'error');
            });
        },
        openParentEdit(familyId) {
            const family = this.familiesData.find(f => f.id === familyId);
            if (family) {
                this.currentType = 'parent';
                this.currentFamilyId = familyId;
                this.currentStudentId = null;
                if (family.parent) {
                    this.currentData = JSON.parse(JSON.stringify(family.parent));
                    this.currentData.newPassword = ''; // Initialiser le champ mot de passe
                } else {
                    // Initialiser avec des valeurs par d√©faut si le parent n'existe pas
                    this.currentData = {
                        firstName: '',
                        lastName: '',
                        email: '',
                        newPassword: ''
                    };
                }
                this.editMode = false;
                this.rightSheetOpen = true;
            }
        },
        openStudentCreate(familyId) {
            this.currentType = 'create-student';
            this.currentFamilyId = familyId;
            this.currentStudentId = null;
            
            // R√©cup√©rer le nom de famille du parent
            const family = this.familiesData.find(f => f.id === familyId);
            const parentLastName = family?.parent?.lastName || '';
            
            this.newStudentData = {
                firstName: '',
                lastName: parentLastName, // Pr√©remplir avec le nom du parent
                pseudo: '',
                class: '',
                schoolName: '',
            };
            this.rightSheetOpen = true;
        },
        generatePseudo() {
            // G√©n√©rer le pseudo automatiquement si pr√©nom et nom sont remplis
            if (this.newStudentData.firstName && this.newStudentData.lastName) {
                // Normaliser : minuscules, remplacer espaces et caract√®res sp√©ciaux
                const firstName = this.newStudentData.firstName
                    .toLowerCase()
                    .normalize('NFD')
                    .replace(/[\u0300-\u036f]/g, '') // Supprimer les accents
                    .replace(/[^a-z0-9]/g, '') // Supprimer tout ce qui n'est pas alphanum√©rique
                    .trim();
                
                const lastName = this.newStudentData.lastName
                    .toLowerCase()
                    .normalize('NFD')
                    .replace(/[\u0300-\u036f]/g, '') // Supprimer les accents
                    .replace(/[^a-z0-9]/g, '') // Supprimer tout ce qui n'est pas alphanum√©rique
                    .trim();
                
                if (firstName && lastName) {
                    this.newStudentData.pseudo = `${firstName}.${lastName}`;
                }
            }
        },
        openStudentEdit(familyId, studentId) {
            const family = this.familiesData.find(f => f.id === familyId);
            if (family) {
                const student = family.students.find(s => s.id === studentId);
                if (student) {
                    this.currentType = 'student';
                    this.currentFamilyId = familyId;
                    this.currentStudentId = studentId;
                    this.currentData = JSON.parse(JSON.stringify(student));
                    this.currentData.newPassword = ''; // Initialiser le champ mot de passe
