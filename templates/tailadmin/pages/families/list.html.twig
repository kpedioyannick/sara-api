<script>
function familyManager() {
    return {
        rightSheetOpen: false,
        editMode: false,
        currentType: '',
        currentData: null,
        familiesData: [],
        newFamilyData: {
            parentFirstName: '',
            parentLastName: '',
            parentEmail: '',
            parentPhone: '',
        },
        newStudentData: {
            firstName: '',
            lastName: '',
            pseudo: '',
            class: '',
        },
        init() {
            const familiesJson = this.$el.getAttribute('data-families');
            if (familiesJson) {
                this.familiesData = JSON.parse(familiesJson);
            }
        },
        currentFamilyId: null,
        currentStudentId: null,
        openCreate() {
            this.currentType = 'create';
            this.newFamilyData = {
                parentFirstName: '',
                parentLastName: '',
                parentEmail: '',
                parentPhone: '',
            };
            this.rightSheetOpen = true;
        },
        saveFamily() {
            if (!this.newFamilyData.parentFirstName || 
                !this.newFamilyData.parentLastName || !this.newFamilyData.parentEmail) {
                this.showMessage('Veuillez remplir tous les champs obligatoires', 'error');
                return;
            }

            fetch('/admin/families/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                },
                body: JSON.stringify({
                    parent: {
                        firstName: this.newFamilyData.parentFirstName,
                        lastName: this.newFamilyData.parentLastName,
                        email: this.newFamilyData.parentEmail,
                        phone: this.newFamilyData.parentPhone || null,
                    },
                }),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    this.showMessage(data.message || 'Famille créée avec succès', 'success');
                    this.closeSheet();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    this.showMessage(data.message || 'Erreur lors de la création', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                this.showMessage('Erreur de connexion', 'error');
            });
        },
        openParentEdit(familyId) {
            const family = this.familiesData.find(f => f.id === familyId);
            if (family) {
                this.currentType = 'parent';
                this.currentFamilyId = familyId;
                this.currentStudentId = null;
                if (family.parent) {
                    this.currentData = JSON.parse(JSON.stringify(family.parent));
                } else {
                    // Initialiser avec des valeurs par défaut si le parent n'existe pas
                    this.currentData = {
                        firstName: '',
                        lastName: '',
                        email: '',
                        phone: ''
                    };
                }
                this.editMode = false;
                this.rightSheetOpen = true;
            }
        },
        openStudentCreate(familyId) {
            this.currentType = 'create-student';
            this.currentFamilyId = familyId;
            this.currentStudentId = null;
            
            // Récupérer le nom de famille du parent
            const family = this.familiesData.find(f => f.id === familyId);
            const parentLastName = family?.parent?.lastName || '';
            
            this.newStudentData = {
                firstName: '',
                lastName: parentLastName, // Préremplir avec le nom du parent
                pseudo: '',
                class: '',
                schoolName: '',
            };
            this.rightSheetOpen = true;
        },
        generatePseudo() {
            // Générer le pseudo automatiquement si prénom et nom sont remplis
            if (this.newStudentData.firstName && this.newStudentData.lastName) {
                // Normaliser : minuscules, remplacer espaces et caractères spéciaux
                const firstName = this.newStudentData.firstName
                    .toLowerCase()
                    .normalize('NFD')
                    .replace(/[\u0300-\u036f]/g, '') // Supprimer les accents
                    .replace(/[^a-z0-9]/g, '') // Supprimer tout ce qui n'est pas alphanumérique
                    .trim();
                
                const lastName = this.newStudentData.lastName
                    .toLowerCase()
                    .normalize('NFD')
                    .replace(/[\u0300-\u036f]/g, '') // Supprimer les accents
                    .replace(/[^a-z0-9]/g, '') // Supprimer tout ce qui n'est pas alphanumérique
                    .trim();
                
                if (firstName && lastName) {
                    this.newStudentData.pseudo = `${firstName}.${lastName}`;
                }
            }
        },
        openStudentEdit(familyId, studentId) {
            const family = this.familiesData.find(f => f.id === familyId);
            if (family) {
                const student = family.students.find(s => s.id === studentId);
                if (student) {
                    this.currentType = 'student';
                    this.currentFamilyId = familyId;
                    this.currentStudentId = studentId;
                    this.currentData = JSON.parse(JSON.stringify(student));
                    this.editMode = false;
                    this.rightSheetOpen = true;
                }
            }
        },
        saveStudent() {
            // Si c'est une création
            if (this.currentType === 'create-student') {
                if (!this.currentFamilyId || !this.newStudentData.firstName || 
                    !this.newStudentData.lastName || !this.newStudentData.pseudo) {
                    this.showMessage('Veuillez remplir tous les champs obligatoires', 'error');
                    return;
                }

                // Générer l'email à partir du pseudo
                const email = this.newStudentData.pseudo + '@sara.education';

                fetch(`/admin/families/${this.currentFamilyId}/students/create`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest',
                    },
                    body: JSON.stringify({
                        firstName: this.newStudentData.firstName,
                        lastName: this.newStudentData.lastName,
                        pseudo: this.newStudentData.pseudo,
                        email: email,
                        class: this.newStudentData.class || '',
                        schoolName: this.newStudentData.schoolName || '',
                    }),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        this.showMessage(data.message || 'Élève créé avec succès', 'success');
                        this.closeSheet();
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        this.showMessage(data.message || 'Erreur lors de la création', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    this.showMessage('Erreur de connexion', 'error');
                });
                return;
            }

            // Si c'est une modification (code existant)
            if (!this.currentFamilyId || !this.currentStudentId || !this.currentData) return;
            
            fetch(`/admin/families/${this.currentFamilyId}/students/${this.currentStudentId}/update`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                },
                body: JSON.stringify(this.currentData),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    this.showMessage(data.message || 'Élève modifié avec succès', 'success');
                    this.toggleEdit();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    this.showMessage(data.message || 'Erreur lors de l\'enregistrement', 'error');
                }
            })
            .catch(error => {
                this.showMessage('Erreur de connexion', 'error');
            });
        },
        saveParent() {
            if (!this.currentFamilyId || !this.currentData) return;
            
            fetch(`/admin/families/${this.currentFamilyId}/parent/update`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                },
                body: JSON.stringify(this.currentData),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    this.showMessage(data.message || 'Parent modifié avec succès', 'success');
                    this.toggleEdit();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    this.showMessage(data.message || 'Erreur lors de l\'enregistrement', 'error');
                }
            })
            .catch(error => {
                this.showMessage('Erreur de connexion', 'error');
            });
        },
        showMessage(message, type = 'info') {
            // Utiliser la fonction globale showToast si disponible
            if (typeof window.showToast === 'function') {
                window.showToast(message, type);
                return;
            }
            
            // Sinon, essayer d'accéder directement au toast manager
            const toastElement = document.querySelector('[x-data="toastManager()"]');
            if (toastElement?.__x?.$data) {
                toastElement.__x.$data.show(message, type);
            } else {
                // Fallback: utiliser un événement personnalisé
                window.dispatchEvent(new CustomEvent('show-toast', { 
                    detail: { message, type } 
                }));
            }
        },
        toggleEdit() {
            this.editMode = !this.editMode;
        },
        closeSheet() {
            this.rightSheetOpen = false;
            this.editMode = false;
            this.currentData = null;
            this.currentFamilyId = null;
            this.currentStudentId = null;
            this.currentType = '';
            this.newStudentData = {
                firstName: '',
                lastName: '',
                pseudo: '',
                class: '',
                schoolName: '',
            };
        }
    };
}
</script>
