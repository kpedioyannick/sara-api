{% extends 'tailadmin/layouts/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" />
{% endblock %}

{% block content %}
<div 
    x-data="familyManager()"
    data-families='{{ families|json_encode|e('html_attr') }}'
    data-specialists='{{ specialists|json_encode|e('html_attr') }}'
    class="p-4 mx-auto max-w-(--breakpoint-2xl) md:p-6"
>
    {% include 'tailadmin/components/breadcrumb.html.twig' %}

    {% if app.user.isCoach() %}
    <!-- Barre de filtres -->
    <div 
        x-data="filterManager()"
        data-parents='{{ parents|json_encode|e('html_attr') }}'
        data-specialists='{{ specialists|json_encode|e('html_attr') }}'
        data-students='{{ students|json_encode|e('html_attr') }}'
        data-profile-type='{{ profileType|default('') }}'
        data-selected-ids='{{ selectedIds|default('') }}'
        class="mb-6 rounded-2xl border border-gray-200 bg-white p-4 dark:border-gray-800 dark:bg-white/[0.03]"
    >
        <div class="mb-4">
            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                Filtrer par profil
            </label>
            <div class="flex gap-2">
                <button
                    @click="setProfileType('')"
                    :class="profileType === '' ? 'bg-brand-500 text-white' : 'bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300'"
                    class="rounded-lg px-4 py-2 text-sm font-medium transition-colors hover:bg-brand-600 hover:text-white dark:hover:bg-gray-700"
                >
                    Tous
                </button>
                <button
                    @click="setProfileType('parent')"
                    :class="profileType === 'parent' ? 'bg-brand-500 text-white' : 'bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300'"
                    class="rounded-lg px-4 py-2 text-sm font-medium transition-colors hover:bg-brand-600 hover:text-white dark:hover:bg-gray-700"
                >
                    Parent
                </button>
                <button
                    @click="setProfileType('specialist')"
                    :class="profileType === 'specialist' ? 'bg-brand-500 text-white' : 'bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300'"
                    class="rounded-lg px-4 py-2 text-sm font-medium transition-colors hover:bg-brand-600 hover:text-white dark:hover:bg-gray-700"
                >
                    Sp√©cialiste
                </button>
                <button
                    @click="setProfileType('student')"
                    :class="profileType === 'student' ? 'bg-brand-500 text-white' : 'bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300'"
                    class="rounded-lg px-4 py-2 text-sm font-medium transition-colors hover:bg-brand-600 hover:text-white dark:hover:bg-gray-700"
                >
                    √âl√®ve
                </button>
            </div>
        </div>
        
        <div x-show="profileType !== ''">
            <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                Rechercher et s√©lectionner
            </label>
            <select
                id="choices-select"
                x-ref="choicesSelect"
                class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                multiple
            >
            </select>
        </div>
        
        <div class="mt-4 flex items-center gap-2" x-show="profileType !== '' || selectedIds.length > 0">
            <button
                @click="applyFilters()"
                class="rounded-lg bg-brand-500 px-4 py-2 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
            >
                Appliquer les filtres
            </button>
            <button
                @click="resetFilters()"
                class="rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
            >
                R√©initialiser
            </button>
        </div>
    </div>
    {% endif %}

    <div class="rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
        <div class="px-6 py-5 flex items-center justify-between">
            <h3 class="text-base font-medium text-gray-800 dark:text-white/90">
                Liste des Familles
            </h3>
            <button
                @click="openCreate()"
                class="inline-flex items-center gap-2 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
            >
                <svg class="fill-current" width="16" height="16" viewBox="0 0 16 16" fill="none">
                    <path d="M8 1a7 7 0 100 14A7 7 0 008 1zM7.5 4v4l3.5 2 .5-.866L8.5 7.5V4h-1z" fill="currentColor"/>
                </svg>
                Nouvelle Famille
            </button>
        </div>
        <div class="border-t border-gray-100 p-4 dark:border-gray-800 sm:p-6">
            <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 xl:grid-cols-3">
                {% for family in families %}
                <div>
                    <div class="rounded-xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-white/[0.03] sm:p-6">
                        <div class="mb-4 flex items-center justify-between">
                            <span class="text-sm font-semibold text-gray-800 dark:text-white/90">
                                {% if family.parent and family.parent.lastName %}
                                    {{ family.parent.lastName }}
                                {% else %}
                                    Famille #{{ family.id }}
                                {% endif %}
                            </span>
                            {% if family.isActive %}
                            <span class="inline-flex items-center rounded-full bg-success-100 px-2.5 py-0.5 text-xs font-medium text-success-600 dark:bg-success-900/30 dark:text-success-400">
                                Actif
                            </span>
                            {% else %}
                            <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-600 dark:bg-gray-800 dark:text-gray-400">
                                Inactif
                            </span>
                            {% endif %}
                        </div>

                      

                        <div class="mb-4 text-xs text-gray-500 dark:text-gray-400">
                            <div class="flex items-center gap-3 flex-wrap">
                                <span>üë®‚Äçüè´ {% if family.coachName %}{{ family.coachName }}{% else %}Non assign√©{% endif %}</span>
                                <span>‚Ä¢</span>
                                <span>üë®‚Äçüë©‚Äçüëß‚Äçüë¶ {% if family.parent %}{{ family.parent.firstName }} {{ family.parent.lastName }}{% else %}Non renseign√©{% endif %}</span>
                                <span>‚Ä¢</span>
                                <span>{{ family.createdAt }}</span>
                            </div>
                        </div>

                        <!-- Students Section -->
                        <div class="mb-4 border-t border-gray-100 pt-4 dark:border-gray-800">
                            <div class="mb-3 flex items-center justify-between">
                                <h5 class="text-sm font-medium text-gray-700 dark:text-gray-300">√âl√®ves ({{ family.students|length }})</h5>
                                <button
                                    @click="openStudentCreate({{ family.id }})"
                                    class="inline-flex items-center gap-1 rounded-lg bg-brand-500 px-3 py-1.5 text-xs font-medium text-white shadow-theme-xs hover:bg-brand-600"
                                >
                                    <svg class="fill-current" width="14" height="14" viewBox="0 0 14 14" fill="none">
                                        <path d="M7 1a6 6 0 100 12A6 6 0 007 1zM6.5 4v2.5H4v1h2.5V10h1V7.5H10v-1H7.5V4h-1z" fill="currentColor"/>
                                    </svg>
                                    Ajouter
                                </button>
                            </div>
                            <div class="space-y-2">
                                {% for student in family.students %}
                                <div 
                                    x-show="expandedFamilies[{{ family.id }}] || {{ loop.index0 }} < 3"
                                    class="rounded-lg border border-gray-200 bg-gray-50 p-3 dark:border-gray-700 dark:bg-gray-800/50"
                                >
                                    <div class="flex items-center justify-between">
                                        <div class="flex-1">
                                            <p class="text-sm font-medium text-gray-800 dark:text-white/90">{{ student.firstName }} {{ student.lastName }}</p>
                                            <div class="mt-1 flex items-center gap-3 text-xs text-gray-500 dark:text-gray-400">
                                                <span>Pseudo: {{ student.pseudo }}</span>
                                                {% if student.class %}
                                                <span>‚Ä¢</span>
                                                <span>{{ student.class }}</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <button
                                            @click="openStudentEdit({{ family.id }}, {{ student.id }})"
                                            class="ml-2 rounded-lg border border-gray-200 bg-white px-3 py-1.5 text-xs font-medium text-gray-700 transition-colors hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
                                        >
                                            √âditer
                                        </button>
                                    </div>
                                    <div class="mt-2 flex items-center gap-2">
                                        <a
                                            href="{{ path('admin_objectives_list', {student: student.id}) }}"
                                            class="inline-flex items-center gap-1 rounded-lg border border-brand-200 bg-brand-50 px-2.5 py-1 text-xs font-medium text-brand-700 transition-colors hover:bg-brand-100 dark:border-brand-800 dark:bg-brand-900/30 dark:text-brand-400 dark:hover:bg-brand-900/50"
                                            title="Voir les objectifs"
                                        >
                                            <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                            </svg>
                                            Objectifs
                                        </a>
                                        <a
                                            href="{{ path('admin_planning_list', {student: student.id}) }}"
                                            class="inline-flex items-center gap-1 rounded-lg border border-blue-200 bg-blue-50 px-2.5 py-1 text-xs font-medium text-blue-700 transition-colors hover:bg-blue-100 dark:border-blue-800 dark:bg-blue-900/30 dark:text-blue-400 dark:hover:bg-blue-900/50"
                                            title="Voir le planning"
                                        >
                                            <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                            </svg>
                                            Planning
                                        </a>
                                        <a
                                            href="{{ path('admin_requests_list', {student: student.id}) }}"
                                            class="inline-flex items-center gap-1 rounded-lg border border-purple-200 bg-purple-50 px-2.5 py-1 text-xs font-medium text-purple-700 transition-colors hover:bg-purple-100 dark:border-purple-800 dark:bg-purple-900/30 dark:text-purple-400 dark:hover:bg-purple-900/50"
                                            title="Voir les demandes"
                                        >
                                            <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                            </svg>
                                            Demandes
                                        </a>
                                    </div>
                                </div>
                                {% endfor %}
                                {% if family.students|length > 3 %}
                                <button
                                    @click="expandedFamilies[{{ family.id }}] = !expandedFamilies[{{ family.id }}]"
                                    class="w-full rounded-lg border border-gray-200 bg-white px-3 py-2 text-xs font-medium text-gray-700 transition-colors hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
                                >
                                    <span x-show="!expandedFamilies[{{ family.id }}]">Voir tous les √©l√®ves ({{ family.students|length - 3 }} de plus)</span>
                                    <span x-show="expandedFamilies[{{ family.id }}]">Masquer</span>
                                </button>
                                {% endif %}
                            </div>
                        </div>

                        <div class="flex gap-2">
                            <button
                                @click="openParentEdit({{ family.id }})"
                                class="flex-1 inline-flex items-center justify-center gap-2 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 shadow-theme-xs transition-colors hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
                            >
                                <svg class="fill-current" width="16" height="16" viewBox="0 0 16 16" fill="none">
                                    <path d="M11.333 2.667a2.667 2.667 0 0 1 3.774 3.774l-8 8a2.667 2.667 0 0 1-1.886.78H2.667v-2.554a2.667 2.667 0 0 1 .78-1.886l8-8zm2.554 1.22L12.113 2.113a1.333 1.333 0 0 0-1.886 0L9.333 3.007l2.667 2.667 1.554-1.554a1.333 1.333 0 0 0 0-1.886z" fill=""/>
                                </svg>
                                √âditer Parent
                            </button>
                            <a href="#" class="flex-1 inline-flex items-center justify-center gap-2 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600">
                                Voir d√©tails
                            </a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Right Sheet Overlay -->
    <div
        x-show="rightSheetOpen"
        @click="closeSheet()"
        x-transition:enter="transition-opacity ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition-opacity ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 z-50 bg-black/50 backdrop-blur-sm"
        style="display: none;"
    ></div>

    <!-- Right Sheet Panel -->
    <div
        x-show="rightSheetOpen"
        @click.away="closeSheet()"
        x-transition:enter="transition-transform ease-out duration-300"
        x-transition:enter-start="translate-x-full"
        x-transition:enter-end="translate-x-0"
        x-transition:leave="transition-transform ease-in duration-200"
        x-transition:leave-start="translate-x-0"
        x-transition:leave-end="translate-x-full"
        class="fixed right-0 top-0 z-50 h-full w-full max-w-md overflow-y-auto bg-white shadow-2xl dark:bg-gray-900"
        style="display: none;"
    >
        <!-- Parent Sheet -->
        <template x-if="currentType === 'parent' && currentData">
            <div class="flex h-full flex-col">
                <!-- Header -->
                <div class="sticky top-0 z-10 border-b border-gray-200 bg-white px-6 py-4 dark:border-gray-800 dark:bg-gray-900">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-gray-800 dark:text-white/90">
                            <span x-show="!editMode">Informations Parent</span>
                            <span x-show="editMode">Modifier Parent</span>
                        </h3>
                        <button
                            @click="closeSheet()"
                            class="rounded-lg p-2 text-gray-400 transition-colors hover:bg-gray-100 hover:text-gray-600 dark:hover:bg-gray-800 dark:hover:text-gray-300"
                        >
                            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Content -->
                <div class="flex-1 p-6">
                    <!-- View Mode -->
                    <template x-if="!editMode">
                        <div class="space-y-6">
                            <div>
                                <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Pr√©nom</label>
                                <p class="mt-1 text-base text-gray-800 dark:text-white/90" x-text="currentData.firstName"></p>
                            </div>
                            <div>
                                <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Nom</label>
                                <p class="mt-1 text-base text-gray-800 dark:text-white/90" x-text="currentData.lastName"></p>
                            </div>
                            <div>
                                <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Email</label>
                                <p class="mt-1 text-base text-gray-800 dark:text-white/90" x-text="currentData.email"></p>
                            </div>
                        </div>
                    </template>

                    <!-- Edit Mode -->
                    <template x-if="editMode">
                        <form class="space-y-6">
                            <div>
                                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Pr√©nom</label>
                                <input
                                    type="text"
                                    x-model="currentData.firstName"
                                    class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                                />
                            </div>
                            <div>
                                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Nom</label>
                                <input
                                    type="text"
                                    x-model="currentData.lastName"
                                    class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                                />
                            </div>
                            <div>
                                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                                <input
                                    type="email"
                                    x-model="currentData.email"
                                    class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                                />
                            </div>
                            <div>
                                <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Nouveau mot de passe</label>
                                <input
                                    type="password"
                                    x-model="currentData.newPassword"
                                    placeholder="Laisser vide pour ne pas modifier"
                                    class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                                />
                                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                                    Laisser vide si vous ne souhaitez pas modifier le mot de passe
                                </p>
                            </div>
                        </form>
                    </template>
                </div>

                <!-- Footer -->
                <div class="sticky bottom-0 border-t border-gray-200 bg-white px-6 py-4 dark:border-gray-800 dark:bg-gray-900">
                    <div class="flex gap-3">
                        <button
                            x-show="!editMode"
                            @click="toggleEdit()"
                            class="flex-1 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
                        >
                            Modifier
                        </button>
                        <template x-if="editMode">
                            <div class="flex flex-1 gap-3">
                                <button
                                    @click="toggleEdit()"
                                    class="flex-1 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 shadow-theme-xs hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
                                >
                                    Annuler
                                </button>
                                <button
                                    @click="saveParent()"
                                    class="flex-1 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white shadow-theme-xs hover:bg-brand-600"
                                >
                                    Enregistrer
                                </button>
                            </div>
                        </template>
                    </div>
                </div>
            </div>
        </template>

        <!-- Create Family Sheet -->
        <template x-if="currentType === 'create'">
            <div class="flex h-full flex-col">
                <!-- Header -->
                <div class="sticky top-0 z-10 border-b border-gray-200 bg-white px-6 py-4 dark:border-gray-800 dark:bg-gray-900">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-gray-800 dark:text-white/90">
                            Cr√©er une nouvelle famille
                        </h3>
                        <button
                            @click="closeSheet()"
                            class="rounded-lg p-2 text-gray-400 transition-colors hover:bg-gray-100 hover:text-gray-600 dark:hover:bg-gray-800 dark:hover:text-gray-300"
                        >
                            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Content -->
                <div class="flex-1 overflow-y-auto p-6">
                    <form class="space-y-6" @submit.prevent="saveFamily()">
                        <div class="border-t border-gray-200 pt-6 dark:border-gray-800">
                            <h4 class="mb-4 text-sm font-semibold text-gray-800 dark:text-white/90">
                                Informations du Parent
                            </h4>
                            <div class="space-y-4">
                                <div>
                                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                                        Pr√©nom <span class="text-error-500">*</span>
                                    </label>
                                    <input
                                        type="text"
                                        x-model="newFamilyData.parentFirstName"
                                        required
                                        placeholder="Pr√©nom"
                                        class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                                    />
                                </div>
                                <div>
                                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                                        Nom <span class="text-error-500">*</span>
                                    </label>
                                    <input
                                        type="text"
                                        x-model="newFamilyData.parentLastName"
                                        required
                                        placeholder="Nom"
                                        class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                                    />
                                </div>
                                <div>
                                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                                        Email <span class="text-error-500">*</span>
                                    </label>
                                    <input
                                        type="email"
                                        x-model="newFamilyData.parentEmail"
                                        required
                                        placeholder="email@example.com"
                                        class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                                    />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Footer -->
                <div class="sticky bottom-0 border-t border-gray-200 bg-white px-6 py-4 dark:border-gray-800 dark:bg-gray-900">
                    <div class="flex gap-3">
