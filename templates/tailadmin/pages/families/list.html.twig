            this.closeSheet();
        },
        closeSheet() {
            // D√©truire les instances Choices.js
            if (this.studentTagsChoicesInstance) {
                try {
                    this.studentTagsChoicesInstance.destroy();
                } catch (e) {
                    console.warn('Erreur lors de la destruction de Choices.js (tags cr√©ation):', e);
                }
                this.studentTagsChoicesInstance = null;
            }
            if (this.studentTagsEditChoicesInstance) {
                try {
                    this.studentTagsEditChoicesInstance.destroy();
                } catch (e) {
                    console.warn('Erreur lors de la destruction de Choices.js (tags √©dition):', e);
                }
                this.studentTagsEditChoicesInstance = null;
            }
            
            this.rightSheetOpen = false;
            this.editMode = false;
            this.currentData = null;
            this.currentFamilyId = null;
            this.currentStudentId = null;
            this.currentType = '';
