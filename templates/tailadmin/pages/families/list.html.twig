                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        this.showMessage(data.message || '√âl√®ve cr√©√© avec succ√®s', 'success');
                        this.closeSheet();
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        this.showMessage(data.message || 'Erreur lors de la cr√©ation', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    this.showMessage('Erreur de connexion', 'error');
                });
                return;
            }

            // Si c'est une modification (code existant)
            if (!this.currentFamilyId || !this.currentStudentId || !this.currentData) return;
            
            // Pr√©parer les donn√©es √† envoyer
            const dataToSend = {
                firstName: this.currentData.firstName,
                lastName: this.currentData.lastName,
                pseudo: this.currentData.pseudo,
                class: this.currentData.class,
                schoolName: this.currentData.schoolName,
                newPassword: this.currentData.newPassword,
                specialistIds: this.currentData.specialistIds || []
            };
            
            fetch(`/admin/families/${this.currentFamilyId}/students/${this.currentStudentId}/update`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                },
                body: JSON.stringify(dataToSend),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    this.showMessage(data.message || '√âl√®ve modifi√© avec succ√®s', 'success');
                    this.toggleEdit();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    this.showMessage(data.message || 'Erreur lors de l\'enregistrement', 'error');
                }
            })
            .catch(error => {
                this.showMessage('Erreur de connexion', 'error');
            });
        },
        saveParent() {
            if (!this.currentFamilyId || !this.currentData) return;
            
            fetch(`/admin/families/${this.currentFamilyId}/parent/update`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                },
                body: JSON.stringify(this.currentData),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    this.showMessage(data.message || 'Parent modifi√© avec succ√®s', 'success');
                    this.toggleEdit();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    this.showMessage(data.message || 'Erreur lors de l\'enregistrement', 'error');
                }
            })
            .catch(error => {
                this.showMessage('Erreur de connexion', 'error');
            });
        },
        showMessage(message, type = 'info') {
            // Utiliser la fonction globale showToast si disponible
            if (typeof window.showToast === 'function') {
                window.showToast(message, type);
                return;
            }
            
            // Sinon, essayer d'acc√©der directement au toast manager
            const toastElement = document.querySelector('[x-data="toastManager()"]');
            if (toastElement?.__x?.$data) {
                toastElement.__x.$data.show(message, type);
            } else {
                // Fallback: utiliser un √©v√©nement personnalis√©
                window.dispatchEvent(new CustomEvent('show-toast', { 
                    detail: { message, type } 
                }));
            }
        },
        toggleEdit() {
            this.editMode = !this.editMode;
        },
        closeSheet() {
            this.rightSheetOpen = false;
            this.editMode = false;
            this.currentData = null;
            this.currentFamilyId = null;
            this.currentStudentId = null;
            this.currentType = '';
            this.newStudentData = {
                firstName: '',
                lastName: '',
                pseudo: '',
                class: '',
                schoolName: '',
            };
        }
    };
}

