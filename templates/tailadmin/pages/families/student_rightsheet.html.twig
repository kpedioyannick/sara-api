{# Template pour le RightSheet d'un élève chargé via AJAX #}
<div class="flex h-full flex-col" x-data="studentRightSheetManager({{ student.id }}, {{ family.id }})">
    <!-- Header -->
    <div class="sticky top-0 z-10 border-b border-gray-200 bg-white px-6 py-4 dark:border-gray-800 dark:bg-gray-900">
        <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-800 dark:text-white/90">
                <span x-show="!editMode">Informations Élève</span>
                <span x-show="editMode">Modifier Élève</span>
            </h3>
            <button
                @click="closeSheet()"
                class="rounded-lg p-2 text-gray-400 transition-colors hover:bg-gray-100 hover:text-gray-600 dark:hover:bg-gray-800 dark:hover:text-gray-300"
            >
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
    </div>

    <!-- Content -->
    <div class="flex-1 p-6">
        <!-- View Mode -->
        <template x-if="!editMode">
            <div class="space-y-6">
                <div>
                    <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Prénom</label>
                    <p class="mt-1 text-base text-gray-800 dark:text-white/90">{{ student.firstName }}</p>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Nom</label>
                    <p class="mt-1 text-base text-gray-800 dark:text-white/90">{{ student.lastName }}</p>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Pseudo</label>
                    <p class="mt-1 text-base text-gray-800 dark:text-white/90">{{ student.pseudo ?: 'Non renseigné' }}</p>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Classe</label>
                    <p class="mt-1 text-base text-gray-800 dark:text-white/90">{{ student.class ?: 'Non renseignée' }}</p>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Nom de l'établissement</label>
                    <p class="mt-1 text-base text-gray-800 dark:text-white/90">{{ student.schoolName ?: 'Non renseigné' }}</p>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Tags des besoins</label>
                    <div class="mt-1">
                        {% if student.needTags and student.needTags|length > 0 %}
                            <div class="flex flex-wrap gap-2">
                                {% for tag in student.needTags %}
                                    <span class="inline-flex items-center rounded-full bg-brand-100 px-3 py-1 text-xs font-medium text-brand-700 dark:bg-brand-900/30 dark:text-brand-400">{{ tag }}</span>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-base text-gray-500 dark:text-gray-400">Aucun tag</p>
                        {% endif %}
                    </div>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Spécialistes assignés</label>
                    <div class="mt-1">
                        {% if student.specialists and student.specialists|length > 0 %}
                            <div class="flex flex-wrap gap-2">
                                {% for specialist in student.specialists %}
                                    <span class="inline-flex items-center rounded-full bg-brand-50 px-2.5 py-0.5 text-xs font-medium text-brand-600 dark:bg-brand-500/15 dark:text-brand-400">
                                        {{ specialist.firstName }} {{ specialist.lastName }}
                                    </span>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-base text-gray-500 dark:text-gray-400">Aucun spécialiste assigné</p>
                        {% endif %}
                    </div>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Statistiques</label>
                    <div class="mt-2 space-y-2">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600 dark:text-gray-400">Objectifs</span>
                            <span class="text-base font-semibold text-gray-800 dark:text-white/90">{{ objectivesCount }}</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600 dark:text-gray-400">Demandes</span>
                            <span class="text-base font-semibold text-gray-800 dark:text-white/90">{{ requestsCount }}</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600 dark:text-gray-400">Événements planning</span>
                            <span class="text-base font-semibold text-gray-800 dark:text-white/90">{{ planningsCount }}</span>
                        </div>
                    </div>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2 block">Statut</label>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600 dark:text-gray-400">
                            {% if student.isActive %}
                                <span class="text-green-600 dark:text-green-400">Actif</span>
                            {% else %}
                                <span class="text-red-600 dark:text-red-400">Inactif</span>
                            {% endif %}
                        </span>
                        <button
                            type="button"
                            @click="toggleStudentStatus()"
                            :class="studentData.isActive ? 'bg-green-500 hover:bg-green-600' : 'bg-gray-300 hover:bg-gray-400'"
                            class="relative inline-flex h-6 w-11 items-center rounded-full transition-colors focus:outline-none focus:ring-2 focus:ring-brand-500 focus:ring-offset-2"
                        >
                            <span
                                :class="studentData.isActive ? 'translate-x-6' : 'translate-x-1'"
                                class="inline-block h-4 w-4 transform rounded-full bg-white transition-transform"
                            ></span>
                        </button>
                    </div>
                </div>
                <!-- Section Notes -->
                <div class="pt-4 border-t border-gray-200 dark:border-gray-800">
                    <div class="mb-4 flex items-center justify-between">
                        <h4 class="text-sm font-semibold text-gray-600 dark:text-gray-400 uppercase tracking-wide">Notes</h4>
                        <button
                            @click="openNoteForm()"
                            class="rounded-lg bg-brand-500 px-3 py-1.5 text-xs font-medium text-white transition-colors hover:bg-brand-600"
                        >
                            + Ajouter
                        </button>
                    </div>
                    <div class="space-y-2 max-h-64 overflow-y-auto">
                        <template x-if="notes.length === 0">
                            <p class="text-sm text-gray-500 dark:text-gray-400 text-center py-4">Aucune note</p>
                        </template>
                        <template x-for="note in notes" :key="note.id">
                            <div class="rounded-lg border border-gray-200 dark:border-gray-700 p-3 hover:shadow-sm transition-shadow">
                                <div class="flex items-start justify-between gap-2">
                                    <div class="flex-1 min-w-0">
                                        <div class="flex items-center gap-2 mb-1.5">
                                            <span 
                                                class="px-2 py-0.5 rounded text-xs font-medium"
                                                :class="{
                                                    'bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300': note.type === 'draft',
                                                    'bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300': note.type === 'assessment',
                                                    'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300': note.type === 'remark',
                                                    'bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300': note.type === 'vigilance'
                                                }"
                                                x-text="note.typeLabel"
                                            ></span>
                                            <span class="text-xs text-gray-500 dark:text-gray-400" x-text="formatDate(note.createdAt)"></span>
                                        </div>
                                        <p class="text-sm text-gray-800 dark:text-white/90 line-clamp-2" x-text="note.text"></p>
                                        <template x-if="note.images && note.images.length > 0">
                                            <div class="mt-2 flex gap-1">
                                                <template x-for="img in note.images.slice(0, 3)" :key="img.id">
                                                    <img :src="img.fileUrl" :alt="img.caption || 'Image'" class="h-12 w-12 rounded object-cover border border-gray-200 dark:border-gray-700">
                                                </template>
                                                <template x-if="note.images.length > 3">
                                                    <div class="h-12 w-12 rounded bg-gray-100 dark:bg-gray-800 flex items-center justify-center border border-gray-200 dark:border-gray-700">
                                                        <span class="text-xs text-gray-500 dark:text-gray-400">+<span x-text="note.images.length - 3"></span></span>
                                                    </div>
                                                </template>
                                            </div>
                                        </template>
                                    </div>
                                    <div class="flex gap-1">
                                        <button
                                            @click="editNote(note)"
                                            class="rounded p-1 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300"
                                            title="Modifier"
                                        >
                                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        </button>
                                        <button
                                            @click="deleteNote(note.id)"
                                            class="rounded p-1 text-gray-400 hover:text-red-600 dark:hover:text-red-400"
                                            title="Supprimer"
                                        >
                                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>
                <div class="pt-4 border-t border-gray-200 dark:border-gray-800">
                    <button
                        @click="toggleEdit()"
                        class="w-full rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white transition-colors hover:bg-brand-600 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:ring-offset-2"
                    >
                        Modifier
                    </button>
                </div>
            </div>
        </template>

        <!-- Edit Mode -->
        <template x-if="editMode">
            <form @submit.prevent="saveStudent()" class="space-y-6">
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Prénom</label>
                    <input
                        type="text"
                        x-model="studentData.firstName"
                        required
                        class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                    />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Nom</label>
                    <input
                        type="text"
                        x-model="studentData.lastName"
                        required
                        class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                    />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Pseudo</label>
                    <input
                        type="text"
                        x-model="studentData.pseudo"
                        required
                        class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                    />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Classe</label>
                    <select
                        x-model="studentData.class"
                        class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                    >
                        <option value="">Sélectionner une classe</option>
                        <optgroup label="École primaire">
                            <option value="CP">CP</option>
                            <option value="CE1">CE1</option>
                            <option value="CE2">CE2</option>
                            <option value="CM1">CM1</option>
                            <option value="CM2">CM2</option>
                        </optgroup>
                        <optgroup label="Collège">
                            <option value="6ème">6ème</option>
                            <option value="5ème">5ème</option>
                            <option value="4ème">4ème</option>
                            <option value="3ème">3ème</option>
                        </optgroup>
                        <optgroup label="Lycée">
                            <option value="2nde">2nde</option>
                            <option value="1ère">1ère</option>
                            <option value="Terminale">Terminale</option>
                        </optgroup>
                    </select>
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Nom de l'établissement</label>
                    <input
                        type="text"
                        x-model="studentData.schoolName"
                        placeholder="Nom de l'établissement"
                        autocomplete="off"
                        class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                    />
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                        Tags des besoins
                    </label>
                    <select
                        id="student-tags-edit-select"
                        x-ref="studentTagsEditSelect"
                        multiple
                        class="w-full"
                    >
                    </select>
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        Tapez pour rechercher ou créer un nouveau tag
                    </p>
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Statut</label>
                    <div class="flex items-center justify-between rounded-lg border border-gray-200 bg-white px-4 py-3 dark:border-gray-700 dark:bg-gray-800">
                        <span class="text-sm text-gray-700 dark:text-gray-300">
                            <span x-show="studentData.isActive" class="text-green-600 dark:text-green-400 font-medium">Actif</span>
                            <span x-show="!studentData.isActive" class="text-red-600 dark:text-red-400 font-medium">Inactif</span>
                        </span>
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input
                                type="checkbox"
                                x-model="studentData.isActive"
                                class="sr-only peer"
                            />
                            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-brand-300 dark:peer-focus:ring-brand-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-brand-500"></div>
                        </label>
                    </div>
                </div>
                {% if app.user.isCoach() %}
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Spécialistes</label>
                    <div class="space-y-2 max-h-60 overflow-y-auto border border-gray-200 rounded-lg p-3 dark:border-gray-700">
                        {% for specialist in specialists %}
                            <label class="flex items-center space-x-2 cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-800 p-2 rounded">
                                <input
                                    type="checkbox"
                                    :value="{{ specialist.id }}"
                                    x-model="studentData.specialistIds"
                                    class="rounded border-gray-300 text-brand-500 focus:ring-brand-500 dark:border-gray-600 dark:bg-gray-800"
                                />
                                <span class="text-sm text-gray-700 dark:text-gray-300">{{ specialist.firstName }} {{ specialist.lastName }}</span>
                            </label>
                        {% endfor %}
                        {% if specialists|length == 0 %}
                            <p class="text-sm text-gray-500 dark:text-gray-400">Aucun spécialiste disponible</p>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
                <div class="pt-4 border-t border-gray-200 dark:border-gray-800 flex gap-3">
                    <button
                        type="button"
                        @click="toggleEdit()"
                        class="flex-1 rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 transition-colors hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:ring-offset-2 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
                    >
                        Annuler
                    </button>
                    <button
                        type="submit"
                        :disabled="isSaving"
                        class="flex-1 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white transition-colors hover:bg-brand-600 focus:outline-none focus:ring-2 focus:ring-brand-500 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed"
                    >
                        <span x-show="!isSaving">Enregistrer</span>
                        <span x-show="isSaving">Enregistrement...</span>
                    </button>
                </div>
            </form>
        </template>
    </div>

    <!-- Modal Note Form -->
    <div 
        x-show="noteFormOpen" 
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 z-50 flex items-center justify-center bg-black/50"
        @click.away="noteFormOpen = false"
        style="display: none;"
        x-cloak
    >
        <div 
            @click.stop
            class="w-full max-w-2xl max-h-[90vh] overflow-y-auto rounded-lg bg-white dark:bg-gray-800 shadow-xl"
        >
            <div class="sticky top-0 z-10 border-b border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 px-6 py-4">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white/90">
                        <span x-text="editingNote ? 'Modifier la note' : 'Nouvelle note'"></span>
                    </h3>
                    <button
                        @click="noteFormOpen = false"
                        class="rounded-lg p-2 text-gray-400 transition-colors hover:bg-gray-100 hover:text-gray-600 dark:hover:bg-gray-700 dark:hover:text-gray-300"
                    >
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
            <form @submit.prevent="saveNote()" class="p-6 space-y-4">
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Type *</label>
                    <select
                        x-model="noteForm.type"
                        required
                        class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                    >
                        <option value="draft">Brouillon</option>
                        <option value="assessment">Bilan</option>
                        <option value="remark">Remarque</option>
                        <option value="vigilance">Vigilance</option>
                    </select>
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Texte *</label>
                    <textarea
                        x-model="noteForm.text"
                        required
                        rows="5"
                        class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                        placeholder="Saisissez votre note..."
                    ></textarea>
                </div>
                <div>
                    <label class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">Images</label>
                    <input
                        type="file"
                        @change="handleNoteImagesSelect($event)"
                        multiple
                        accept="image/*"
                        class="w-full rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm text-gray-800 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-500/20 dark:border-gray-700 dark:bg-gray-800 dark:text-white/90"
                    />
                    <div class="mt-2 grid grid-cols-4 gap-2" x-show="noteForm.images.length > 0">
                        <template x-for="(img, index) in noteForm.images" :key="index">
                            <div class="relative">
                                <img :src="img.preview" :alt="img.caption || 'Image'" class="h-20 w-full rounded object-cover border border-gray-200 dark:border-gray-700">
                                <button
                                    type="button"
                                    @click="removeNoteImage(index)"
                                    class="absolute -top-2 -right-2 rounded-full bg-red-500 p-1 text-white hover:bg-red-600"
                                >
                                    <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                    </svg>
                                </button>
                            </div>
                        </template>
                    </div>
                </div>
                <div class="flex gap-3 pt-4 border-t border-gray-200 dark:border-gray-700">
                    <button
                        type="button"
                        @click="noteFormOpen = false"
                        class="flex-1 rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 transition-colors hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
                    >
                        Annuler
                    </button>
                    <button
                        type="submit"
                        :disabled="isSavingNote"
                        class="flex-1 rounded-lg bg-brand-500 px-4 py-2.5 text-sm font-medium text-white transition-colors hover:bg-brand-600 disabled:opacity-50 disabled:cursor-not-allowed"
                    >
                        <span x-show="!isSavingNote">Enregistrer</span>
                        <span x-show="isSavingNote">Enregistrement...</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
window.studentRightSheetManager = function(studentId, familyId) {
    return {
        studentId: studentId,
        familyId: familyId,
        editMode: false,
        isSaving: false,
        notes: [],
        noteFormOpen: false,
        editingNote: null,
        isSavingNote: false,
        noteForm: {
            type: 'draft',
            text: '',
            images: []
        },
        studentData: {
            firstName: {{ (student.firstName ?? '')|json_encode|raw }},
            lastName: {{ (student.lastName ?? '')|json_encode|raw }},
            pseudo: {{ (student.pseudo ?? '')|json_encode|raw }},
            class: {{ (student.class ?? '')|json_encode|raw }},
            schoolName: {{ (student.schoolName ?? '')|json_encode|raw }},
            isActive: {{ student.isActive ? 'true' : 'false' }},
            needTags: {{ (student.needTags ?? [])|json_encode|raw }},
            specialistIds: {{ student.specialists ? student.specialists|map(s => s.id)|json_encode|raw : '[]' }}
        },
        allTags: [],
        studentTagsEditChoicesInstance: null,
        async init() {
            await this.loadTags();
            await this.loadNotes();
            // S'assurer que les données sont bien initialisées
            if (!this.studentData.needTags) {
                this.studentData.needTags = [];
            }
            if (!this.studentData.specialistIds) {
                this.studentData.specialistIds = [];
            }
            // Ne pas initialiser Choices.js ici car editMode est false par défaut
            // Il sera initialisé quand on passera en mode édition
        },
        async loadNotes() {
            try {
                const response = await fetch(`/admin/students/${this.studentId}/notes`);
                const data = await response.json();
                if (data.success) {
                    this.notes = data.notes || [];
                }
            } catch (error) {
                console.error('Erreur lors du chargement des notes:', error);
            }
        },
        openNoteForm(note = null) {
            this.editingNote = note;
            if (note) {
                this.noteForm = {
                    type: note.type,
                    text: note.text,
                    images: note.images || []
                };
            } else {
                this.noteForm = {
                    type: 'draft',
                    text: '',
                    images: []
                };
            }
            this.noteFormOpen = true;
        },
        handleNoteImagesSelect(event) {
            const files = Array.from(event.target.files);
            files.forEach(file => {
                if (file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        const base64 = e.target.result.split(',')[1];
                        this.noteForm.images.push({
                            fileBase64: base64,
                            fileName: file.name,
                            preview: e.target.result,
                            caption: ''
                        });
                    };
                    reader.readAsDataURL(file);
                }
            });
        },
        removeNoteImage(index) {
            this.noteForm.images.splice(index, 1);
        },
        async saveNote() {
            if (this.isSavingNote) return;
            if (!this.noteForm.text || !this.noteForm.type) {
                this.showMessage('Veuillez remplir tous les champs obligatoires', 'error');
                return;
            }

            this.isSavingNote = true;

            const payload = {
                type: this.noteForm.type,
                text: this.noteForm.text,
                images: this.noteForm.images.map(img => ({
                    fileBase64: img.fileBase64,
                    fileName: img.fileName,
                    caption: img.caption || ''
                }))
            };

            try {
                const url = this.editingNote 
                    ? `/admin/notes/${this.editingNote.id}`
                    : `/admin/students/${this.studentId}/notes`;
                const method = this.editingNote ? 'PUT' : 'POST';

                const response = await fetch(url, {
                    method: method,
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest',
                    },
                    body: JSON.stringify(payload),
                });

                const data = await response.json();
                this.isSavingNote = false;

                if (data.success) {
                    this.showMessage('Note enregistrée avec succès', 'success');
                    this.noteFormOpen = false;
                    await this.loadNotes();
                } else {
                    this.showMessage(data.message || 'Erreur lors de l\'enregistrement', 'error');
                }
            } catch (error) {
                this.isSavingNote = false;
                console.error('Error:', error);
                this.showMessage('Erreur de connexion', 'error');
            }
        },
        editNote(note) {
            this.openNoteForm(note);
        },
        async deleteNote(noteId) {
            if (!confirm('Êtes-vous sûr de vouloir supprimer cette note ?')) {
                return;
            }

            try {
                const response = await fetch(`/admin/notes/${noteId}`, {
                    method: 'DELETE',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                    },
                });

                const data = await response.json();
                if (data.success) {
                    this.showMessage('Note supprimée avec succès', 'success');
                    await this.loadNotes();
                } else {
                    this.showMessage(data.message || 'Erreur lors de la suppression', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                this.showMessage('Erreur de connexion', 'error');
            }
        },
        formatDate(dateString) {
            if (!dateString) return '';
            const date = new Date(dateString);
            return date.toLocaleDateString('fr-FR', { day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit' });
        },
        async loadTags() {
            try {
                const response = await fetch('/admin/students/need-tags');
                const data = await response.json();
                if (data.success) {
                    this.allTags = data.tags || [];
                }
            } catch (error) {
                console.error('Erreur lors du chargement des tags:', error);
            }
        },
        initStudentTagsEditChoices() {
            if (typeof Choices === 'undefined') {
                const script = document.createElement('script');
                script.src = 'https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js';
                script.onload = () => {
                    setTimeout(() => {
                        this.initStudentTagsEditChoices();
                    }, 100);
                };
                document.head.appendChild(script);
                return;
            }

            if (this.studentTagsEditChoicesInstance) {
                try {
                    this.studentTagsEditChoicesInstance.destroy();
                } catch (e) {
                    console.warn('Erreur lors de la destruction:', e);
                }
                this.studentTagsEditChoicesInstance = null;
            }

            // Utiliser querySelector pour trouver l'élément car $refs peut ne pas être accessible
            let selectElement = null;
            
            // Essayer d'abord avec $refs
            if (this.$refs && this.$refs.studentTagsEditSelect) {
                selectElement = this.$refs.studentTagsEditSelect;
            } else if (this.$el) {
                // Sinon utiliser querySelector - chercher dans tout le conteneur
                selectElement = this.$el.querySelector('#student-tags-edit-select');
            }
            
            // Si toujours pas trouvé, chercher dans document
            if (!selectElement) {
                selectElement = document.querySelector('#student-tags-edit-select');
            }
            
            if (!selectElement) {
                // Limiter les tentatives pour éviter les boucles infinies
                if (!this._retryCount) this._retryCount = 0;
                if (this._retryCount < 10) {
                    this._retryCount++;
                    setTimeout(() => {
                        this.initStudentTagsEditChoices();
                    }, 150);
                } else {
                    console.error('Impossible de trouver l\'élément select après 10 tentatives');
                }
                return;
            }
            // Réinitialiser le compteur si on trouve l'élément
            this._retryCount = 0;

            const options = this.allTags.map(tag => ({
                value: tag,
                label: tag,
                selected: (this.studentData.needTags || []).includes(tag)
            }));

            this.studentTagsEditChoicesInstance = new Choices(selectElement, {
                removeItemButton: true,
                searchEnabled: true,
                searchChoices: true,
                addItems: true,
                editItems: false,
                duplicateItemsAllowed: false,
                placeholder: true,
                placeholderValue: 'Tapez pour rechercher ou créer un tag',
                searchPlaceholderValue: 'Rechercher ou créer un tag',
                noChoicesText: 'Tapez pour créer un nouveau tag',
                noResultsText: 'Appuyez sur Entrée pour créer ce tag',
                itemSelectText: '',
                addItemText: (value) => {
                    return `Appuyez sur Entrée pour ajouter <b>"${value}"</b>`;
                },
                addItemFilter: (value) => {
                    return value.trim().length > 0;
                },
            });

            this.studentTagsEditChoicesInstance.setChoices(options, 'value', 'label', true);

            if (this.studentData.needTags && this.studentData.needTags.length > 0) {
                this.studentTagsEditChoicesInstance.setChoiceByValue(this.studentData.needTags);
            }

            setTimeout(() => {
                const searchInput = this.studentTagsEditChoicesInstance.input?.element;
                if (searchInput) {
                    searchInput.addEventListener('keydown', (e) => {
                        if (e.key === 'Enter' && searchInput.value && searchInput.value.trim().length > 0) {
                            e.preventDefault();
                            e.stopPropagation();
                            
                            const newTag = searchInput.value.trim();
                            
                            if (!this.studentData.needTags || !this.studentData.needTags.includes(newTag)) {
                                if (!this.allTags.includes(newTag)) {
                                    this.allTags.push(newTag);
                                    this.allTags.sort();
                                }
                                
                                this.studentTagsEditChoicesInstance.setChoices(
                                    this.allTags.map(tag => ({ value: tag, label: tag })),
                                    'value',
                                    'label',
                                    true
                                );
                                
                                if (!this.studentData.needTags) {
                                    this.studentData.needTags = [];
                                }
                                this.studentData.needTags.push(newTag);
                                this.studentTagsEditChoicesInstance.setChoiceByValue(this.studentData.needTags);
                                searchInput.value = '';
                                this.$nextTick();
                            }
                        }
                    });
                }
            }, 200);

            selectElement.addEventListener('change', () => {
                const values = this.studentTagsEditChoicesInstance.getValue(true);
                this.studentData.needTags = values || [];
            });
        },
        toggleEdit() {
            if (this.editMode && this.studentTagsEditChoicesInstance) {
                try {
                    this.studentTagsEditChoicesInstance.destroy();
                } catch (e) {
                    console.warn('Erreur lors de la destruction de Choices.js:', e);
                }
                this.studentTagsEditChoicesInstance = null;
            }
            
            this.editMode = !this.editMode;
            
            if (this.editMode) {
                // Attendre que le template x-if soit rendu dans le DOM
                this.$nextTick(() => {
                    // Attendre que Alpine.js ait rendu le template
                    setTimeout(() => {
                        // Vérifier que l'élément existe avant d'initialiser
                        const checkElement = () => {
                            // Chercher dans $el d'abord
                            let select = null;
                            if (this.$el) {
                                select = this.$el.querySelector('#student-tags-edit-select');
                            }
                            // Si pas trouvé, chercher dans document (fallback)
                            if (!select) {
                                select = document.querySelector('#student-tags-edit-select');
                            }
                            
                            if (select) {
                                this.initStudentTagsEditChoices();
                            } else {
                                // Réessayer après un court délai (max 10 tentatives)
                                if (!this._checkCount) this._checkCount = 0;
                                if (this._checkCount < 10) {
                                    this._checkCount++;
                                    setTimeout(checkElement, 150);
                                } else {
                                    console.error('Impossible de trouver le select pour les tags après 10 tentatives');
                                }
                            }
                        };
                        checkElement();
                    }, 150);
                });
            }
        },
        toggleStudentStatus() {
            const newStatus = !this.studentData.isActive;
            this.studentData.isActive = newStatus;
            this.saveStudent();
        },
        async saveStudent() {
            if (this.isSaving) return;

            if (!this.studentData.firstName || !this.studentData.lastName || !this.studentData.pseudo) {
                this.showMessage('Veuillez remplir tous les champs obligatoires', 'error');
                return;
            }

            this.isSaving = true;

            const dataToSend = {
                firstName: this.studentData.firstName,
                lastName: this.studentData.lastName,
                pseudo: this.studentData.pseudo,
                class: this.studentData.class,
                schoolName: this.studentData.schoolName,
                needTags: this.studentData.needTags || [],
                isActive: this.studentData.isActive !== undefined ? this.studentData.isActive : true,
                specialistIds: this.studentData.specialistIds || []
            };

            try {
                const response = await fetch(`/admin/families/${this.familyId}/students/${this.studentId}/update`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest',
                    },
                    body: JSON.stringify(dataToSend),
                });

                const data = await response.json();
                this.isSaving = false;

                if (data.success) {
                    this.showMessage('Élève modifié avec succès', 'success');
                    this.editMode = false;
                    // Recharger le RightSheet avec les nouvelles données
                    setTimeout(() => {
                        window.location.reload();
                    }, 1000);
                } else {
                    this.showMessage(data.message || 'Erreur lors de l\'enregistrement', 'error');
                }
            } catch (error) {
                this.isSaving = false;
                console.error('Error:', error);
                this.showMessage('Erreur de connexion', 'error');
            }
        },
        closeSheet() {
            if (this.studentTagsEditChoicesInstance) {
                try {
                    this.studentTagsEditChoicesInstance.destroy();
                } catch (e) {
                    console.warn('Erreur lors de la destruction de Choices.js:', e);
                }
                this.studentTagsEditChoicesInstance = null;
            }
            // Fermer le right sheet parent
            const parentManager = Alpine.$data(document.querySelector('[x-data*="familyManager"]'));
            if (parentManager && parentManager.closeSheet) {
                parentManager.closeSheet();
            }
        },
        showMessage(message, type = 'info') {
            if (typeof window.showToast === 'function') {
                window.showToast(message, type);
                return;
            }
            const toastElement = document.querySelector('[x-data="toastManager()"]');
            if (toastElement?.__x?.$data) {
                toastElement.__x.$data.show(message, type);
            } else {
                window.dispatchEvent(new CustomEvent('show-toast', { 
                    detail: { message, type } 
                }));
            }
        }
    };
}
</script>

